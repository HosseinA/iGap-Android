    <android.support.percent.PercentRelativeLayout
        android:id="@+id/int_layout_0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_heightPercent="55%">

        <ImageView
            android:id="@+id/int_background_one"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/city"
            app:layout_heightPercent="85%"/>

        <ImageView
            android:id="@+id/int_background_two"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/city"
            app:layout_heightPercent="85%"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/sabz_land"
            app:layout_heightPercent="85%"/>
        <!--page 1-->
        <ImageView
            android:id="@+id/int_img_logo_introduce"
            android:layout_width="@dimen/dp70"
            android:layout_height="@dimen/dp100"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp4"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/logo"
            android:visibility="invisible"/>

        <!--page 1-->
        <!--page 2-->
        <ImageView
            android:id="@+id/int_img_security_introduce"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp88"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/secure"
            android:visibility="invisible"/>
        <!--page 2-->

        <!--page 3-->
        <ImageView
            android:id="@+id/int_img_chat_introduce"
            android:layout_width="@dimen/dp68"
            android:layout_height="@dimen/dp80"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/chat"
            android:visibility="invisible"/>

        <!--page 4-->
        <ImageView
            android:id="@+id/int_img_transfer_introduce"
            android:layout_width="@dimen/dp68"
            android:layout_height="@dimen/dp80"
            android:layout_alignLeft="@+id/int_img_security_introduce"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/int_img_security_introduce"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp12"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/transfer"
            android:visibility="invisible"/>

        <!--page 5-->
        <ImageView
            android:id="@+id/int_img_boy_introduce"
            android:layout_width="@dimen/dp110"
            android:layout_height="@dimen/dp140"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/boy"
            android:visibility="gone"/>

