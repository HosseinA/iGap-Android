    <RelativeLayout
        android:id="@+id/int_layoutParentCircleImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/int_layout_1"
        app:layout_heightPercent="8.5%">

      <net.iGap.module.CustomCircleImage
            android:id="@+id/int_circleButton_introduce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp28"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/int_viewPager_introduce"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/int_btnStart"
        android:layout_width="@dimen/dp200"
        android:layout_height="@dimen/dp28"
        android:layout_above="@+id/int_layoutParentCircleImage"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp8"
        android:background="@drawable/int_button_interduce"
        android:gravity="center"
        android:text="@string/btn_start_page5"
