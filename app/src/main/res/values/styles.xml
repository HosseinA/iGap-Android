<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/greenStatus</item>
        <item name="colorAccent">@color/green</item>
        <item name="md_medium_font">IRANSansMobile.ttf</item>
        <item name="md_regular_font">IRANSansMobile.ttf</item>
        <item name="fontFamily">@font/main_font</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowDisablePreview">true</item>-->
        <item name="android:windowBackground">@drawable/theme</item>
    </style>

    <style name="AppTheme.Widget" />

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="AppThemeTranslucent" parent="BaseTheme"/>

    <style name="ChatMessages.EmojiTextView" parent="ChatMessages">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dp16</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textDirection">firstStrong</item>
        <item name="android:layoutDirection">locale</item>
        <item name="emojiSize">@dimen/dp16</item>

        <item name="android:paddingLeft">@dimen/messageContainerPaddingLeftRight</item>
        <item name="android:paddingRight">@dimen/messageContainerPaddingLeftRight</item>
        <!-- <mList name="android:paddingTop">@dimen/messageContainerPadding</mList>  -->
    </style>

    <style name="MySearch" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:editTextColor">@color/black_register</item>
        <item name="android:textColorHint">@color/text_verify</item>
        <item name="colorAccent">@color/toolbar_background</item>
        <item name="android:tint">@color/border_editText</item>
        <item name="android:gravity">end|right</item>
        <item name="android:textColor">@color/text_verify</item>
    </style>

    <style name="ChatMessages" />

    <style name="ChatMessages.CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ChatMessages.MaterialDesignTextView" />

    <style name="ChatMessages.Time">
        <item name="android:textColor">@color/colorChatMessageTime</item>
        <item name="android:textSize">@dimen/dp10</item>
    </style>

    <style name="ChatMessages.MaterialDesignTextView.Tick">

    </style>

    <style name="ChatMessages.MaterialDesignTextView.BottomIcon">
        <item name="android:textSize">@dimen/dp22</item>
    </style>

    <style name="ChatMessages.MaterialDesignTextView.BottomIcon.SendBtn" parent="ChatMessages.MaterialDesignTextView.BottomIcon">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textColorHint">@color/red</item>
        <item name="android:textSize">@dimen/dp12</item>
    </style>

    <style name="remove_error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/hint_edit_text</item>
        <item name="android:textColorHint">@color/hint_edit_text</item>
        <item name="android:textSize">@dimen/dp12</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="TextIconAppearance.all" parent="android:TextAppearance">
        <item name="fontPath">fonts/iGap-Fontico.ttf</item>
        <item name="android:textSize">@dimen/dp22</item>
    </style>

    <style name="TextIconAppearance_toolbar" parent="android:TextAppearance">
        <item name="fontPath">fonts/iGap-Fontico.ttf</item>
        <item name="android:textSize">@dimen/dp22</item>
    </style>

    <style name="NotificationText" parent="android:TextAppearance.StatusBar.EventContent" />

    <style name="NotificationTitle" parent="android:TextAppearance.StatusBar.Title" />


    <style name="DialogAnimationUp">
        <item name="android:windowEnterAnimation">@anim/translate_enter_up</item>
        <item name="android:windowExitAnimation">@anim/translate_exit_up</item>
    </style>

    <style name="DialogAnimationDown">
        <item name="android:windowEnterAnimation">@anim/translate_enter_down</item>
        <item name="android:windowExitAnimation">@anim/translate_exit_down</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_exit_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_exit_out_left</item>
    </style>

    <style name="FileListerItemColor">
        <item name="android:textColor">#212121</item>
        <item name="android:tint">#4CAF50</item>
    </style>

    <!--custom theme-->

    <!--==================================Black==================================-->

    <!--setting-->
    <style name="background_setting_dark">
        <item name="android:background">@color/background_setting_dark</item>
    </style>

    <style name="dialog_dark">
        <item name="md_dark_theme">true</item>
    </style>


    <!--==================================Light==================================-->

    <style name="iGapEditTextStyle">
        <item name="android:textColorHint">?iGapHintTextColor</item>
        <item name="android:textColor">?iGapTitleTextColor</item>
    </style>

    <style name="iGapButtonStrokeLight" parent="BaseIGapStrokeButtonStyle">
        <item name="textColor">@color/buttonColor</item>
        <item name="strokeColor">@color/buttonColor</item>
    </style>

    <style name="iGapButtonStrokeDark" parent="BaseIGapStrokeButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/players_dark_background</item>
    </style>

    <style name="iGapButtonGrayLight" parent="BaseIGapGrayButtonStyle">
        <item name="backgroundTint">@color/buttonColor</item>
    </style>

    <style name="iGapKuknosLogoutLight" parent="BaseIGapButtonStyle">
        <item name="backgroundTint">@color/not_now_button_selected</item>
    </style>

    <style name="iGapKuknosLogoutDark" parent="BaseIGapButtonStyle">
        <item name="backgroundTint">@color/players_dark_background</item>
    </style>

    <style name="iGapButtonGrayDark" parent="BaseIGapGrayButtonStyle">
        <item name="backgroundTint">@color/unread_status</item>
    </style>


    <!--==================================Blue grey complete==================================-->

    <style name="page_background_BlueGreyComplete">
        <item name="android:background">#CFD8DC</item>
    </style>

    <style name="text_title_style_setting_BlueGreyComplete">
        <item name="android:textColor">#0d0d0d</item>
    </style>

    <style name="hint_style_setting_black">
        <item name="android:textColorHint">#757575</item>
        <item name="android:textColor">#212121</item>
    </style>


    <!--==================================indigo complete==================================-->

    <style name="page_background_indigoComplete">
        <item name="android:background">#C5CAE9</item>
    </style>


    <!--==================================Brown complete==================================-->

    <style name="page_background_BrownComplete">
        <item name="android:background">#D7CCC8</item>
    </style>

    <!--==================================Teal complete==================================-->

    <style name="page_background_TealComplete">
        <item name="android:background">#B2DFDB</item>
    </style>


    <!--==================================Grey complete==================================-->

    <style name="page_background_GreyComplete">
        <item name="android:background">#f5f5f5</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CardToCardBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="Widget.Design.TopSheet.Modal" parent="android:Widget">
        <item name="android:elevation">@dimen/dp8</item>
        <item name="android:background">@drawable/top_sheet_background</item>
        <!--<item name="behavior_peekHeight">@dimen/top_sheet_modal_peek_height</item>-->
        <item name="behavior_hideable">true</item>
    </style>

    <style name="BaseBottomSheetDialogLight" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetLight</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CardToCardBottomSheetDialogLight" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetLight</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheetLight" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_light_background</item>
    </style>

    <style name="Animation.Design.TopSheetDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/top_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/top_sheet_slide_out</item>
    </style>



    <style name="BaseIGapGrayButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@android:style/TextAppearance</item>
        <item name="cornerRadius">@dimen/dp8</item>
        <item name="android:textSize">@dimen/dp16</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/dialog_background</item>
    </style>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="baseFontIcon">
        <item name="fontPath">fonts/font_icon.ttf</item>
        <item name="android:fontFamily">@font/font_icon</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dp22</item>
    </style>

    <style name="myIconTextViewStyle" parent="baseFontIcon">
        <item name="android:textColor">?iGapTitleTextColor</item>
    </style>

    <style name="greenIconTextViewStyle" parent="baseFontIcon">
        <item name="android:textColor">?greenTextIconColor</item>
    </style>

    <style name="myIconTextViewStyleGray" parent="baseFontIcon">
        <item name="android:textColor">?iGapSubtitleTextColor</item>
    </style>

    <style name="myIconToolbarStyle" parent="baseFontIcon">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textButtonFontIcon" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontPath">fonts/font_icon.ttf</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dp22</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="chatAttachmentAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_enter_down</item>
        <item name="android:windowExitAnimation">@anim/translate_exit_down</item>
    </style>

    <style name="IGapRootViewStyle">
        <item name="android:background">?rootBackgroundColor</item>
        <item name="android:layoutDirection">locale</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="iGapEmojiChatStyle">
        <item name="android:textColor">?iGapTitleTextColor</item>
        <item name="android:textColorHint">?iGapHintTextColor</item>
        <item name="android:textSize">@dimen/dp22</item>
    </style>

    <style name="BaseIGapButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dp18</item>
        <item name="android:textSize">@dimen/dp16</item>
    </style>

    <style name="BaseIGapStrokeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@android:style/TextAppearance</item>
        <item name="cornerRadius">@dimen/dp18</item>
        <item name="android:textSize">@dimen/dp16</item>
        <item name="strokeWidth">@dimen/dp2</item>
    </style>

    <style name="iGapButton" parent="BaseIGapButtonStyle">
        <item name="backgroundTint">?iGapButtonColor</item>
    </style>

</resources>
