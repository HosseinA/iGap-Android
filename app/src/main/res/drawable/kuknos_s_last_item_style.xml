                    <solid android:color="@color/kuknos_dark_shade_green_spinner" />
                    <corners android:radius="50dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:right="@dimen/dp40"
                android:left="@dimen/dp40"
                android:top="5dp"
                android:bottom="5dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/buttonColor" />
                    <corners android:radius="50dp"/>
                    <!--<padding android:top="5dp"
                        android:bottom="5dp"/>-->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>