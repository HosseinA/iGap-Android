<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@id/expanded"
        motion:constraintSetEnd="@id/collapsed"
        >

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/scroll_content"
            motion:touchAnchorSide="top"/>

    </Transition>


    <ConstraintSet android:id="@+id/expanded">

        <Constraint
            android:id="@+id/toolbar_background"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp200"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent">
            <CustomAttribute
                motion:attributeName="imageAlpha"
                motion:customIntegerValue="255"
                />
        </Constraint>

        <Constraint
            android:id="@+id/toolbar_back"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_marginTop="@dimen/dp10"
            motion:layout_constraintTop_toTopOf="@id/toolbar_background"
            motion:layout_constraintStart_toStartOf="@id/toolbar_background"
            motion:layout_constraintBottom_toBottomOf="@id/toolbar_background"
            motion:layout_constraintEnd_toEndOf="@id/toolbar_background"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintVertical_bias="0"
            />

        <Constraint
            android:id="@+id/toolbar_avatar"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp100"
            android:layout_marginBottom="@dimen/dp10"
            motion:layout_constraintTop_toBottomOf="@id/toolbar_back"
            motion:layout_constraintBottom_toBottomOf="@id/toolbar_background"
            motion:layout_constraintStart_toStartOf="@id/toolbar_background"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20"
            />

        <Constraint
            android:id="@+id/toolbar_txtLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/toolbar_avatar"
            motion:layout_constraintStart_toEndOf="@id/toolbar_avatar"
            motion:layout_constraintTop_toTopOf="@id/toolbar_avatar"
            motion:layout_constraintEnd_toEndOf="@id/toolbar_background"
            />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">

        <Constraint
            android:id="@+id/toolbar_background"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp60"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent">
            <CustomAttribute
                motion:attributeName="imageAlpha"
                motion:customIntegerValue="190"
                />
        </Constraint>

        <Constraint
            android:id="@+id/toolbar_back"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_marginTop="0dp"
            motion:layout_constraintTop_toTopOf="@id/toolbar_background"
            motion:layout_constraintStart_toStartOf="@id/toolbar_background"
            motion:layout_constraintBottom_toBottomOf="@id/toolbar_background"
            motion:layout_constraintEnd_toEndOf="@id/toolbar_background"
            motion:layout_constraintHorizontal_bias="0"
            />

        <Constraint
            android:id="@+id/toolbar_avatar"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            motion:layout_constraintTop_toTopOf="@id/toolbar_background"
            motion:layout_constraintBottom_toBottomOf="@id/toolbar_background"
            motion:layout_constraintStart_toEndOf="@id/toolbar_back"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_marginStart="@dimen/dp6"
            android:layout_marginBottom="0dp"
            />


        <Constraint
            android:id="@+id/toolbar_txtLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/toolbar_avatar"
            motion:layout_constraintStart_toEndOf="@id/toolbar_avatar"
            motion:layout_constraintTop_toTopOf="@id/toolbar_avatar"
            motion:layout_constraintEnd_toStartOf="@id/layout_buttons"
            />

    </ConstraintSet>

</MotionScene>