<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@id/expanded"
        motion:constraintSetEnd="@id/collapsed"
        motion:motionInterpolator="linear"
        motion:duration="1000">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/apc_scroll_content"
            motion:touchAnchorSide="top"/>

    </Transition>

    <ConstraintSet android:id="@+id/expanded">

        <Constraint
            android:id="@+id/at_bg"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp200"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent">
            <CustomAttribute
                motion:attributeName="imageAlpha"
                motion:customIntegerValue="255"
                />
        </Constraint>
        
        <Constraint
            android:id="@+id/at_back"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_marginTop="@dimen/dp10"
            motion:layout_constraintTop_toTopOf="@id/at_bg"
            motion:layout_constraintStart_toStartOf="@id/at_bg"
            motion:layout_constraintBottom_toBottomOf="@id/at_bg"
            motion:layout_constraintEnd_toEndOf="@id/at_bg"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintVertical_bias="0"
            />
        
        <Constraint
            android:id="@+id/at_avatar"
            android:layout_width="@dimen/dp120"
            android:layout_height="@dimen/dp120"
            android:layout_marginBottom="@dimen/dp10"
            motion:layout_constraintTop_toBottomOf="@id/at_back"
            motion:layout_constraintBottom_toBottomOf="@id/at_bg"
            motion:layout_constraintStart_toStartOf="@id/at_bg"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20"
            />
        
        <Constraint
            android:id="@+id/at_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:translationX="0dp"
            android:layout_marginTop="@dimen/dp16"
            motion:layout_constraintVertical_chainStyle="packed"
            motion:layout_constraintBottom_toTopOf="@id/at_status"
            motion:layout_constraintStart_toEndOf="@id/at_avatar"
            motion:layout_constraintTop_toTopOf="@id/at_avatar"
            />
        
        <Constraint
            android:id="@+id/at_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:translationX="0dp"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="0dp"
            motion:layout_constraintVertical_chainStyle="packed"
            motion:layout_constraintStart_toStartOf="@id/at_name"
            motion:layout_constraintTop_toBottomOf="@id/at_name"
            motion:layout_constraintBottom_toBottomOf="@id/at_avatar"
            />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">

        <Constraint
            android:id="@+id/at_bg"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp60"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent">
            <CustomAttribute
                motion:attributeName="imageAlpha"
                motion:customIntegerValue="190"
                />
        </Constraint>

        <Constraint
            android:id="@+id/at_back"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_marginTop="0dp"
            motion:layout_constraintTop_toTopOf="@id/at_bg"
            motion:layout_constraintStart_toStartOf="@id/at_bg"
            motion:layout_constraintBottom_toBottomOf="@id/at_bg"
            motion:layout_constraintEnd_toEndOf="@id/at_bg"
            motion:layout_constraintHorizontal_bias="0"
            />

        <Constraint
            android:id="@+id/at_avatar"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            motion:layout_constraintTop_toTopOf="@id/at_bg"
            motion:layout_constraintBottom_toBottomOf="@id/at_bg"
            motion:layout_constraintStart_toEndOf="@id/at_back"
            motion:layout_constraintEnd_toStartOf="@id/at_name"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_marginStart="@dimen/dp6"
            android:layout_marginBottom="0dp"
            />


        <Constraint
            android:id="@+id/at_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.625"
            android:scaleY="0.625"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp20"
            motion:layout_constraintVertical_chainStyle="packed"
            motion:layout_constraintBottom_toTopOf="@id/at_status"
            motion:layout_constraintStart_toEndOf="@id/at_avatar"
            motion:layout_constraintTop_toTopOf="@id/at_avatar"
            />

        <Constraint
            android:id="@+id/at_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.625"
            android:scaleY="0.625"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="0dp"
            motion:layout_constraintVertical_chainStyle="packed"
            motion:layout_constraintStart_toStartOf="@id/at_name"
            motion:layout_constraintTop_toBottomOf="@id/at_name"
            motion:layout_constraintBottom_toBottomOf="@id/at_avatar"

            />

    </ConstraintSet>

</MotionScene>