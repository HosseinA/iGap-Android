<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/chatSubLayoutAudio"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="@dimen/dp4"
             android:maxWidth="@dimen/chatBoxMaxWidth">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <com.iGap.module.CircleImageView
            android:id="@+id/messageSenderAvatar"
            android:layout_width="@dimen/dp52"
            android:layout_height="@dimen/dp52"
            android:layout_marginRight="@dimen/dp8"
            android:src="@mipmap/empty"/>

        <android.support.v7.widget.CardView
            android:id="@+id/contentContainer"
            style="@style/ChatMessages.CardView"
            android:layout_width="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/replayLayout"
                    layout="@layout/chat_sub_layout_reply"/>

                <include
                    android:id="@+id/cslr_ll_forward"
                    layout="@layout/chat_sub_layout_forward"/>

                <LinearLayout
                    android:id="@+id/audioBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="ltr"
                    android:minHeight="115dp"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/messageContainerPaddingBottom"
                    android:paddingLeft="@dimen/messageContainerPaddingLeftRight"
                    android:paddingRight="@dimen/messageContainerPaddingLeftRight"
                    android:paddingTop="@dimen/messageContainerPadding">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/thumbnail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/green_music_note"
                                app:riv_corner_radius="@dimen/messageBox_cornerRadius"/>

                            <include
                                android:id="@+id/progress"
                                layout="@layout/msg_progress_item"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/fileSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:maxLines="1"
                            android:text="3.2 mb"
                            android:textAllCaps="true"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp8"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="middle"
                                android:maxLines="1"
                                android:text="file_name.ext"
                                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/sp14"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/songArtist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="Artist"
                                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                android:textColor="@color/gray10"/>

                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/audioPlayerViewContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <io.github.meness.emoji.EmojiTextView
                        android:id="@+id/messageText"
                        style="@style/ChatMessages.EmojiTextView"
                        android:text="SAMPLE TEXT"/>

                </LinearLayout>

                <include layout="@layout/chat_sub_layout_messages_time"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>