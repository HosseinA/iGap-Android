<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/chatSubLayoutAudio"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="@dimen/dp4"
             android:maxWidth="@dimen/chatBoxMaxWidth">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <com.iGap.module.CircleImageView
            android:id="@+id/messageSenderAvatar"
            android:layout_width="@dimen/dp52"
            android:layout_height="@dimen/dp52"
            android:layout_marginRight="@dimen/dp8"
            android:src="@mipmap/empty"/>

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_round_white"
            android:orientation="vertical"
            android:padding="@dimen/messageContainerPadding">

            <include
                android:id="@+id/replayLayout"
                layout="@layout/chat_sub_layout_replay"/>

            <include
                android:id="@+id/cslr_ll_forward"
                layout="@layout/chat_sub_layout_forward"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:minHeight="120dp"
                android:minWidth="@dimen/dp140"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="@dimen/dp88"
                        android:layout_height="@dimen/dp88">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/thumbnail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/green_music_note"
                            app:riv_corner_radius="@dimen/chatMessageImageCorner"/>

                        <include
                            android:id="@+id/progress"
                            layout="@layout/msg_progress_item"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/fileSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:text="3.2 mb"
                        android:textAllCaps="true"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="middle"
                            android:maxLines="1"
                            android:text="file_name.ext"
                            android:textAllCaps="true"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/songArtist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Artist"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                            android:textColor="@color/gray10"/>

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/audioPlayerViewContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <io.github.meness.emoji.EmojiTextView
                android:id="@+id/messageText"
                style="@style/ChatMessages.EmojiTextView"
                android:layout_marginTop="@dimen/dp20"
                android:text="SAMPLE TEXT"/>

            <include layout="@layout/chat_sub_layout_messages_time"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>