<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/chatSubLayoutVideoWithText"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="@dimen/dp4"
             android:maxWidth="@dimen/chatBoxMaxWidth"
             android:textDirection="firstStrong">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <com.iGap.module.CircleImageView
            android:id="@+id/messageSenderAvatar"
            android:layout_width="@dimen/dp52"
            android:layout_height="@dimen/dp52"
            android:layout_marginRight="@dimen/dp8"
            android:src="@mipmap/empty"/>

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_round_white"
            android:orientation="vertical"
            android:padding="4.5dp">

            <include
                android:id="@+id/replayLayout"
                layout="@layout/chat_sub_layout_replay" />

            <include
                android:id="@+id/cslr_ll_forward"
                layout="@layout/chat_sub_layout_forward" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="@dimen/chatMessageImageCorner" />

                <TextView

                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp4"
                    android:maxLines="1"
                    android:background="@drawable/bg_message_image_time"
                    android:layout_gravity="left|top"
                    android:text="3:48 (4.5 MB)"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:textAllCaps="true"
                    android:textColor="@color/gray10"
                    android:textSize="@dimen/sp14"/>

                <include
                    android:id="@+id/progress"
                    layout="@layout/msg_progress_item"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center" />

            </FrameLayout>

            <io.github.meness.emoji.EmojiTextView
                android:id="@+id/messageText"
                android:layout_marginTop="4dp"
                style="@style/ChatMessages.EmojiTextView"
                android:text="SAMPLE TEXT"/>

            <include layout="@layout/chat_sub_layout_messages_time" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>