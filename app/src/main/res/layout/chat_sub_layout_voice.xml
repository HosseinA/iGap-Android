<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/chatSubLayoutVoice"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="@dimen/dp4"
             android:maxWidth="@dimen/chatBoxMaxWidth"
             android:textDirection="firstStrong">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <com.iGap.module.CircleImageView
            android:id="@+id/messageSenderAvatar"
            android:layout_width="@dimen/dp52"
            android:layout_height="@dimen/dp52"
            android:layout_marginRight="@dimen/dp8"
            android:src="@mipmap/empty"/>

        <android.support.v7.widget.CardView
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            style="@style/ChatMessages.CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/replayLayout"
                    layout="@layout/chat_sub_layout_replay"/>

                <include
                    android:id="@+id/cslr_ll_forward"
                    layout="@layout/chat_sub_layout_forward"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/thumbnail"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_gravity="center"
                            android:src="@drawable/microphone_icon"/>

                        <include
                            android:id="@+id/progress"
                            layout="@layout/msg_progress_item"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/audioPlayerViewContainer"
                        android:layout_width="match_parent"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content">

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/messageContainerPaddingBottom"
                    android:paddingLeft="@dimen/messageContainerPaddingLeftRight"
                    android:paddingRight="@dimen/messageContainerPaddingLeftRight"
                    android:paddingTop="@dimen/messageContainerPadding"
                    >

                    <include layout="@layout/chat_sub_layout_messages_time"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>