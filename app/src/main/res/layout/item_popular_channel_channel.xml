<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item_pop_rows"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp6"
    android:background="@drawable/shape_popular_channel_dark"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_popular_title"
        style="?textTitleColorSettingTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_margin="@dimen/dp2"
        android:fontFamily="@font/main_font"
        android:textSize="@dimen/smallTextSize" />

    <RelativeLayout
        android:id="@+id/rl_item_pop_rows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_popular_channel_all">

        <FrameLayout
            android:id="@+id/frame_more_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_item_popular_more"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp2"
                android:layout_marginEnd="@dimen/dp2"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_more_popular_channel" />
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_item_popular_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/dp4"
            android:layout_toStartOf="@+id/frame_more_one"
            android:orientation="horizontal" />

    </RelativeLayout>
</LinearLayout>