<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="net.iGap.G" />

        <variable
            name="viewModel"
            type="net.iGap.igasht.locationdetail.buyticket.IGashtEnterTicketCountBottomViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/lineViewTop"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@{G.isDarkTheme ? @drawable/bottom_sheet_dialog_line_dark : @drawable/bottom_sheet_dialog_line , default = @drawable/bottom_sheet_dialog_line}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".34" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ticketCount"
            style="?hintColorSettingTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            android:hint="@string/igasht_enter_ticket_count_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lineViewTop"
            app:layout_constraintWidth_percent=".9">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ticketCountEditText"
                style="?textTitleColorSettingTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/standardTextSize" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.button.MaterialButton
            style="?iGapButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginBottom="@dimen/dp8"
            android:onClick="@{()->viewModel.onSubmitTicketCountClick(ticketCountEditText.getEditableText().toString())}"
            android:text="@string/igasht_add_ticket_count_button_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ticketCount"
            app:layout_constraintWidth_percent=".8" />

    </android.support.constraint.ConstraintLayout>

</layout>