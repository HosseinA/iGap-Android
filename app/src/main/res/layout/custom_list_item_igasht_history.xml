<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp8">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/barCode"
        style="@style/myIconTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_igasht_yellow"
        android:gravity="center"
        android:text="@string/scan_qr_code_icon"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".1" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/itemDate"
        style="?textTitleColorSettingTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/standardTextSize"
        app:layout_constraintBottom_toTopOf="@id/itemDetail"
        app:layout_constraintEnd_toStartOf="@id/barCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/itemDetail"
        style="?textTitleColorSettingTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/largeTextSize"
        app:layout_constraintEnd_toEndOf="@id/itemDate"
        app:layout_constraintStart_toStartOf="@id/itemDate"
        app:layout_constraintTop_toBottomOf="@id/itemDate" />

</android.support.constraint.ConstraintLayout>