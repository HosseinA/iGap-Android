<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <import type="android.view.View" />

    <import type="android.graphics.Color" />

    <import type="net.iGap.G" />

    <variable
      name="fragmentThemColorViewModel"
      type="net.iGap.viewmodel.FragmentThemColorViewModel" />
  </data>

  <LinearLayout
    android:id="@+id/rootFragmentLanguage"
    style="?backgroundColorSettingTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    tools:context="net.iGap.fragments.FragmentLanguage"
    tools:ignore="MissingPrefix">

    <android.support.design.widget.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <android.support.v7.widget.Toolbar
        android:id="@+id/asn_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="@{Color.parseColor(G.appBarColor),default=@color/toolbar_background}"
        android:layoutDirection="ltr"
        android:padding="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

          <net.iGap.libs.rippleeffect.RippleView
            android:id="@+id/stns_ripple_back"
            rv_centered="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rv_alpha="200"
            app:rv_centered="true"
            app:rv_rippleDuration="0"
            app:rv_ripplePadding="5dp">

            <net.iGap.module.MaterialDesignTextView
              android:id="@+id/stns_txt_back"
              android:layout_width="@dimen/dp52"
              android:layout_height="match_parent"
              android:gravity="center"
              android:text="@string/md_back_arrow"
              android:textAppearance="@style/TextIconAppearance_toolbar"
              android:textColor="@color/whit_background" />
          </net.iGap.libs.rippleeffect.RippleView>

          <TextView
            fontPath="fonts/IRANSansMobile_Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/stns_ripple_back"
            android:layout_toRightOf="@+id/stns_ripple_back"
            android:gravity="center"
            android:text="@string/app_theme"
            android:textColor="@color/whit_background"
            android:textSize="@dimen/dp18"
            android:textStyle="normal"
            android:visibility="visible" />

        </RelativeLayout>
      </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:onClick="@{fragmentThemColorViewModel::onClickThemCustom}"
          android:orientation="horizontal">


          <TextView
            style="?textTitleColorSettingTheme"
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp48"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:paddingTop="@dimen/dp4"
            android:text="Custom"
            android:textSize="@dimen/dp15"
            android:textStyle="normal" />

          <ImageView
            android:id="@+id/theme_custom_1"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/circle_color_notificatin_setting"
            android:gravity="center" />

          <ImageView
            android:id="@+id/theme_custom_2"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_color_notificatin_setting"
            android:gravity="center" />

          <ImageView
            android:id="@+id/theme_custom_3"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/circle_color_notificatin_setting"
            android:gravity="center" />


        </LinearLayout>

        <View
          style="?lineColorSettingTheme"
          android:layout_width="match_parent"
          android:layout_height="1dp" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:onClick="@{fragmentThemColorViewModel::onClickThemeDark}"
          android:orientation="horizontal">


          <TextView
            style="?textTitleColorSettingTheme"
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp48"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:paddingTop="@dimen/dp4"
            android:text="Dark"
            android:textSize="@dimen/dp15"
            android:textStyle="normal" />

          <ImageView
            android:id="@+id/theme_dark_1"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/circle_color_notificatin_setting"
            android:gravity="center" />

          <ImageView
            android:id="@+id/theme_dark_2"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_color_notificatin_setting"
            android:gravity="center" />

          <ImageView
            android:id="@+id/theme_dark_3"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/circle_color_notificatin_setting"
            android:gravity="center" />


        </LinearLayout>

        <View
          style="?lineColorSettingTheme"
          android:layout_width="match_parent"
          android:layout_height="1dp" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:onClick="@{fragmentThemColorViewModel::onClickThemeRed}"
          android:orientation="horizontal">


          <TextView
            style="?textTitleColorSettingTheme"
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp48"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:paddingTop="@dimen/dp4"
            android:text="Red"
            android:textSize="@dimen/dp15"
            android:textStyle="normal" />

          <ImageView
            android:id="@+id/theme_red_1"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/circle_color_notificatin_setting"
            android:gravity="center" />

          <ImageView
            android:id="@+id/theme_red_2"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_color_notificatin_setting"
            android:gravity="center" />

          <ImageView
            android:id="@+id/theme_red_3"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/circle_color_notificatin_setting"
            android:gravity="center" />
        </LinearLayout>

        <View
          style="?lineColorSettingTheme"
          android:layout_width="match_parent"
          android:layout_height="1dp" />


        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:onClick="@{fragmentThemColorViewModel::onClickThemePink}"
          android:orientation="horizontal">


          <TextView
            style="?textTitleColorSettingTheme"
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp48"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:paddingTop="@dimen/dp4"
            android:text="Pink"
            android:textSize="@dimen/dp15"
            android:textStyle="normal" />

          <ImageView
            android:id="@+id/theme_pink_1"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/circle_color_notificatin_setting"
            android:gravity="center" />

          <ImageView
            android:id="@+id/theme_pink_2"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_color_notificatin_setting"
            android:gravity="center" />

          <ImageView
            android:id="@+id/theme_pink_3"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/circle_color_notificatin_setting"
            android:gravity="center" />
        </LinearLayout>

        <View
          style="?lineColorSettingTheme"
          android:layout_width="match_parent"
          android:layout_height="1dp" />

      </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

  </LinearLayout>
</layout>