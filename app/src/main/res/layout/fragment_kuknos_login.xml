<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="net.iGap.kuknos.viewmodel.KuknosLoginVM" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragKuknosLoginContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="?backgroundColorSettingTheme">

        <!-- TODO clean min height-->

        <LinearLayout
            android:id="@+id/fragKuknosIdToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:minHeight="48dp"
            android:background="@color/sky_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragKuknosIdToolbar">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatTextView
                    style="?textTitleColorSettingTheme"
                    android:id="@+id/fragKuknosIdMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/kuknos_login_messge_str"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.7" />

                <android.support.design.widget.TextInputLayout
                    style="?textTitleColorSettingTheme"
                    android:id="@+id/fragKuknosIdUserNumHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosIdMessage"
                    app:layout_constraintWidth_percent="0.7">
                    <android.support.v7.widget.AppCompatEditText
                        style="?textTitleColorSettingTheme"
                        android:id="@+id/fragKuknosIdUserNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:ems="10"
                        android:enabled="false"
                        android:hint="@string/kuknos_login_tel_str"
                        android:text="@={viewmodel.userNum}"
                        android:textSize="22dp"
                        android:gravity="center"
                        android:inputType="numberDecimal" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="?textTitleColorSettingTheme"
                    android:id="@+id/fragKuknosIdUserIDHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosIdUserNumHolder"
                    app:layout_constraintWidth_percent="0.7">
                    <android.support.v7.widget.AppCompatEditText
                        style="?textTitleColorSettingTheme"
                        android:id="@+id/fragKuknosIdUserID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:maxLines="1"
                        android:maxLength="10"
                        android:minHeight="48dp"
                        android:ems="10"
                        android:hint="@string/kuknos_login_id_str"
                        android:text="@={viewmodel.ID}"
                        android:textSize="22dp"
                        android:gravity="center"
                        android:inputType="numberDecimal" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.button.MaterialButton
                    style="?iGapButton"
                    android:id="@+id/fragKuknosIdSubmit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:minHeight="58dp"
                    android:text="@string/kuknos_login_submit_str"
                    android:textSize="18dp"
                    android:onClick="@{()->viewmodel.onSubmit()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosIdUserIDHolder"
                    app:layout_constraintWidth_percent="0.5"/>

                <ProgressBar
                    android:id="@+id/fragKuknosLProgressV"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:elevation="2dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@+id/fragKuknosIdSubmit"
                    app:layout_constraintStart_toStartOf="@+id/fragKuknosIdSubmit"
                    app:layout_constraintEnd_toEndOf="@+id/fragKuknosIdSubmit"
                    app:layout_constraintBottom_toBottomOf="@+id/fragKuknosIdSubmit"
                    app:layout_constraintHorizontal_bias="0.05"
                    app:layout_constraintHeight_percent="0.1"/>

            </android.support.constraint.ConstraintLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>
</layout>