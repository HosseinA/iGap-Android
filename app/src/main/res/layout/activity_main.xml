<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    >

  <RelativeLayout
      android:id="@+id/fragmentContainer"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <include layout="@layout/activity_main_rooms" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <com.gigamole.navigationtabstrip.NavigationTabStrip
          android:id="@+id/nts"
          android:layout_width="wrap_content"
          android:background="@color/colorEmojiPopupCategoryBottomBorder"
          android:layout_height="@dimen/dp52"
          app:nts_active_color="@color/iGapColor"
          app:nts_animation_duration="300"
          app:nts_color="#000"
          app:nts_corners_radius="1.5dp"
          app:nts_factor="1.5"
          app:nts_gravity="bottom"
          app:nts_inactive_color="@color/gray"
          app:nts_type="point"
          app:nts_typeface="fonts/MaterialIcons-Regular.ttf"
          app:nts_weight="3dp"
          tools:ignore="MissingConstraints"
          tools:layout_editor_absoluteX="8dp"
          tools:layout_editor_absoluteY="0dp"
          />

      <android.support.v4.view.ViewPager
          android:id="@+id/viewpager"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:background="@color/white"
          />

    </LinearLayout>


    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/loadingContent"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"
        />
  </RelativeLayout>

  <android.support.design.widget.NavigationView
      android:id="@+id/nav_view"
      android:layout_width="@dimen/dp280"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      android:fitsSystemWindows="false"
      >

    <include layout="@layout/layout_menu" />

  </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>