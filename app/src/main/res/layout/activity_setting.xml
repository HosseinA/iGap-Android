<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:id="@+id/st_layoutParent"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 tools:ignore="MissingPrefix">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/st_appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp140"
        android:background="@color/toolbar_background"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/toolbar_background"
            app:expandedTitleMarginBottom="32dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:layoutDirection="ltr"
                app:layout_collapseMode="pin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/st_txt_titleToolbar"
                        fontPath="fonts/IRANSansMobile.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/st_titleToolbar"
                        android:textColor="@color/whit_background"
                        android:textSize="@dimen/sp18"
                        android:textStyle="bold"
                        android:visibility="gone"/>

                    <com.iGap.libs.rippleeffect.RippleView
                        android:id="@+id/st_ripple_back"
                        rv_centered="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rv_alpha="200"
                        app:rv_centered="true"
                        app:rv_rippleDuration="150"
                        app:rv_ripplePadding="5dp">

                        <com.iGap.module.MaterialDesignTextView
                            fontPath="fonts/Flaticon.ttf"
                            android:layout_width="@dimen/dp52"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/md_back_arrow"
                            android:textColor="@color/whit_background"
                            android:textSize="@dimen/sp18"/>
                    </com.iGap.libs.rippleeffect.RippleView>

                    <com.iGap.libs.rippleeffect.RippleView
                        android:id="@+id/st_ripple_more"
                        rv_centered="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        app:rv_alpha="200"
                        app:rv_centered="true"
                        app:rv_rippleDuration="150"
                        app:rv_ripplePadding="5dp">

                        <com.iGap.module.MaterialDesignTextView
                            fontPath="fonts/Flaticon.ttf"
                            android:layout_width="@dimen/dp52"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/md_show_more_button"
                            android:textColor="@color/whit_background"
                            android:textSize="@dimen/sp18"/>

                    </com.iGap.libs.rippleeffect.RippleView>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:id="@+id/st_parentLayoutCircleImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp8"
                app:layout_collapseMode="parallax">

                <com.iGap.libs.rippleeffect.RippleView
                    android:id="@+id/st_ripple_circleImage"
                    rv_centered="true"
                    android:layout_width="@dimen/dp88"
                    android:layout_height="@dimen/dp88"
                    app:rv_alpha="210"
                    app:rv_centered="true"
                    app:rv_rippleDuration="150"
                    app:rv_ripplePadding="0dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/st_img_circleImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@mipmap/empty"/>
                </com.iGap.libs.rippleeffect.RippleView>

                <TextView
                    android:id="@+id/ac_txt_nickname_title"
                    fontPath="fonts/IRANSansMobile.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp4"
                    android:text="AM"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"/>

            </LinearLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp4"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                android:paddingTop="@dimen/dp8"
                android:visibility="visible">

                <TextView
                    fontPath="fonts/IRANSansMobile_Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp16"
                    android:paddingTop="@dimen/dp12"
                    android:text="@string/st_Info"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/st_layout_nickname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".48"
                        android:orientation="vertical">


                        <TextView
                            fontPath="fonts/IRANSansMobile.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/dp4"
                            android:paddingStart="@dimen/dp4"
                            android:text="@string/st_nickname"
                            android:textColor="@color/black_register"
                            android:textSize="@dimen/sp15"
                            android:textStyle="normal"/>

                        <TextView
                            android:id="@+id/st_txt_nikName"
                            fontPath="fonts/IRANSansMobile.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp28"
                            android:gravity="center_vertical"
                            android:maxLength="25"
                            android:paddingEnd="@dimen/dp4"
                            android:paddingStart="@dimen/dp4"
                            android:singleLine="true"
                            android:text="Alexander Smith"
                            android:textColor="@color/gray_5c"
                            android:textSize="@dimen/sp14"
                            android:theme="@style/Setting_editText"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".04"
                        android:orientation="vertical"/>

                    <LinearLayout
                        android:id="@+id/st_layout_gander"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".48"
                        android:orientation="vertical">


                        <TextView
                            fontPath="fonts/IRANSansMobile.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/dp4"
                            android:paddingStart="@dimen/dp4"
                            android:text="@string/st_Gander"
                            android:textColor="@color/black_register"
                            android:textSize="@dimen/sp15"
                            android:textStyle="normal"/>

                        <TextView
                            android:id="@+id/st_txt_gander"
                            fontPath="fonts/IRANSansMobile.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp28"
                            android:gravity="center_vertical"
                            android:maxLength="25"
                            android:paddingEnd="@dimen/dp4"
                            android:paddingStart="@dimen/dp4"
                            android:text="unknown"
                            android:textColor="@color/gray_5c"
                            android:textSize="@dimen/sp14"
                            android:theme="@style/Setting_editText"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/st_layout_username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".48"
                        android:orientation="vertical">

                        <TextView
                            fontPath="fonts/IRANSansMobile.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp12"
                            android:paddingEnd="@dimen/dp4"
                            android:paddingStart="@dimen/dp4"
                            android:text="@string/st_username"
                            android:textColor="@color/black_register"
                            android:textSize="@dimen/sp15"
                            android:textStyle="normal"/>

                        <TextView
                            android:id="@+id/st_txt_userName"
                            fontPath="fonts/IRANSansMobile.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp28"
                            android:gravity="center_vertical"
                            android:maxLength="25"
                            android:paddingEnd="@dimen/dp4"
                            android:paddingStart="@dimen/dp4"
                            android:singleLine="true"
                            android:text="Alexander Smith:"
                            android:textColor="@color/gray_5c"
                            android:textSize="@dimen/sp14"
                            android:theme="@style/Setting_editText"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".04"
                        android:orientation="vertical"/>

                    <LinearLayout
                        android:id="@+id/st_layout_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".48"
                        android:orientation="vertical">

                        <TextView
                            fontPath="fonts/IRANSansMobile.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp12"
                            android:paddingEnd="@dimen/dp4"
                            android:paddingStart="@dimen/dp4"
                            android:text="@string/st_email"
                            android:textColor="@color/black_register"
                            android:textSize="@dimen/sp15"
                            android:textStyle="normal"/>

                        <TextView
                            android:id="@+id/st_txt_email"
                            fontPath="fonts/IRANSansMobile.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp28"
                            android:gravity="center_vertical"
                            android:maxLength="25"
                            android:paddingEnd="@dimen/dp4"
                            android:paddingStart="@dimen/dp4"
                            android:singleLine="true"
                            android:text="example@Gmail.com"
                            android:textColor="@color/gray_5c"
                            android:textSize="@dimen/sp14"
                            android:theme="@style/Setting_editText"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    fontPath="fonts/IRANSansMobile.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp12"
                    android:paddingEnd="@dimen/dp4"
                    android:paddingStart="@dimen/dp4"
                    android:text="@string/st_phoneNumber"
                    android:textColor="@color/black_register"
                    android:textSize="@dimen/sp15"
                    android:textStyle="normal"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">


                    <TextView
                        android:id="@+id/st_txt_phoneNumber"
                        fontPath="fonts/IRANSansMobile.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/dp4"
                        android:paddingStart="@dimen/dp4"
                        android:text="09121234567"
                        android:textColor="@color/gray_5c"
                        android:textSize="@dimen/sp14"
                        android:textStyle="normal"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:background="@color/st_background2"
                android:orientation="vertical"
                android:visibility="visible">


                <TextView
                    fontPath="fonts/IRANSansMobile_Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp16"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingRight="@dimen/dp16"
                    android:paddingTop="@dimen/dp12"
                    android:text="@string/st_title_general"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/st_txt_notifyAndSound"
                    fontPath="fonts/IRANSansMobile.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingRight="@dimen/dp16"
                    android:paddingTop="@dimen/dp4"
                    android:text="@string/st_title_notification_sounds"
                    android:textColor="@color/black_register"
                    android:textSize="@dimen/sp15"
                    android:textStyle="normal"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_editText"/>


                <RelativeLayout
                    android:id="@+id/st_layout_language"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp52">


                    <TextView
                        fontPath="fonts/IRANSansMobile.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/dp16"
                        android:paddingStart="@dimen/dp16"
                        android:paddingTop="@dimen/dp4"
                        android:text="@string/st_Language"
                        android:textColor="@color/black_register"
                        android:textSize="@dimen/sp15"
                        android:textStyle="normal"/>

                    <TextView
                        android:id="@+id/st_txt_language"
                        fontPath="fonts/IRANSansMobile.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/dp16"
                        android:paddingLeft="@dimen/dp8"
                        android:paddingRight="@dimen/dp8"
                        android:paddingStart="@dimen/dp16"
                        android:text="English"
                        android:textColor="@color/toolbar_background"
                        android:textSize="@dimen/sp15"
                        android:textStyle="normal"/>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_editText"/>

                <RelativeLayout
                    android:id="@+id/st_layout_clearCache"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48">

                    <TextView
                        android:id="@+id/st_txt_clearCache"
                        fontPath="fonts/IRANSansMobile.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp16"
                        android:paddingRight="@dimen/dp16"
                        android:text="0 KB"
                        android:textColor="@color/toolbar_background"
                        android:textSize="@dimen/sp15"
                        android:textStyle="normal"/>

                    <TextView
                        fontPath="fonts/IRANSansMobile.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp16"
                        android:paddingRight="@dimen/dp16"
                        android:paddingTop="@dimen/dp8"
                        android:text="@string/st_title_Clear_Cache"
                        android:textColor="@color/black_register"
                        android:textSize="@dimen/sp15"
                        android:textStyle="normal"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_editText"/>

                <TextView
                    android:id="@+id/st_txt_privacySecurity"
                    fontPath="fonts/IRANSansMobile.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingRight="@dimen/dp16"
                    android:paddingTop="@dimen/dp8"
                    android:text="@string/st_title_Privacy_Security"
                    android:textColor="@color/black_register"
                    android:textSize="@dimen/sp15"
                    android:textStyle="normal"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp8"
                android:visibility="visible">

                <TextView

                    fontPath="fonts/IRANSansMobile_Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp16"
                    android:paddingTop="@dimen/dp12"
                    android:text="@string/st_title_message"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp18"
                    android:textStyle="normal"/>


                <RelativeLayout
                    android:id="@+id/st_layout_messageTextSize"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48">

                    <TextView
                        fontPath="fonts/IRANSansMobile.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp16"
                        android:paddingRight="@dimen/dp16"
                        android:paddingTop="@dimen/dp4"
                        android:text="@string/st_title_message_textSize"
                        android:textColor="@color/black_register"
                        android:textSize="@dimen/sp15"
                        android:textStyle="normal"/>

                    <TextView
                        android:id="@+id/st_txt_messageTextSize_number"
                        fontPath="fonts/IRANSansMobile.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="@dimen/dp16"
                        android:paddingRight="@dimen/dp16"
                        android:paddingTop="@dimen/dp4"
                        android:text="16"
                        android:textColor="@color/toolbar_background"
                        android:textSize="@dimen/sp15"
                        android:textStyle="normal"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_editText"/>

                <TextView
                    android:id="@+id/st_txt_sticker"
                    fontPath="fonts/IRANSansMobile.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingRight="@dimen/dp16"
                    android:paddingTop="@dimen/dp4"
                    android:text="@string/st_stickers"
                    android:textColor="@color/black_register"
                    android:textSize="@dimen/sp15"
                    android:textStyle="normal"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_editText"/>

                <TextView
                    android:id="@+id/st_txt_chatBackground"
                    fontPath="fonts/IRANSansMobile.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingRight="@dimen/dp16"
                    android:paddingTop="@dimen/dp4"
                    android:text="@string/st_chatBackground"
                    android:textColor="@color/black_register"
                    android:textSize="@dimen/sp15"
                    android:textStyle="normal"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_editText"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dp16"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingRight="@dimen/dp16"
                    android:paddingStart="@dimen/dp16">

                    <ToggleButton
                        android:id="@+id/st_toggle_inAppBrowser"
                        android:layout_width="@dimen/dp44"
                        android:layout_height="@dimen/dp40"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/st_switch_button"
                        android:textOff=""
                        android:textOn=""/>

                    <TextView
                        android:id="@+id/st_txt_inAppBrowser"
                        fontPath="fonts/IRANSansMobile.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical"
                        android:paddingTop="@dimen/dp4"
                        android:text="@string/st_inApp_Browser"
                        android:textColor="@color/black_register"
                        android:textSize="@dimen/sp15"
                        android:textStyle="normal"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_editText"/>


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dp16"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingRight="@dimen/dp16"
                    android:paddingStart="@dimen/dp16">


                    <ToggleButton
                        android:id="@+id/st_toggle_sendEnter"
                        android:layout_width="@dimen/dp44"
                        android:layout_height="@dimen/dp40"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/st_switch_button"
                        android:textOff=""
                        android:textOn=""/>

                    <TextView
                        android:id="@+id/st_txt_sendEnter"
                        fontPath="fonts/IRANSansMobile.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical"
                        android:paddingTop="@dimen/dp4"
                        android:text="@string/st_send_by_enter"
                        android:textColor="@color/black_register"
                        android:textSize="@dimen/sp15"
                        android:textStyle="normal"/>

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/st_background2"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp4"
                android:visibility="visible">

                <TextView
                    fontPath="fonts/IRANSansMobile_Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp16"
                    android:paddingTop="@dimen/dp12"
                    android:text="@string/st_title_Media"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp18"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/st_txt_keepMedia"
                    fontPath="fonts/IRANSansMobile.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingRight="@dimen/dp16"
                    android:paddingTop="@dimen/dp4"
                    android:text="@string/st_keepMedia"
                    android:textColor="@color/black_register"
                    android:textSize="@dimen/sp15"
                    android:textStyle="normal"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_editText"/>

                <TextView
                    android:id="@+id/st_txt_autoDownloadData"
                    fontPath="fonts/IRANSansMobile.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:gravity="center_vertical"
