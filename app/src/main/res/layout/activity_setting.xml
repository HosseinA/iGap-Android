<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/st_appbar"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/toolbar_background"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/st_collapse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/toolbar_background"
            app:expandedTitleMarginBottom="32dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp8"
                app:layout_collapseMode="parallax">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/st_img_circleImage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".9"
                    android:src="@mipmap/b" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp4"
                    android:text="Amir Molareza"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold"
                    android:id="@+id/ac_txt_nickname_title" />

            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/st_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/st_txt_titleToolbar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/st_titleToolbar"
                        android:textColor="@color/whit_background"
                        android:textSize="@dimen/sp22"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/st_txt_back"
                        android:layout_width="@dimen/dp60"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:text="@string/fa_chevron_left"
                        android:textColor="@color/whit_background"
                        android:textSize="@dimen/sp22" />


                    <ImageView
                        android:id="@+id/st_img_menuPopup"
                        android:layout_width="@dimen/dp32"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp4"
                        android:gravity="center"
                        android:src="@mipmap/popup_menu"
                        android:tint="@color/whit_background" />

                    <!--<TextView-->
                    <!--android:id="@+id/st_txt_menuPopup"-->
                    <!--android:layout_width="@dimen/dp60"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:gravity="center"-->
                    <!--android:text="@string/fa_ellipsis_v"-->
                    <!--android:textColor="@color/whit_background"-->
                    <!--android:textSize="@dimen/sp22" />-->

                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/st_scroll_nested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp16"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                android:paddingTop="@dimen/dp8"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp20"
                    android:text="Info"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp22"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp4"
                    android:paddingStart="@dimen/dp4"
                    android:text="@string/st_nickname"
                    android:textColor="@color/st_title_s"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/st_edt_nikName"
                    android:layout_width="@dimen/dp200"
                    android:layout_height="@dimen/dp40"
                    android:maxLength="25"
                    android:text="Alexander Smith"
                    android:textSize="@dimen/sp18"
                    android:theme="@style/Setting_editText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp20"
                    android:paddingLeft="@dimen/dp4"
                    android:paddingStart="@dimen/dp4"
                    android:text="@string/st_username"
                    android:textColor="@color/st_title_s"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/st_edt_userName"
                    android:layout_width="@dimen/dp200"
                    android:layout_height="@dimen/dp40"
                    android:maxLength="25"
                    android:text="Alexander Smith:"
                    android:textSize="@dimen/sp18"
                    android:theme="@style/Setting_editText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp20"
                    android:paddingLeft="@dimen/dp4"
                    android:paddingStart="@dimen/dp4"
                    android:text="@string/st_phoneNumber"
                    android:textColor="@color/st_title_s"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/st_edt_phoneNumber"
                    android:layout_width="@dimen/dp200"
                    android:layout_height="@dimen/dp40"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:text="09121234567"
                    android:textSize="@dimen/sp18"
                    android:theme="@style/Setting_editText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:background="@color/st_background2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp20"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingRight="@dimen/dp16"
                    android:paddingTop="@dimen/dp12"
                    android:text="@string/st_title_general"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp22"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp16"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingRight="@dimen/dp16"
                    android:text="Notification and Sounds"
                    android:textColor="@color/black_register"
                    android:textSize="@dimen/sp18"
                    android:textStyle="normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_editText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp16"
                    android:text="Privacy and Security"
                    android:textColor="@color/black_register"
                    android:textSize="@dimen/sp18"
                    android:textStyle="normal" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_editText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp16"
                    android:text="Chat and Background"
                    android:textColor="@color/black_register"
                    android:textSize="@dimen/sp18"
                    android:textStyle="normal" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_editText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp16">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="Stickers"
                        android:textColor="@color/black_register"
                        android:textSize="@dimen/sp18"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:gravity="right"
                        android:paddingRight="@dimen/dp8"
                        android:text="129"
                        android:textColor="@color/toolbar_background"
                        android:textSize="@dimen/sp18"
                        android:textStyle="normal" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_editText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp16">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="Language"
                        android:textColor="@color/black_register"
                        android:textSize="@dimen/sp18"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="@dimen/dp8"
                        android:text="English"
                        android:textColor="@color/toolbar_background"
                        android:textSize="@dimen/sp18"
                        android:textStyle="normal" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_editText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp16">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:text="Language"
                        android:textColor="@color/black_register"
                        android:textSize="@dimen/sp18"
                        android:textStyle="normal" />

                    <Switch
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:paddingRight="@dimen/dp4" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_editText" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/st_fab_setPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp20"
        android:clickable="true"
        android:src="@mipmap/pu_camera"
        android:theme="@style/FabButton"
        android:tint="@color/gray"
        app:layout_anchor="@+id/st_appbar"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>

