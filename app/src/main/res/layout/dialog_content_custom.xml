<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:id="@+id/dialog_root_item1_notification"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >

    <net.iGap.module.MaterialDesignTextView

        android:id="@+id/iconDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/md_muted"
        android:textAppearance="@style/TextIconAppearance.all"
        android:textColor="@color/grayNew"
        android:textSize="@dimen/dp26"

        />

    <TextView
        android:id="@+id/txtDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingStart="@dimen/dp40"
        android:paddingLeft="@dimen/dp40"
        android:paddingRight="@dimen/dp40"
        android:paddingEnd="@dimen/dp40"
        android:paddingTop="@dimen/dp8"
        android:text="@string/mute_notification"
        android:textColor="@color/green"
        android:textSize="@dimen/dp14"
        />
  </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"

      >
    <TextView
        android:id="@+id/txtDialogContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_log_out"
        android:textSize="@dimen/dp14"
        android:textColor="@color/gray_6c"
        android:paddingTop="@dimen/dp16"
        android:paddingBottom="@dimen/dp16"

        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="end|right"

      >

    <TextView
        android:id="@+id/txtDialogCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/B_cancel"
        android:textSize="@dimen/dp14"
        android:textColor="@color/green"
        android:paddingLeft="@dimen/dp20"
        android:paddingStart="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        android:paddingEnd="@dimen/dp20"
        android:paddingTop="@dimen/dp8"
        android:paddingBottom="@dimen/dp8"
        />

    <TextView
        android:id="@+id/txtDialogOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/B_ok"
        android:textSize="@dimen/dp14"
        android:textColor="@color/green"
        android:paddingLeft="@dimen/dp20"
        android:paddingStart="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        android:paddingEnd="@dimen/dp20"
        android:paddingTop="@dimen/dp8"
        android:paddingBottom="@dimen/dp8"
        />


  </LinearLayout>

</LinearLayout>
