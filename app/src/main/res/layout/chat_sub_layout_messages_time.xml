<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom|right"
    android:layout_marginTop="-1dp"
    android:gravity="right"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal"
    >

  <LinearLayout
      android:id="@+id/lyt_see"
      android:visibility="gone"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginLeft="10dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"

      android:paddingLeft="@dimen/dp4"
      android:paddingRight="@dimen/dp4"
      >

    <TextView
        android:id="@+id/txt_views_label"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0"
        android:paddingTop="2dp"
        android:textColor="@color/room_message_gray"
        style="@style/ChatMessages.Time"
        />

    <net.iGap.module.MaterialDesignTextView
        android:id="@+id/img_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:layout_marginLeft="@dimen/dp4"
        android:text="@string/md_visibility"
        android:textAppearance="@style/TextIconAppearance_toolbar"
        android:textColor="@color/gray_6c"
        android:textSize="@dimen/dp14"
        />

  </LinearLayout>

  <TextView
        android:id="@+id/txtEditedIndicator"
        style="@style/ChatMessages.Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/dp4"
        android:gravity="center"
        android:text="@string/edited"/>

    <TextView
        android:id="@+id/cslr_txt_time"
        style="@style/ChatMessages.Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp4"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:gravity="center"
        android:text="10:21"/>

    <ImageView
        android:id="@+id/cslr_txt_tic"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp4"
        android:layout_marginTop="-5dp"
        android:tint="@color/colorOldBlack"
        app:srcCompat="@drawable/ic_double_check"
        style="@style/ChatMessages.MaterialDesignTextView.Tick"
        />

  <net.iGap.module.MaterialDesignTextView
      android:id="@+id/cslr_txt_hearing"
      android:layout_width="16dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="@dimen/dp4"
      android:text="@string/md_hearing"
      android:layout_gravity="left|center_vertical"
      android:textColor="@color/black90"
      android:gravity="center"
      fontPath="fonts/MaterialIcons-Regular.ttf"
      android:visibility="gone"
      />


  <LinearLayout
        android:id="@+id/lyt_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone">
    </LinearLayout>
</LinearLayout>