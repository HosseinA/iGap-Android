<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp48"
    android:layout_marginBottom="@dimen/dp8"
    android:gravity="left|center"
    android:orientation="horizontal"
    android:padding="@dimen/dp4"
    android:textDirection="firstStrong"
    >

  <ImageView
      android:layout_width="@dimen/dp40"
      android:layout_height="@dimen/dp40"
      android:layout_marginLeft="@dimen/dp8"
      android:adjustViewBounds="true"
      android:padding="@dimen/dp4"
      android:src="@mipmap/reply"
      android:visibility="visible"
      />

  <View
      android:layout_width="3dp"
      android:layout_height="@dimen/dp40"
      android:layout_marginLeft="@dimen/dp8"
      android:background="@color/green"
      />


  <ImageView
      android:id="@+id/chslr_imv_replay_pic"
      android:layout_width="@dimen/dp40"
      android:layout_height="@dimen/dp40"
      android:layout_marginLeft="@dimen/dp8"
      android:adjustViewBounds="true"
      android:src="@mipmap/d"
      android:visibility="gone"
      />

  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="@dimen/dp8"
      android:layout_weight="1"
      android:gravity="left|center"
      android:orientation="vertical"
      >

    <com.iGap.module.EmojiTextView
        android:id="@+id/chslr_txt_replay_from"
        android:maxWidth="@dimen/dp280"
        android:singleLine="true"
        android:text="SAMPLE TEXT"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp14"
        style="@style/ChatMessages.EmojiTextView"
        />

    <com.iGap.module.EmojiTextView
        android:id="@+id/chslr_txt_replay_message"
        android:layout_marginTop="@dimen/dp4"
        android:maxWidth="@dimen/dp280"
        android:singleLine="true"
        android:text="SAMPLE TEXT"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp14"
        style="@style/ChatMessages.EmojiTextView"
        />
  </LinearLayout>


</LinearLayout>