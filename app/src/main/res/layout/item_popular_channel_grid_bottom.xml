<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/shape_popular_channel_gray50"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80"
        android:background="@drawable/shape_popular_channel_gray200"
        android:backgroundTint="@color/gray_300"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_item_popular_grid"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/image_sample" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_item_popular_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minLines="1"
        android:textColor="@color/black"
        android:text="باشگاه خبرنگاران جوان"
        android:textSize="8sp" />
</LinearLayout>