<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="net.iGap.fragments.giftStickers.giftCardDetail.EnterNationalCodeForActivateGiftStickerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:padding="@dimen/dp8"
            android:text="@string/active_gift_sticker_title"
            android:textColor="?attr/colorAccent"
            android:textSize="@dimen/largeTextSize"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent=".9" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nationalCodeLayout"
            style="@style/iGapEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/national_code"
            app:errorEnabled="@{viewModel.hasError}"
            app:errorText="@{viewModel.errorMessage}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pageTitle"
            app:layout_constraintWidth_percent=".8">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nationalCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="?iGapTitleTextColor"
                android:inputType="number"
                android:maxLength="10"
                android:text="@{viewModel.nationalCodeField}" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/descriptionView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:padding="@dimen/dp8"
            android:text="برای فعالسازی کارت هدیه کد ملی خود را وارد کنید.توجه داشته باشید فعال سازی یکبار انجام شده و اطلاعات کارت برای شما ارسال میشود.\nلطفا در نگهداری اطلاعات کارت کوشا باشید."
            android:textColor="?attr/iGapSubtitleTextColor"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nationalCodeLayout" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton2"
            style="@style/iGapButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:enabled="@{viewModel.isEnable}"
            android:onClick="@{()->viewModel.onActiveButtonClicked(nationalCode.getEditableText().toString())}"
            android:text="@string/inquiry"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/forward"
            app:layout_constraintTop_toBottomOf="@+id/descriptionView"
            app:layout_constraintWidth_percent="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/forward"
            style="@style/iGapOutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="@{viewModel.isEnable}"
            android:text="@string/gift_sticker_send_to_other"
            app:layout_constraintBottom_toBottomOf="@+id/materialButton2"
            app:layout_constraintEnd_toStartOf="@+id/materialButton2"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/materialButton2"
            app:layout_constraintWidth_percent=".6" />

        <ProgressBar
            android:id="@+id/loadingView"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:visibility="@{viewModel.isShowLoading}"
            app:layout_constraintBottom_toBottomOf="@+id/pageTitle"
            app:layout_constraintEnd_toEndOf="@+id/pageTitle"
            app:layout_constraintTop_toTopOf="@+id/pageTitle"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>