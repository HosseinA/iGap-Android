<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/cslr_ll_forward"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:clickable="true"
              android:paddingBottom="@dimen/dp8"
              android:paddingRight="@dimen/messageContainerPadding"
              android:paddingTop="@dimen/dp8"
              android:paddingLeft="@dimen/messageContainerPadding"
              android:visibility="visible">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/newBlack"
        android:layout_marginRight="3dp">
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp4"
            android:text="@string/forwarded_from"
            android:textColor="@color/newBlack"
            android:textSize="@dimen/sp12"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/cslr_txt_forward_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAMPLE TEXT"
            android:textColor="@color/newBlack"
            android:textSize="@dimen/sp12"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>