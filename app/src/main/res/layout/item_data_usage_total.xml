<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp24">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp24"
                android:text="Total" />

            <TextView
                android:id="@+id/txtTotalSent"
                android:layout_below="@id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"

                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp24"
                android:text="TotalSent" />


            <TextView
                android:id="@+id/txtTotalSentByte"
                android:layout_below="@id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp24"
                android:text="22" />

            <View
                android:id="@+id/view1"
                android:layout_below="@+id/txtTotalSentByte"
                android:layout_marginTop="@dimen/dp12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp2"
                android:background="@color/background_editText" />

            <TextView
                android:id="@+id/txtTotalReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txtTotalSentByte"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp24"
                android:text="TotalReceived" />


            <TextView
                android:id="@+id/txtTotalReceivedByte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/txtTotalSentByte"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp24"
                android:text="2489"
                android:layout_marginBottom="@dimen/dp24"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>





</RelativeLayout>