<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTitle"
        style="?textTitleColorSettingTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginTop="@dimen/dp18"
        android:layout_marginRight="@dimen/dp20"
        android:text="@string/total"
        android:textSize="@dimen/largeTextSize"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/liTotalSent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_marginTop="@dimen/dp14"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTotalSent"
            style="?textTitleColorSettingTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_weight="1"
            android:text="@string/total_sent"
            android:textSize="@dimen/standardTextSize" />

        <TextView
            android:id="@+id/txtTotalSentByte"
            style="?textTitleColorSettingTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:text="22"
            android:textColor="@color/setting_items_value_color"
            android:textSize="@dimen/smallTextSize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_marginBottom="@dimen/dp8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTotalReceived"
            style="?textTitleColorSettingTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_weight="1"
            android:text="@string/total_received"
            android:textSize="@dimen/standardTextSize" />

        <TextView
            android:id="@+id/txtTotalReceivedByte"
            style="?textTitleColorSettingTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:text="2489"
            android:textColor="@color/setting_items_value_color"
            android:textSize="@dimen/smallTextSize" />

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="?lineColorSettingTheme"
        android:layout_margin="@dimen/dp10" />


</LinearLayout>