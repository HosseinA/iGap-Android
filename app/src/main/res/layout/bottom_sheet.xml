<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="8dp"
        >

      <android.support.v7.widget.RecyclerView
          android:id="@+id/rcvContent"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="@dimen/dp8"
          android:background="@color/gray_3c"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:orientation="horizontal"
          >


        <LinearLayout
            android:id="@+id/document"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
          <com.iGap.module.ColorImageView
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:padding="2dp"
              android:src="@mipmap/am_document"
              android:layout_gravity="center"
              android:adjustViewBounds="true"
              android:tint="@color/green"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/am_document"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/sp10"
              />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/music"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
          <com.iGap.module.ColorImageView
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:padding="2dp"
              android:src="@mipmap/am_music"
              android:layout_gravity="center"
              android:adjustViewBounds="true"
              android:tint="@color/green"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:singleLine="true"
              android:text="@string/am_music"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/sp10"
              />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
          <com.iGap.module.ColorImageView
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:padding="2dp"
              android:src="@mipmap/am_video"
              android:layout_gravity="center"
              android:adjustViewBounds="true"
              android:tint="@color/green"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/am_video"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/sp10"
              />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
          <com.iGap.module.ColorImageView
              android:id="@+id/imageView2"
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:padding="2dp"
              android:src="@mipmap/am_picture"
              android:layout_gravity="center"
              android:adjustViewBounds="true"
              android:tint="@color/green"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:singleLine="true"
              android:text="@string/am_picture"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/sp10"
              />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

          <com.iGap.module.ColorImageView
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:padding="2dp"
              android:src="@mipmap/am_camera"
              android:tint="@color/green"
              android:adjustViewBounds="true"
              android:layout_gravity="center"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:singleLine="true"
              android:text="@string/am_camera"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/sp10"
              android:id="@+id/textView5"
              />
        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:orientation="horizontal"

          >

        <LinearLayout
            android:id="@+id/contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
          <com.iGap.module.ColorImageView
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:padding="2dp"
              android:src="@mipmap/am_contact"
              android:tint="@color/green"
              android:adjustViewBounds="true"
              android:layout_gravity="center"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/am_contact"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/sp10"
              />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
          <com.iGap.module.ColorImageView
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:padding="2dp"
              android:src="@mipmap/am_location"
              android:tint="@color/green"
              android:adjustViewBounds="true"
              android:layout_gravity="center"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:singleLine="true"
              android:text="@string/am_location"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/sp10"
              />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
          <com.iGap.module.ColorImageView
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:padding="2dp"
              android:src="@mipmap/am_paint"
              android:tint="@color/green"
              android:adjustViewBounds="true"
              android:layout_gravity="center"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:singleLine="true"
              android:text="@string/am_paint"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/sp10"
              />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
          <com.iGap.module.ColorImageView
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:padding="2dp"
              android:src="@mipmap/am_file"
              android:tint="@color/green"
              android:adjustViewBounds="true"
              android:layout_gravity="center"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/am_file"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/sp10"
              />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
          <com.iGap.module.ColorImageView
              android:id="@+id/send"
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:tint="@color/green"
              android:src="@mipmap/ic_close"
              android:gravity="center"
              android:adjustViewBounds="true"
              android:textColor="@color/green"
              android:layout_gravity="center"
              />

          <TextView
              android:id="@+id/txtNumberItem"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/navigation_drawer_close"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/sp10"
              />
        </LinearLayout>


      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
