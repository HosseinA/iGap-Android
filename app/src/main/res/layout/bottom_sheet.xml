<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="8dp"
        >

      <android.support.v7.widget.RecyclerView
          android:id="@+id/rcvContent"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="@dimen/dp8"
          android:background="@color/gray_3c"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:orientation="horizontal"
          >


        <LinearLayout
            android:id="@+id/document"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >


          <TextView
              android:id="@+id/txtDocument"
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:text="@string/icon_folder"
              android:textSize="@dimen/dp26"
              android:gravity="center"
              android:textColor="@color/green"
              android:layout_gravity="center_horizontal"
              fontPath="fonts/iGap_menu_font.ttf"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/am_document"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/dp10"
              />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/music"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >


          <TextView
              android:id="@+id/txtMusic"
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:text="@string/icon_music"
              android:textSize="@dimen/dp26"
              android:gravity="center"
              android:textColor="@color/green"
              android:layout_gravity="center_horizontal"
              fontPath="fonts/iGap_menu_font.ttf"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:singleLine="true"
              android:text="@string/am_music"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/dp10"
              />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

          <TextView

              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:text="@string/icon_video_camera"
              android:textSize="@dimen/dp26"
              android:gravity="center"
              android:textColor="@color/green"
              android:layout_gravity="center_horizontal"
              android:id="@+id/txtVideo"
              fontPath="fonts/iGap_menu_font.ttf"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/am_video"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/dp10"
              />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

          <TextView
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:text="@string/icon_photo"
              android:textSize="@dimen/dp26"
              android:gravity="center"
              android:textColor="@color/green"
              android:layout_gravity="center_horizontal"
              android:id="@+id/textPicture"
              fontPath="fonts/iGap_menu_font.ttf"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:singleLine="true"
              android:text="@string/am_picture"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/dp10"
              />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >


          <TextView
              android:id="@+id/txtCamera"
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:text="@string/icon_camera"
              android:textSize="@dimen/dp26"
              android:gravity="center"
              android:textColor="@color/green"
              android:layout_gravity="center_horizontal"
              fontPath="fonts/iGap_menu_font.ttf"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:singleLine="true"
              android:text="@string/am_camera"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/dp10"
              android:id="@+id/textView5"
              />
        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:orientation="horizontal"

          >

        <LinearLayout
            android:id="@+id/contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
          <TextView
              android:id="@+id/txtContact"
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:text="@string/icon_user"
              android:textSize="@dimen/dp26"
              android:gravity="center"
              android:textColor="@color/green"
              android:layout_gravity="center_horizontal"
              fontPath="fonts/iGap_menu_font.ttf"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/am_contact"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/dp10"
              />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >


          <TextView
              android:id="@+id/txtLocation"
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:text="@string/icon_location"
              android:textSize="@dimen/dp26"
              android:gravity="center"
              android:textColor="@color/green"
              android:layout_gravity="center_horizontal"
              fontPath="fonts/iGap_menu_font.ttf"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:singleLine="true"
              android:text="@string/am_location"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/dp10"
              />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

          <TextView
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:text="@string/icon_brush"
              android:textSize="@dimen/dp26"
              android:gravity="center"
              android:textColor="@color/green"
              android:layout_gravity="center_horizontal"
              fontPath="fonts/iGap_menu_font.ttf"
              android:id="@+id/txtPaint"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:singleLine="true"
              android:text="@string/am_paint"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/dp10"
              />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

          <TextView
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:text="@string/icon_file_empty"
              android:textSize="@dimen/dp26"
              android:gravity="center"
              android:textColor="@color/green"
              android:layout_gravity="center_horizontal"
              fontPath="fonts/iGap_menu_font.ttf"
              android:id="@+id/txtFile"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/am_file"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/dp10"
              />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/txtSend"
              android:layout_width="@dimen/dp52"
              android:layout_height="@dimen/dp52"
              android:text="@string/icon_keyboard_arrow_down"
              android:textSize="@dimen/dp32"
              android:gravity="center"
              android:textColor="@color/green"
              android:layout_gravity="center_horizontal"
              fontPath="fonts/iGap_menu_font.ttf"
              />

          <TextView
              android:id="@+id/txtNumberItem"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/navigation_drawer_close"
              android:textColor="@color/gray_4c"
              android:textSize="@dimen/dp10"
              />
        </LinearLayout>


      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
