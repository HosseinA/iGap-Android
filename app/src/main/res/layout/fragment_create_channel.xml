    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/fch_layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height_root_with_search">

    </LinearLayout>

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@+id/fch_layout_toolbar">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
          android:id="@+id/fch_radioGroup"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/dp8"
          android:onCheckedChanged="@{fragmentCreateChannelViewModel::isRadioGroup}"
          android:paddingEnd="@dimen/dp12"
          android:paddingLeft="@dimen/dp12"
          android:paddingRight="@dimen/dp12"
          android:paddingStart="@dimen/dp12">
          <!--android:onCheckedChanged="@{fragmentCreateChannelViewModel.isRadioGroup}"-->

          <RadioButton
            android:id="@+id/fch_radioButton_Public"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="@={fragmentCreateChannelViewModel.isRadioButtonPublic , default=false}"
            android:gravity="start|center"
            android:onClick="@{fragmentCreateChannelViewModel::onClickRadioButtonPublic}"
            android:text="@string/public_channel"
            style="?textTitleColorSettingTheme"
            android:textSize="@dimen/dp15"

            />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="@dimen/dp8"
            android:text="@string/desc_public_channel"
            style="?textSubColorSettingTheme"
            android:textSize="@dimen/dp14" />

          <RadioButton
            android:id="@+id/fch_radioButton_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            android:checked="@={fragmentCreateChannelViewModel.isRadioButtonPrivate , default=false}"
            android:gravity="start|center"
            android:onClick="@{fragmentCreateChannelViewModel::onClickRadioButtonPrivate}"
            android:text="@string/private_channel"
            style="?textTitleColorSettingTheme"
            android:textSize="@dimen/dp15" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp8"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="@dimen/dp8"
            android:text="@string/desc_private_channel"
            style="?textSubColorSettingTheme"
            android:textSize="@dimen/dp14" />
        </RadioGroup>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="?backgroundColorSettingTheme_2"
          android:orientation="vertical"
          android:padding="@dimen/dp8">

          <View
              android:layout_width="match_parent"
              android:layout_height="0.5dp"
              android:background="@color/gray"/>

          <net.iGap.module.MaterialDesignTextView
            fontPath="fonts/IRANSansMobile_Bold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp16"
            android:paddingTop="@dimen/dp12"
            android:text="@string/permanent_link"
            android:textColor="@color/black"
            android:textSize="@dimen/dp15" />


          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
              android:id="@+id/fch_txtInput_nikeName"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:onClick="@{fragmentCreateChannelViewModel::onClickTxtInputLink}"
              app:errorEnabled="@{safeUnbox(fragmentCreateChannelViewModel.txtInputLinkEnable)}"
              app:errorTextAppearance="@style/error_appearance"
              app:hintTextAppearance="@style/Hint_appearance"
              style="?hintColorSettingTheme">

              <net.iGap.module.MEditText
                android:id="@+id/fch_edt_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:afterTextChanged="@{fragmentCreateChannelViewModel::afterTextChanged}"
                android:enabled="@{safeUnbox(fragmentCreateChannelViewModel.edtSetLinkEnable)}"
                android:hint="@string/your_link"
                android:layoutDirection="ltr"
                android:singleLine="true"
                android:text="@={fragmentCreateChannelViewModel.edtSetLink}"
                style="?textTitleColorSettingTheme"
                android:textDirection="ltr"
                android:textSize="@dimen/dp15" />

            </android.support.design.widget.TextInputLayout>

          </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp8"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="@dimen/dp8"
            android:padding="@dimen/dp10"
            android:text="@string/new_channels_rules"
            style="?textSubColorSettingTheme"
            android:textSize="@dimen/dp14" />


      </LinearLayout>
    </ScrollView>

    <ProgressBar
      android:id="@+id/fch_prgWaiting_addContact"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:layout_gravity="center"
      android:indeterminate="true"
      android:visibility="@{safeUnbox(fragmentCreateChannelViewModel.prgWaiting)}" />

  </RelativeLayout>
</layout>