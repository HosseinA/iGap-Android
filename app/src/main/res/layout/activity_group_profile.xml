<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="fragmentGroupProfileViewModel"
            type="net.iGap.viewmodel.FragmentGroupProfileViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        style="?backgroundColorSettingTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/description"
                    style="?textTitleColorSettingTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:padding="8dp"
                    android:text="@{fragmentGroupProfileViewModel.callbackGroupDescription}"
                    android:visibility="@{fragmentGroupProfileViewModel.haveDescription}"
                    app:layout_constraintLeft_toLeftOf="@id/notificationTitle"
                    app:layout_constraintRight_toRightOf="@id/notificationTitle"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/divider0"
                    style="?lineColorSettingTheme"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp16"
                    android:visibility="@{fragmentGroupProfileViewModel.haveDescription}"
                    app:layout_constraintLeft_toLeftOf="@id/divider1"
                    app:layout_constraintRight_toRightOf="@id/divider1"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    app:layout_constraintWidth_percent=".95" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/notificationTitle"
                    style="?textTitleColorSettingTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:padding="8dp"
                    android:text="@string/app_notif_color"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider0"
                    app:layout_constraintWidth_percent=".9" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/notificationStatus"
                    style="?textSubColorSettingTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{fragmentGroupProfileViewModel.notificationState}"
                    app:layout_constraintLeft_toLeftOf="@id/notificationTitle"
                    app:layout_constraintRight_toRightOf="@id/notificationTitle"
                    app:layout_constraintTop_toBottomOf="@id/notificationTitle" />

                <View
                    android:id="@+id/divider1"
                    style="?lineColorSettingTheme"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp16"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/notificationStatus"
                    app:layout_constraintWidth_percent=".95" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/sharedContentTitle"
                    style="?textTitleColorSettingTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->fragmentGroupProfileViewModel.onClickGroupShearedMedia()}"
                    android:padding="8dp"
                    android:text="@string/chi_shared_Media"
                    app:layout_constraintLeft_toLeftOf="@id/notificationTitle"
                    app:layout_constraintRight_toRightOf="@id/notificationTitle"
                    app:layout_constraintTop_toBottomOf="@id/divider1" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/photo"
                    style="?textSubColorSettingTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:padding="8dp"
                    android:text="@string/shared_image"
                    android:visibility="@{fragmentGroupProfileViewModel.sharedPhotoVisibility}"
                    app:layout_constraintLeft_toLeftOf="@id/sharedContentTitle"
                    app:layout_constraintRight_toLeftOf="@id/photoCount"
                    app:layout_constraintTop_toBottomOf="@id/sharedContentTitle" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/photoCount"
                    style="?textSubColorSettingTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@{String.valueOf(fragmentGroupProfileViewModel.sharedPhotoCount)}"
                    android:textColor="@color/green"
                    android:visibility="@{fragmentGroupProfileViewModel.sharedPhotoVisibility}"
                    app:layout_constraintBottom_toBottomOf="@id/photo"
                    app:layout_constraintRight_toRightOf="@id/sharedContentTitle"
                    app:layout_constraintTop_toTopOf="@id/photo" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/video"
                    style="?textSubColorSettingTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/shared_video"
                    android:visibility="@{fragmentGroupProfileViewModel.sharedVideoVisibility}"
                    app:layout_constraintLeft_toLeftOf="@id/sharedContentTitle"
                    app:layout_constraintRight_toLeftOf="@id/photoCount"
                    app:layout_constraintTop_toBottomOf="@id/photo" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/videoCount"
                    style="?textSubColorSettingTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@{String.valueOf(fragmentGroupProfileViewModel.sharedVideoCount)}"
                    android:textColor="@color/green"
                    android:visibility="@{fragmentGroupProfileViewModel.sharedVideoVisibility}"
                    app:layout_constraintBottom_toBottomOf="@id/video"
                    app:layout_constraintRight_toRightOf="@id/sharedContentTitle"
                    app:layout_constraintTop_toTopOf="@id/video" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/audioFiles"
                    style="?textSubColorSettingTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/shared_audio"
                    android:visibility="@{fragmentGroupProfileViewModel.sharedAudioVisibility}"
                    app:layout_constraintLeft_toLeftOf="@id/sharedContentTitle"
                    app:layout_constraintRight_toLeftOf="@id/audioFilesCount"
                    app:layout_constraintTop_toBottomOf="@id/video" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/audioFilesCount"
                    style="?textSubColorSettingTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@{String.valueOf(fragmentGroupProfileViewModel.sharedAudioCount)}"
                    android:textColor="@color/green"
                    android:visibility="@{fragmentGroupProfileViewModel.sharedAudioVisibility}"
                    app:layout_constraintBottom_toBottomOf="@id/audioFiles"
                    app:layout_constraintRight_toRightOf="@id/sharedContentTitle"
                    app:layout_constraintTop_toTopOf="@id/audioFiles" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/voiceMessage"
                    style="?textSubColorSettingTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/shared_voice"
                    android:visibility="@{fragmentGroupProfileViewModel.sharedVoiceVisibility}"
                    app:layout_constraintLeft_toLeftOf="@id/sharedContentTitle"
                    app:layout_constraintRight_toLeftOf="@id/voiceMessageCount"
                    app:layout_constraintTop_toBottomOf="@id/audioFiles" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/voiceMessageCount"
                    style="?textSubColorSettingTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@{String.valueOf(fragmentGroupProfileViewModel.sharedVoiceCount)}"
                    android:textColor="@color/green"
                    android:visibility="@{fragmentGroupProfileViewModel.sharedVoiceVisibility}"
                    app:layout_constraintBottom_toBottomOf="@id/voiceMessage"
                    app:layout_constraintRight_toRightOf="@id/sharedContentTitle"
                    app:layout_constraintTop_toTopOf="@id/voiceMessage" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/gif"
                    style="?textSubColorSettingTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/shared_gif"
                    android:visibility="@{fragmentGroupProfileViewModel.sharedGifVisibility}"
                    app:layout_constraintLeft_toLeftOf="@id/sharedContentTitle"
                    app:layout_constraintRight_toLeftOf="@id/gifCount"
                    app:layout_constraintTop_toBottomOf="@id/voiceMessage" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/gifCount"
                    style="?textSubColorSettingTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@{String.valueOf(fragmentGroupProfileViewModel.sharedGifCount)}"
                    android:textColor="@color/green"
                    android:visibility="@{fragmentGroupProfileViewModel.sharedGifVisibility}"
                    app:layout_constraintBottom_toBottomOf="@id/gif"
                    app:layout_constraintRight_toRightOf="@id/sharedContentTitle"
                    app:layout_constraintTop_toTopOf="@id/gif" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/files"
                    style="?textSubColorSettingTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/shared_files"
                    android:visibility="@{fragmentGroupProfileViewModel.sharedFileVisibility}"
                    app:layout_constraintLeft_toLeftOf="@id/sharedContentTitle"
                    app:layout_constraintRight_toLeftOf="@id/filesCount"
                    app:layout_constraintTop_toBottomOf="@id/gif" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/filesCount"
                    style="?textSubColorSettingTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@{String.valueOf(fragmentGroupProfileViewModel.sharedFileCount)}"
                    android:textColor="@color/green"
                    android:visibility="@{fragmentGroupProfileViewModel.sharedFileVisibility}"
                    app:layout_constraintBottom_toBottomOf="@id/files"
                    app:layout_constraintRight_toRightOf="@id/sharedContentTitle"
                    app:layout_constraintTop_toTopOf="@id/files" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/links"
                    style="?textSubColorSettingTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/shared_links"
                    android:visibility="@{fragmentGroupProfileViewModel.sharedLinkVisibility}"
                    app:layout_constraintLeft_toLeftOf="@id/sharedContentTitle"
                    app:layout_constraintRight_toLeftOf="@id/linksCount"
                    app:layout_constraintTop_toBottomOf="@id/files" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/linksCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@{String.valueOf(fragmentGroupProfileViewModel.sharedLinkCount)}"
                    android:textColor="@color/green"
                    android:visibility="@{fragmentGroupProfileViewModel.sharedLinkVisibility}"
                    app:layout_constraintBottom_toBottomOf="@id/links"
                    app:layout_constraintRight_toRightOf="@id/sharedContentTitle"
                    app:layout_constraintTop_toTopOf="@id/links" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/noMediaShared"
                    style="?textSubColorSettingTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/there_is_no_sheared_media"
                    android:visibility="@{fragmentGroupProfileViewModel.noMediaSharedVisibility}"
                    app:layout_constraintLeft_toLeftOf="@id/sharedContentTitle"
                    app:layout_constraintRight_toRightOf="@id/sharedContentTitle"
                    app:layout_constraintTop_toBottomOf="@id/links" />

                <View
                    android:id="@+id/divider2"
                    style="?lineColorSettingTheme"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp16"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/noMediaShared"
                    app:layout_constraintWidth_percent=".95" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/addMember"
                    style="?textSubColorSettingTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->fragmentGroupProfileViewModel.addNewMember()}"
                    android:padding="8dp"
                    android:text="@string/add_new_member"
                    app:layout_constraintLeft_toLeftOf="@id/notificationTitle"
                    app:layout_constraintRight_toRightOf="@id/notificationTitle"
                    app:layout_constraintTop_toBottomOf="@id/divider2" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/memberList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/addMember" />

                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.constraint.ConstraintLayout>
</layout>