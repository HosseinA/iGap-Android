<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp68"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="@dimen/dp8"
      >

    <net.iGap.module.CircleImageView
        android:id="@+id/img_user_avatar_map"
        android:layout_width="@dimen/dp48"
        android:layout_height="@dimen/dp48"
        android:layout_marginLeft="@dimen/dp4"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginLeft="@dimen/dp8"
          android:layout_weight="1"
          android:orientation="vertical"
          >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

          <net.iGap.module.CustomTextViewMedium
              android:id="@+id/txt_user_name_map"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="left"
              android:singleLine="true"
              android:text="NearBy User"
              android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
              android:textColor="@color/black90"
              android:textSize="@dimen/dp16"
              />

        </LinearLayout>


        <net.iGap.module.CustomTextViewMedium
            android:id="@+id/txt_user_comment_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical|start"
            android:singleLine="true"
            android:tag="menu"
            android:text="getting comment..."
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="@color/gray_5c"
            android:textSize="@dimen/dp14"
            />
      </RelativeLayout>

      <TextView
          android:id="@+id/txt_user_distance_map"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="distance"
          android:textColor="@color/gray_5c"
          android:textSize="@dimen/dp14"
          />

      <net.iGap.module.MaterialDesignTextView
          android:id="@+id/cigp_moreButton"
          android:layout_width="@dimen/dp48"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="@string/md_right_arrow"
          android:textAppearance="@style/TextIconAppearance.all"
          android:textColor="@color/iGapColor"
          android:textSize="@dimen/dp18"
          />

    </LinearLayout>

  </LinearLayout>
  <View
      android:id="@+id/view_topLine_map"
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginLeft="@dimen/dp8"
      android:layout_marginStart="@dimen/dp8"
      android:background="@color/gray"
      />

</LinearLayout>