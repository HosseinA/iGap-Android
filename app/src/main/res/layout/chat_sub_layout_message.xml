<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/chatSubLayoutMessage"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:maxWidth="@dimen/chatBoxMaxWidth"
             android:textDirection="firstStrong">

    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <com.iGap.module.CircleImageView
            android:id="@+id/messageSenderAvatar"
            android:layout_width="@dimen/dp52"
            android:layout_height="@dimen/dp52"
            android:layout_marginRight="@dimen/dp8"
            android:src="@mipmap/empty"/>

        <LinearLayout
            android:id="@+id/middleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/messageSenderAvatar"
            android:layout_toRightOf="@+id/messageSenderAvatar"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/contentContainer"
                style="@style/ChatMessages.CardView"
                android:minWidth="50dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="50dp"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/replayLayout"
                        layout="@layout/chat_sub_layout_reply"/>

                    <include
                        android:id="@+id/cslr_ll_forward"
                        layout="@layout/chat_sub_layout_forward"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <io.github.meness.emoji.EmojiTextView
                            android:id="@+id/messageText"
                            style="@style/ChatMessages.EmojiTextView"
                            android:text="SAMPLE TEXT"/>

                    </LinearLayout>

                    <include layout="@layout/chat_sub_layout_messages_time"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/middleLayout"
            android:layout_alignStart="@+id/middleLayout"
            android:layout_below="@+id/middleLayout">

            <include layout="@layout/chat_sub_layout_messages_vote"/>

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>