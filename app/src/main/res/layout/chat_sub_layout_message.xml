<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/chatSubLayoutMessage"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:maxWidth="@dimen/chatBoxMaxWidth"
             android:textDirection="firstStrong">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <com.iGap.module.CircleImageView
            android:id="@+id/messageSenderAvatar"
            android:layout_width="@dimen/dp52"
            android:layout_height="@dimen/dp52"
            android:layout_marginRight="@dimen/dp8"
            android:src="@mipmap/empty"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/contentContainer"
                style="@style/ChatMessages.CardView"
                android:minWidth="150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="150dp"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/replayLayout"
                        layout="@layout/chat_sub_layout_replay"/>

                    <include
                        android:id="@+id/cslr_ll_forward"
                        layout="@layout/chat_sub_layout_forward"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/messageContainerPaddingBottom"
                        android:paddingLeft="@dimen/messageContainerPaddingLeftRight"
                        android:paddingRight="@dimen/messageContainerPaddingLeftRight"
                        android:paddingTop="@dimen/messageContainerPadding"
                        >

                        <io.github.meness.emoji.EmojiTextView
                            android:id="@+id/messageText"
                            style="@style/ChatMessages.EmojiTextView"
                            android:layout_marginBottom="-4dp"
                            android:text="Hello df df df d fd f df df d f  df df df df df d fd f df df d fd f df d fd fd f df df "/>

                        <include layout="@layout/chat_sub_layout_messages_time"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>