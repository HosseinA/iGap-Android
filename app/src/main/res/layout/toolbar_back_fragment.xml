<?xml version="1.0" encoding="utf-8"?>

<net.iGap.module.MyAppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ac_appBarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/iGapColor">

    <LinearLayout
        android:id="@+id/toolbar"
        app:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:orientation="horizontal">

        <net.iGap.libs.rippleeffect.RippleView
            android:id="@+id/chl_ripple_back_Button"
            app:rv_alpha="200"
            app:rv_centered="true"
            app:rv_rippleDuration="0"
            app:rv_ripplePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="0">

            <net.iGap.module.MaterialDesignTextView
                android:id="@+id/chl_imv_back_Button"
                android:layout_width="@dimen/dp52"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/md_back_arrow"
                android:textAppearance="@style/TextIconAppearance_toolbar"
                android:textColor="@color/whit_background" />

        </net.iGap.libs.rippleeffect.RippleView>

        <net.iGap.module.MaterialDesignTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:padding="4dp"
            android:singleLine="true"
            android:text=""
            android:textAppearance="@style/TextIconAppearance_toolbar"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp20" />


    </LinearLayout>

</net.iGap.module.MyAppBarLayout>
