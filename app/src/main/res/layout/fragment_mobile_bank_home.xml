<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="vm"
            type="net.iGap.mobileBank.viewmoedel.MobileBankHomeViewModel" />
    </data>

    <LinearLayout android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/IGapRootViewStyle"
        tools:context=".mobileBank.view.MobileBankHomeFragment">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/toolbar_height" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/lytTop"
                    layout="@layout/mobile_bank_top"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/lblCards"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="?iGapTitleTextColor"
                    android:textSize="@dimen/standardTextSize"
                    android:text="@string/cards"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lytTop"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp20" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vpCards"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp200"
                    android:paddingRight="@dimen/dp32"
                    android:paddingLeft="@dimen/dp32"
                    android:layout_marginTop="@dimen/dp12"
                    android:clipToPadding="false"
                    android:layoutDirection="ltr"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lblCards" />

                <LinearLayout
                    android:id="@+id/lytIndicators"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:padding="@dimen/dp4"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layoutDirection="ltr"
                    android:layout_height="@dimen/dp32"
                    app:layout_constraintStart_toStartOf="@id/vpCards"
                    app:layout_constraintEnd_toEndOf="@id/vpCards"
                    app:layout_constraintTop_toBottomOf="@id/vpCards" />

                <LinearLayout
                    android:id="@+id/btnMoneyTransfer"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/toolbar_height"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:onClick="@{()-> vm.OnTransferMoneyClicked()}"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintTop_toBottomOf="@id/lytIndicators"
                    app:layout_constraintEnd_toStartOf="@id/btnTransactions"
                    app:layout_constraintStart_toStartOf="@id/lblCards"
                    app:layout_constraintBottom_toTopOf="@id/btnTemporaryPass"
                    android:layout_marginBottom="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp44"
                    android:background="@drawable/shape_gray_round_stroke">

                    <TextView
                        android:layout_width="@dimen/dp28"
                        android:layout_height="@dimen/dp28"
                        style="@style/myIconTextViewStyleGray"
                        android:text="@string/wallet_icon" />

                    <TextView
                        android:textSize="@dimen/standardTextSize"
                        android:textColor="?iGapSubtitleTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transfer_mony"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/dp6"
                        android:layout_marginRight="@dimen/dp6" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnTransactions"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/toolbar_height"
                    app:layout_constraintEnd_toEndOf="@id/lblCards"
                    app:layout_constraintStart_toEndOf="@id/btnMoneyTransfer"
                    app:layout_constraintTop_toTopOf="@id/btnMoneyTransfer"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginStart="@dimen/dp16"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:onClick="@{()->vm.OnTransactionsClicked()}"
                    android:background="@drawable/shape_gray_round_stroke">

                    <TextView
                        android:layout_width="@dimen/dp28"
                        android:layout_height="@dimen/dp28"
                        style="@style/myIconTextViewStyleGray"
                        android:text="@string/wallet_icon" />

                    <TextView
                        android:textSize="@dimen/standardTextSize"
                        android:textColor="?iGapSubtitleTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transactions"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/dp6"
                        android:layout_marginRight="@dimen/dp6" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnTemporaryPass"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/toolbar_height"
                    app:layout_constraintEnd_toStartOf="@id/btnTakeTurn"
                    app:layout_constraintStart_toStartOf="@id/btnMoneyTransfer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnMoneyTransfer"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp16"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:onClick="@{()->vm.OnTemporaryPassClicked()}"
                    android:background="@drawable/shape_gray_round_stroke">

                    <TextView
                        android:layout_width="@dimen/dp28"
                        android:layout_height="@dimen/dp28"
                        style="@style/myIconTextViewStyleGray"
                        android:text="@string/wallet_icon" />

                    <TextView
                        android:textSize="@dimen/smallTextSize"
                        android:textColor="?iGapSubtitleTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/temporary_password"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/dp6"
                        android:layout_marginRight="@dimen/dp6" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnTakeTurn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/toolbar_height"
                    app:layout_constraintEnd_toEndOf="@id/lblCards"
                    app:layout_constraintStart_toEndOf="@id/btnTemporaryPass"
                    app:layout_constraintTop_toTopOf="@id/btnTemporaryPass"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginStart="@dimen/dp16"
                    android:gravity="center"
                    android:onClick="@{()->vm.OnShebaClicked()}"
                    android:background="@drawable/shape_gray_round_stroke">

                    <TextView
                        android:layout_width="@dimen/dp28"
                        android:layout_height="@dimen/dp28"
                        style="@style/myIconTextViewStyleGray"
                        android:text="@string/wallet_icon" />

                    <TextView
                        android:textSize="@dimen/standardTextSize"
                        android:textColor="?iGapSubtitleTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sheba_number"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/dp6"
                        android:layout_marginRight="@dimen/dp6" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </LinearLayout>

</layout>