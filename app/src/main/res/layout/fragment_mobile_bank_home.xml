<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="vm"
            type="net.iGap.mobileBank.viewmoedel.MobileBankHomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/IGapRootViewStyle"
        tools:context=".mobileBank.view.MobileBankHomeFragment">

        <include
            android:id="@+id/lytTop"
            layout="@layout/mobile_bank_top" />

        <TextView
            android:id="@+id/lblCards"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?iGapTitleTextColor"
            android:textSize="@dimen/standardTextSize"
            android:text="@string/cards"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lytTop"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpCards"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp200"
            android:paddingRight="@dimen/dp32"
            android:paddingLeft="@dimen/dp32"
            android:layout_marginTop="@dimen/dp6"
            android:clipToPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblCards" />

        <TextView
            android:id="@+id/lblCashout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?iGapPrimaryIconTextColor"
            android:textSize="@dimen/standardTextSize"
            android:text="@string/withdraw"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginStart="@dimen/dp16"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintEnd_toStartOf="@id/lblBalance"
            app:layout_constraintStart_toStartOf="@id/lblCards"
            app:layout_constraintTop_toBottomOf="@id/vpCards"
            android:layout_marginTop="@dimen/dp12" />

        <TextView
            android:id="@+id/lblBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?iGapPrimaryIconTextColor"
            android:textSize="@dimen/standardTextSize"
            android:text="@string/Inventory"
            app:layout_constraintEnd_toStartOf="@id/lblDeposit"
            app:layout_constraintStart_toEndOf="@id/lblCashout"
            app:layout_constraintTop_toTopOf="@id/lblCashout" />

        <TextView
            android:id="@+id/lblDeposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?iGapPrimaryIconTextColor"
            android:textSize="@dimen/standardTextSize"
            android:text="@string/deposit"
            android:layout_marginRight="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            app:layout_constraintEnd_toEndOf="@id/lblCards"
            app:layout_constraintStart_toEndOf="@id/lblBalance"
            app:layout_constraintTop_toTopOf="@id/lblCashout" />


        <TextView
            android:id="@+id/tvCashout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?iGapTitleTextColor"
            android:textSize="@dimen/standardTextSize"
            tools:text="11,548,000"
            android:text="-"
            android:layout_marginTop="@dimen/dp16"
            app:layout_constraintStart_toStartOf="@id/lblCashout"
            app:layout_constraintEnd_toEndOf="@id/lblCashout"
            app:layout_constraintTop_toBottomOf="@id/lblCashout" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?iGapTitleTextColor"
            android:textSize="@dimen/standardTextSize"
            tools:text="11,548,000"
            android:text="-"
            app:layout_constraintStart_toStartOf="@id/lblBalance"
            app:layout_constraintEnd_toEndOf="@id/lblBalance"
            app:layout_constraintTop_toTopOf="@id/tvCashout" />

        <TextView
            android:id="@+id/tvDeposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?iGapTitleTextColor"
            android:textSize="@dimen/standardTextSize"
            tools:text="11,548,000"
            android:text="-"
            app:layout_constraintStart_toStartOf="@id/lblDeposit"
            app:layout_constraintEnd_toEndOf="@id/lblDeposit"
            app:layout_constraintTop_toTopOf="@id/tvCashout" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMoneyTransfer"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            app:layout_constraintEnd_toStartOf="@id/btnTransactions"
            app:layout_constraintStart_toStartOf="@id/lblCards"
            app:layout_constraintTop_toBottomOf="@id/tvCashout"
            android:layout_marginTop="@dimen/dp32"
            style="@style/iGapButton"
            android:text="@string/transfer_mony"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTransactions"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            app:layout_constraintEnd_toEndOf="@id/lblCards"
            app:layout_constraintStart_toEndOf="@id/btnMoneyTransfer"
            app:layout_constraintTop_toTopOf="@id/btnMoneyTransfer"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginStart="@dimen/dp16"
            style="@style/iGapButton"
            android:text="@string/transactions"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTemporaryPass"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            app:layout_constraintEnd_toStartOf="@id/btnTakeTurn"
            app:layout_constraintStart_toStartOf="@id/btnMoneyTransfer"
            app:layout_constraintTop_toBottomOf="@id/btnMoneyTransfer"
            android:layout_marginTop="@dimen/dp16"
            style="@style/iGapButton"
            android:textSize="@dimen/smallTextSize"
            android:text="@string/temporary_password"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTakeTurn"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            app:layout_constraintEnd_toEndOf="@id/lblCards"
            app:layout_constraintStart_toEndOf="@id/btnTemporaryPass"
            app:layout_constraintTop_toTopOf="@id/btnTemporaryPass"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginStart="@dimen/dp16"
            style="@style/iGapButton"
            android:text=""/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>