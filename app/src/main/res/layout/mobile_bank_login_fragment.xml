<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="net.iGap.mobileBank.viewmoedel.MobileBankLoginViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mobileBank.view.MobileBankLoginFragment">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/toolbar_height"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingBottom="@dimen/dp16">

             <ImageView
                 android:id="@+id/ivLogo"
                 android:layout_width="@dimen/dp140"
                 android:layout_height="@dimen/dp140"
                 android:src="@drawable/bank_logo_parsian"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 android:layout_marginTop="@dimen/dp20" />

             <TextView
                 android:id="@+id/lblUsername"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:text="@string/user_name"
                 android:textSize="@dimen/standardTextSize"
                 android:textColor="?iGapSubtitleTextColor"
                 app:layout_constraintStart_toStartOf="@id/edtUserName"
                 app:layout_constraintEnd_toEndOf="@id/edtUserName"
                 app:layout_constraintTop_toBottomOf="@id/ivLogo"
                 android:gravity="start"
                 android:layout_marginTop="@dimen/dp40" />

             <androidx.appcompat.widget.AppCompatEditText
                 android:id="@+id/edtUserName"
                 android:layout_width="@dimen/dp240"
                 android:layout_height="@dimen/dp44"
                 android:singleLine="true"
                 android:gravity="start|center_vertical"
                 style="@style/iGapEditTextStyle"
                 android:paddingLeft="@dimen/dp10"
                 android:paddingRight="@dimen/dp10"
                 app:layout_constraintStart_toStartOf="@id/ivLogo"
                 app:layout_constraintEnd_toEndOf="@id/ivLogo"
                 app:layout_constraintTop_toBottomOf="@id/lblUsername"
                 android:layout_marginTop="@dimen/dp10"
                 android:background="@drawable/shape_gray_round_stroke" />

             <TextView
                 android:id="@+id/lblPassword"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:text="@string/password"
                 android:textSize="@dimen/standardTextSize"
                 android:textColor="?iGapSubtitleTextColor"
                 app:layout_constraintStart_toStartOf="@id/edtUserName"
                 app:layout_constraintEnd_toEndOf="@id/edtUserName"
                 app:layout_constraintTop_toBottomOf="@id/edtUserName"
                 android:gravity="start"
                 android:layout_marginTop="@dimen/dp18" />

             <androidx.appcompat.widget.AppCompatEditText
                 android:id="@+id/edtPassword"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/dp44"
                 android:singleLine="true"
                 style="@style/iGapEditTextStyle"
                 android:gravity="start|center_vertical"
                 android:inputType="textPassword"
                 android:paddingEnd="@dimen/dp40"
                 android:paddingRight="@dimen/dp40"
                 android:paddingLeft="@dimen/dp10"
                 android:paddingStart="@dimen/dp10"
                 app:layout_constraintStart_toStartOf="@id/edtUserName"
                 app:layout_constraintEnd_toEndOf="@id/edtUserName"
                 app:layout_constraintTop_toBottomOf="@id/lblPassword"
                 android:layout_marginTop="@dimen/dp10"
                 android:background="@drawable/shape_gray_round_stroke" />

             <TextView
                 android:layout_width="@dimen/dp26"
                 android:layout_height="wrap_content"
                 app:layout_constraintEnd_toEndOf="@id/edtPassword"
                 app:layout_constraintTop_toTopOf="@id/edtPassword"
                 app:layout_constraintBottom_toBottomOf="@id/edtPassword"
                 style="@style/myIconTextViewStyle"
                 android:text="@string/eye_icon"
                 android:layout_marginLeft="@dimen/dp10"
                 android:layout_marginRight="@dimen/dp10" />

             <Button
                 android:id="@+id/btnLogin"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/dp52"
                 app:layout_constraintStart_toStartOf="@id/edtUserName"
                 app:layout_constraintEnd_toEndOf="@id/edtUserName"
                 app:layout_constraintTop_toBottomOf="@id/edtPassword"
                 style="@style/iGapButton"
                 android:text="@string/login"
                 android:layout_marginTop="@dimen/dp40" />

             <TextView
                 android:id="@+id/tvForgot"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 app:layout_constraintStart_toStartOf="@id/edtUserName"
                 app:layout_constraintEnd_toEndOf="@id/edtUserName"
                 app:layout_constraintTop_toBottomOf="@id/btnLogin"
                 android:layout_marginTop="@dimen/dp10"
                 android:layout_marginBottom="@dimen/dp16"
                 android:textSize="@dimen/smallTextSize"
                 android:textColor="?iGapSubtitleTextColor"
                 android:text="@string/forgot_password" />

         </androidx.constraintlayout.widget.ConstraintLayout>

     </ScrollView>

    </LinearLayout>

</layout>