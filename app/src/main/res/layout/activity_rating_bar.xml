<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:id="@+id/arb_layout_root"
    android:gravity="center"
    android:orientation="vertical"
    >


  <LinearLayout
      android:id="@+id/arb_layout_rate"
      android:layout_width="@dimen/dp280"
      android:layout_height="@dimen/dp240"
      android:background="@color/white"
      android:orientation="vertical"
      android:padding="@dimen/dp4"
      >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Call Quality"
        android:layout_margin="@dimen/dp4"
        android:textSize="@dimen/dp24"
        android:textColor="@color/black90"
        />
    <RatingBar
        android:id="@+id/arb_ratingBar_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp12"
        android:numStars="5"
        android:rating="5"
        android:stepSize="1"
        />
    <EditText
        android:id="@+id/arb_edt_resone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLines="2"
        android:textColor="@color/black90"
        android:visibility="invisible"
        android:hint="@string/please_write_your_reasons"
        android:textColorHint="@color/gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal"
        >
      <Button
          android:id="@+id/arb_btn_cancel"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:backgroundTint="@color/iGapColor"
          android:layout_marginRight="2dp"
          android:layout_weight="1"
          android:textColor="@color/white"
          android:text="@string/B_cancel"
          />
      <Button
          android:id="@+id/arb_btn_ok"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="2dp"
          android:backgroundTint="@color/iGapColor"
          android:textColor="@color/white"
          android:layout_weight="1"
          android:text="@string/B_ok"
          />
    </LinearLayout>


  </LinearLayout>


</LinearLayout>