<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="?backgroundColorSettingTheme"
    tools:ignore="MissingPrefix">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/fc_layot_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:background="@color/green"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <net.iGap.libs.rippleeffect.RippleView
                android:id="@+id/fc_sticker_ripple_txtBack"
                rv_centered="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:rv_alpha="200"
                app:rv_centered="true"
                app:rv_rippleDuration="10"
                app:rv_ripplePadding="5dp">

                <net.iGap.module.MaterialDesignTextView
                    android:layout_width="@dimen/dp52"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/md_back_arrow"
                    android:textAppearance="@style/TextIconAppearance_toolbar"
                    android:textColor="@color/whit_background" />
            </net.iGap.libs.rippleeffect.RippleView>

            <TextView
                fontPath="fonts/IRANSansMobile_Bold.ttf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp18"
                android:visibility="visible" />

            <net.iGap.module.MaterialDesignTextView
                android:id="@+id/iconAddSticker"
                android:layout_width="@dimen/dp24"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/md_add_plus_button"
                android:textAppearance="@style/TextIconAppearance_toolbar"
                android:textColor="@color/whit_background" />
            <TextView
                android:id="@+id/txtAddSticker"
                fontPath="fonts/IRANSansMobile_Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="@string/Add"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp18"
                android:layout_marginEnd="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:visibility="visible" />


        </LinearLayout>

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcvAddStickerDialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/progress_stricker"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</LinearLayout>