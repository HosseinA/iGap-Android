<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginEnd="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintDimensionRatio="3:1"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/kuknos_WH_itembg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <net.iGap.module.RadiusImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@mipmap/logo"
                android:layout_marginRight="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginTop="@dimen/dp8"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.3"/>


            <androidx.appcompat.widget.AppCompatTextView
                style="?textTitleColorSettingTheme"
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp24"
                android:text="Source"
                android:textSize="@dimen/dp12"
                android:textColor="@color/news_red"
                android:justificationMode="inter_word"
                android:gravity="center|right"
                android:layout_marginRight="@dimen/dp8"
                app:layout_constraintTop_toTopOf="@+id/image"
                app:layout_constraintRight_toLeftOf="@+id/image"
                app:layout_constraintBottom_toTopOf="@+id/rootTitle"
                app:layout_constraintVertical_chainStyle="packed"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="?textTitleColorSettingTheme"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp24"
                android:text="date"
                android:textSize="@dimen/dp12"
                android:justificationMode="inter_word"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp8"
                app:layout_constraintTop_toTopOf="@+id/source"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintVertical_chainStyle="packed"/>


            <androidx.appcompat.widget.AppCompatTextView
                style="?textTitleColorSettingTheme"
                android:id="@+id/rootTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp24"
                android:text="Root Title"
                android:textSize="@dimen/dp12"
                android:justificationMode="inter_word"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center|right"
                android:layout_marginTop="@dimen/dp8"
                app:layout_constraintRight_toRightOf="@+id/source"
                app:layout_constraintTop_toBottomOf="@+id/source"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/title"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="?textTitleColorSettingTheme"
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp24"
                android:text="Title"
                android:textSize="@dimen/dp14"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:justificationMode="inter_word"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center|right"
                android:layout_marginTop="@dimen/dp4"
                app:layout_constraintRight_toRightOf="@+id/source"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rootTitle"
                app:layout_constraintBottom_toBottomOf="@+id/image"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>