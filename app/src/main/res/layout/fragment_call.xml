<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  style="?backgroundColorSettingTheme"
  android:clickable="true"
  android:orientation="vertical"
  tools:ignore="MissingPrefix">


  <android.support.design.widget.AppBarLayout
      android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:id="@+id/fc_layot_title"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp60"
      android:background="@color/green"
      android:visibility="gone"
      android:layoutDirection="ltr"
      android:orientation="horizontal">

      <net.iGap.libs.rippleeffect.RippleView
        android:id="@+id/fc_call_ripple_txtBack"
        rv_centered="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:rv_alpha="200"
        app:rv_centered="true"
        app:rv_rippleDuration="0"
        app:rv_ripplePadding="5dp">

        <net.iGap.module.MaterialDesignTextView
          android:layout_width="@dimen/dp52"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="@string/md_back_arrow"
          android:textAppearance="@style/TextIconAppearance_toolbar"
          android:textColor="@color/whit_background" />
      </net.iGap.libs.rippleeffect.RippleView>

      <TextView
        fontPath="fonts/IRANSansMobile_Bold.ttf"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center|left"
        android:singleLine="true"
        android:text="@string/calls"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp18"
        android:visibility="visible" />


      <net.iGap.module.MaterialDesignTextView
        android:id="@+id/fc_btn_menu"
        android:layout_width="@dimen/dp52"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/md_show_more_button"
        android:textAppearance="@style/TextIconAppearance_toolbar"
        android:textColor="@color/whit_background" />


    </LinearLayout>

  </android.support.design.widget.AppBarLayout>

  <LinearLayout
      android:id="@+id/fc_layout_toolbar"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="@dimen/toolbar_height">

  </LinearLayout>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <HorizontalScrollView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layoutDirection="locale"
          android:scrollbars="none">

        <LinearLayout
            android:id="@+id/fc_layout_calls_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="locale"
            android:gravity="center">

          <TextView
              android:id="@+id/fc_btn_all_calls"
              android:minWidth="@dimen/dp88"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/all"
              android:gravity="center"
              android:textSize="@dimen/standardTextSize"
              android:paddingBottom="3dp"
              android:paddingTop="3dp"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"
              android:singleLine="true"
              android:background="@drawable/round_button_enabled_bg"
              android:textColor="@color/white"
              android:layout_margin="@dimen/dp6"/>

          <TextView
              android:id="@+id/fc_btn_missed_calls"
              android:minWidth="@dimen/dp88"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/missed"
              android:gravity="center"
              android:textSize="@dimen/standardTextSize"
              android:paddingBottom="3dp"
              android:paddingTop="3dp"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"
              android:singleLine="true"
              android:background="@drawable/round_button_disabled_bg"
              android:textColor="@color/white"
              android:layout_margin="@dimen/dp6"/>

          <TextView
              android:id="@+id/fc_btn_incoming_calls"
              android:minWidth="@dimen/dp88"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/incoming"
              android:gravity="center"
              android:textSize="@dimen/standardTextSize"
              android:paddingBottom="3dp"
              android:paddingTop="3dp"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"
              android:singleLine="true"
              android:background="@drawable/round_button_disabled_bg"
              android:textColor="@color/white"
              android:layout_margin="@dimen/dp6"/>

          <TextView
              android:id="@+id/fc_btn_canceled_calls"
              android:minWidth="@dimen/dp88"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/canceled"
              android:gravity="center"
              android:textSize="@dimen/standardTextSize"
              android:paddingBottom="3dp"
              android:paddingTop="3dp"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"
              android:singleLine="true"
              android:background="@drawable/round_button_disabled_bg"
              android:textColor="@color/white"
              android:layout_margin="@dimen/dp6"/>

          <TextView
              android:id="@+id/fc_btn_outgoing_calls"
              android:minWidth="@dimen/dp88"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/outgoing"
              android:gravity="center"
              android:textSize="@dimen/standardTextSize"
              android:paddingBottom="3dp"
              android:paddingTop="3dp"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"
              android:singleLine="true"
              android:background="@drawable/round_button_disabled_bg"
              android:textColor="@color/white"
              android:layout_margin="@dimen/dp6"/>

        </LinearLayout>

      </HorizontalScrollView>

      <android.support.v7.widget.RecyclerView
          android:id="@+id/fc_recycler_view_call"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
      android:id="@+id/fc_fab_contact_list"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|end"
      android:layout_margin="@dimen/dp12"
      app:backgroundTint="@color/green"
      app:elevation="@dimen/dp6"
      app:srcCompat="@drawable/ic_call_black_24dp" />

    <ProgressBar
        android:id="@+id/pb_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:padding="@dimen/dp4"
        android:visibility="visible" />

    <ProgressBar
      android:id="@+id/fc_progress_bar_waiting"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center|bottom"
      android:indeterminate="true"
      android:padding="@dimen/dp4"
      android:visibility="gone" />

    <LinearLayout
      android:id="@+id/empty_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical">

      <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="@dimen/dp10">

          <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_icCall"
            android:layout_width="@dimen/dp160"
            android:layout_height="@dimen/dp160"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_call" />

          <TextView
            android:id="@+id/textEmptyCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp52"
            android:layout_marginTop="@dimen/dp20"
            android:text="@string/empty_call"
            style="?textTitleColorSettingTheme"
            android:textSize="@dimen/dp18" />
        </LinearLayout>
      </ScrollView>
    </LinearLayout>
  </FrameLayout>
</LinearLayout>