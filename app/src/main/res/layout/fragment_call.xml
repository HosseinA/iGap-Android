<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    >


  <LinearLayout
      android:id="@+id/fc_layot_title"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp60"
      android:background="@color/green"
      android:orientation="horizontal"
      >

    <net.iGap.libs.rippleeffect.RippleView
        android:id="@+id/fc_call_ripple_txtBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:rv_alpha="200"
        app:rv_centered="true"
        app:rv_rippleDuration="0"
        app:rv_ripplePadding="5dp"
        rv_centered="true"
        >

      <net.iGap.module.MaterialDesignTextView
          android:layout_width="@dimen/dp52"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="@string/md_back_arrow"
          android:textAppearance="@style/TextIconAppearance_toolbar"
          android:textColor="@color/whit_background"
          />
    </net.iGap.libs.rippleeffect.RippleView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dp52"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/calls"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp18"
        android:visibility="visible"
        />


  </LinearLayout>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fc_recycler_view_call"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dp6"
        />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fc_fab_contact_list"
        android:layout_margin="@dimen/dp12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/single_chat"
        android:layout_gravity="bottom|right"
        app:backgroundTint="@color/green"
        app:elevation="@dimen/dp6"
        />


  </FrameLayout>
</LinearLayout>