<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:padding="@dimen/dp4">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.iGap.module.MaterialDesignTextView
            android:id="@+id/cm_icon_mute_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/md_muted"
            android:textAppearance="@style/TextIconAppearance.all"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/gray_6c"
            android:textSize="@dimen/sp26"
            />

        <TextView
            android:id="@+id/cm_txt_mute_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp16"
            android:paddingBottom="@dimen/dp12"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingStart="@dimen/dp60"
            android:paddingLeft="@dimen/dp60"
            android:paddingRight="@dimen/dp60"
            android:paddingEnd="@dimen/dp60"

            android:text="@string/mute_notification"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp14"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.iGap.module.MaterialDesignTextView
            android:textAppearance="@style/TextIconAppearance.all"
            android:id="@+id/cm_icon_clear_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/md_clearHistory"
            android:textColor="@color/gray_6c"
            android:textSize="@dimen/sp26"
            />

        <TextView
            android:id="@+id/cm_txt_clear_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp16"
            android:paddingBottom="@dimen/dp12"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingStart="@dimen/dp60"
            android:paddingLeft="@dimen/dp60"
            android:paddingRight="@dimen/dp60"
            android:paddingEnd="@dimen/dp60"
            android:text="@string/clear_history"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp14"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.iGap.module.MaterialDesignTextView
            android:textAppearance="@style/TextIconAppearance.all"
            android:id="@+id/cm_icon_delete_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_alignParentLeft="true"
            android:paddingTop="@dimen/dp8"
            android:layout_alignParentStart="true"
            android:text="@string/md_rubbish_bin"
            android:textColor="@color/gray_6c"
            android:textSize="@dimen/sp26"
            />

        <TextView
            android:id="@+id/cm_txt_delete_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp16"
            android:paddingBottom="@dimen/dp8"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:paddingStart="@dimen/dp60"
            android:paddingLeft="@dimen/dp60"
            android:paddingRight="@dimen/dp60"
            android:paddingEnd="@dimen/dp60"
            android:layout_toEndOf="@+id/cm_icon_delete_chat"
            android:layout_toRightOf="@+id/cm_icon_delete_chat"
            android:text="@string/to_delete_chat"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp14"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/cm_txt_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="@dimen/dp12"
        android:text="@string/cancel"
        android:textColor="@color/green"
        android:textSize="@dimen/sp14"/>


</LinearLayout>
