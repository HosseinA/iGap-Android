<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:ignore="MissingPrefix"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TextView
        android:id="@+id/cm_icon_mute_pinToTop"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/md_pin"
        android:textColor="@color/grayNew"
        android:textSize="@dimen/dp26"
        fontPath="fonts/iGap_font2.ttf"
        />

    <TextView
        android:id="@+id/cm_txt_mute_pinToTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/dialog_item_style"
        android:text="@string/pin_to_top"
        android:textColor="@color/black90"
        android:textSize="@dimen/dp14"
        />

  </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <net.iGap.module.MaterialDesignTextView
        android:id="@+id/cm_icon_mute_notification"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/md_muted"
        android:textAppearance="@style/TextIconAppearance.all"
        android:textColor="@color/grayNew"
        android:textSize="@dimen/dp26"
        />

    <TextView
        android:id="@+id/cm_txt_mute_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/dialog_item_style"
        android:text="@string/mute_notification"
        android:textColor="@color/black90"
        android:textSize="@dimen/dp14"
        />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <net.iGap.module.MaterialDesignTextView
        android:id="@+id/cm_icon_clear_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/md_clearHistory"
        android:textAppearance="@style/TextIconAppearance.all"
        android:textColor="@color/grayNew"
        android:textSize="@dimen/dp26"
        />

    <TextView
        android:id="@+id/cm_txt_clear_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/dialog_item_style"
        android:text="@string/clear_history"
        android:textColor="@color/black90"
        android:textSize="@dimen/dp14"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <net.iGap.module.MaterialDesignTextView
        android:id="@+id/cm_icon_delete_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/md_rubbish_bin"
        android:textAppearance="@style/TextIconAppearance.all"
        android:textColor="@color/grayNew"
        android:textSize="@dimen/dp26"
        />

    <TextView
        android:id="@+id/cm_txt_delete_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/dialog_item_style"
        android:text="@string/to_delete_chat"
        android:textColor="@color/black90"
        android:textSize="@dimen/dp14"
        />

  </LinearLayout>

