<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/dp28"
    android:paddingLeft="@dimen/dp28"
    android:paddingRight="@dimen/dp28"
    android:paddingStart="@dimen/dp28">

    <ImageView
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginStart="@dimen/dp8"
        android:contentDescription="@null"
        android:src="@drawable/item_divider_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp16"
        android:orientation="horizontal">

        <com.iGap.module.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:src="@drawable/sample" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginStart="@dimen/dp8"
            android:orientation="vertical">

            <com.iGap.module.CustomTextViewMedium
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp12" />

            <com.iGap.module.CustomTextViewMedium
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="Last seen recently"
                android:textColor="#bbbbbb"
                android:textSize="@dimen/sp10" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>