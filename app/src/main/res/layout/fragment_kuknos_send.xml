<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="net.iGap.kuknos.viewmodel.KuknosSendVM" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="?backgroundColorSettingTheme">

        <!-- TODO clean min height-->

        <LinearLayout
            android:id="@+id/fragKuknosSToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:minHeight="48dp"
            android:background="@color/sky_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragKuknosSToolbar">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp">

                <android.support.design.widget.TextInputLayout
                    style="?textTitleColorSettingTheme"
                    android:id="@+id/fragKuknosSWalletAddressHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toStartOf="@+id/fragKuknosSQRCode"
                    app:layout_constraintStart_toStartOf="@+id/fragKuknosSTextHolder"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed">
                    <android.support.v7.widget.AppCompatEditText
                        style="?textTitleColorSettingTheme"
                        android:id="@+id/fragKuknosSWalletAddressET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:ems="10"
                        android:hint="@string/kuknos_send_walletAddress"
                        android:text="@={viewmodel.walletID}"
                        android:textSize="20dp"
                        android:gravity="start|center"
                        android:scrollbars="vertical"
                        android:scrollHorizontally="false"
                        android:minLines="1"
                        android:maxLines="4"
                        android:inputType="textMultiLine"
                        android:imeOptions="actionNext"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatTextView
                    style="@style/myIconTextViewStyleGray"
                    android:id="@+id/fragKuknosSQRCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_qr_code_icon"
                    android:gravity="center"
                    android:textSize="@dimen/dp36"
                    android:onClick="@{()->viewmodel.QrcodeScan()}"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:layout_constraintTop_toTopOf="@+id/fragKuknosSWalletAddressHolder"
                    app:layout_constraintBottom_toBottomOf="@+id/fragKuknosSWalletAddressHolder"
                    app:layout_constraintEnd_toEndOf="@+id/fragKuknosSTextHolder"
                    app:layout_constraintStart_toEndOf="@+id/fragKuknosSWalletAddressHolder"/>

                <android.support.design.widget.TextInputLayout
                    style="?textTitleColorSettingTheme"
                    android:id="@+id/fragKuknosSTextHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosSWalletAddressHolder"
                    app:layout_constraintWidth_percent="0.7">
                    <android.support.v7.widget.AppCompatEditText
                        style="?textTitleColorSettingTheme"
                        android:id="@+id/fragKuknosSTextET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:maxLines="1"
                        android:minHeight="48dp"
                        android:ems="10"
                        android:enabled="false"
                        android:hint="@string/kuknos_send_text"
                        android:text="@={viewmodel.text}"
                        android:textSize="20dp"
                        android:gravity="start|center"
                        android:inputType="text"
                        android:imeOptions="actionNext" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    style="?textTitleColorSettingTheme"
                    android:id="@+id/fragKuknosSAmountHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toStartOf="@+id/fragKuknosSCurrency"
                    app:layout_constraintStart_toStartOf="@+id/fragKuknosSTextHolder"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosSTextHolder"
                    app:layout_constraintHorizontal_chainStyle="packed">
                    <android.support.v7.widget.AppCompatEditText
                        style="?textTitleColorSettingTheme"
                        android:id="@+id/fragKuknosSAmountET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:maxLines="1"
                        android:minHeight="48dp"
                        android:ems="10"
                        android:enabled="false"
                        android:hint="@string/kuknos_send_amount"
                        android:text="@={viewmodel.amount}"
                        android:textSize="20dp"
                        android:gravity="start|center"
                        android:inputType="numberDecimal"
                        android:digits="0123456789."
                        android:imeOptions="actionDone" />
                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragKuknosSCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={viewmodel.currency}"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@+id/fragKuknosSAmountHolder"
                    app:layout_constraintBottom_toBottomOf="@+id/fragKuknosSAmountHolder"
                    app:layout_constraintEnd_toEndOf="@+id/fragKuknosSTextHolder"
                    app:layout_constraintStart_toEndOf="@+id/fragKuknosSAmountHolder"
                    app:layout_constraintVertical_bias="0.7"/>

                <android.support.design.button.MaterialButton
                    style="?iGapButton"
                    android:id="@+id/fragKuknosSSubmit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:minHeight="58dp"
                    android:text="@string/kuknos_send_sendBtn"
                    android:textSize="18dp"
                    android:onClick="@{()->viewmodel.sendCredit()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosSAmountHolder"
                    app:layout_constraintWidth_percent="0.6"/>

                <ProgressBar
                    android:id="@+id/fragKuknosSProgressV"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:elevation="2dp"
                    android:visibility="visible"
                    app:layout_constraintTop_toTopOf="@+id/fragKuknosSSubmit"
                    app:layout_constraintStart_toStartOf="@+id/fragKuknosSSubmit"
                    app:layout_constraintEnd_toEndOf="@+id/fragKuknosSSubmit"
                    app:layout_constraintBottom_toBottomOf="@+id/fragKuknosSSubmit"
                    app:layout_constraintHorizontal_bias="0.05"
                    app:layout_constraintHeight_percent="0.08"/>

            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</layout>