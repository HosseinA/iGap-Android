<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/type6_card0"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/discovery_margin"
        android:layout_weight="6"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="@dimen/discovery_radius">

        <ImageView
            android:id="@+id/type6_img0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@color/color_default_discovery_cards"

            />


        <net.iGap.module.MaterialDesignTextView
            android:id="@+id/type6_tick0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/md_tick"
            android:visibility="gone"
            android:textColor="@color/white"
            android:background="@color/tick_background_color"
            android:textAppearance="@style/TextIconAppearance_toolbar" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_margin="@dimen/discovery_margin"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/type6_card1"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="@dimen/discovery_radius">

            <ImageView
                android:id="@+id/type6_img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/color_default_discovery_cards" />

            <net.iGap.module.MaterialDesignTextView
                android:id="@+id/type6_tick1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/md_tick"
                android:visibility="gone"
                android:textColor="@color/white"
                android:background="@color/tick_background_color"
                android:textAppearance="@style/TextIconAppearance_toolbar" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/type6_card2"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/discovery_margin_top_nested"
            android:layout_weight="1"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="@dimen/discovery_radius">

            <ImageView
                android:id="@+id/type6_img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/color_default_discovery_cards" />

            <net.iGap.module.MaterialDesignTextView
                android:id="@+id/type6_tick2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/md_tick"
                android:visibility="gone"
                android:textColor="@color/white"
                android:background="@color/tick_background_color"
                android:textAppearance="@style/TextIconAppearance_toolbar" />

        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>