<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp60"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/smsl_fl_contain_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/smslf_imv_icon_file"
                android:layout_width="@dimen/dp48"
                android:layout_height="@dimen/dp48"
                android:layout_margin="@dimen/dp8"
                android:src="@mipmap/doc_blue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/smslf_txt_file_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp12"
                    android:singleLine="true"
                    android:text="New Text"
                    android:textSize="@dimen/sp14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/smslf_btn_file_state"
                        android:layout_width="@dimen/sp22"
                        android:layout_height="@dimen/sp22"
                        android:background="@null"
                        android:text="@string/fa_arrow_down"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/smslf_txt_file_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp8"
                        android:singleLine="true"
                        android:text="New Text"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray" />

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>

</LinearLayout>