<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stchf_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.iGap.fragments.FragmentFullChatBackground">

    <android.support.v7.widget.Toolbar
        android:id="@+id/stcbf_backgroundToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="@color/toolbar_background"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_collapseMode="pin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/stcbf_txt_titleToolbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/st_title_Background"
                android:textColor="@color/whit_background"
                android:textSize="@dimen/sp22"
                android:textStyle="bold"
                android:visibility="visible" />


            <com.iGap.libs.rippleeffect.RippleView
                android:id="@+id/stcbf_ripple_back"
                rv_centered="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rv_alpha="200"
                app:rv_centered="true"
                app:rv_rippleDuration="150"
                app:rv_ripplePadding="5dp">

                <TextView
                    android:id="@+id/stcbf_txt_back"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="@string/fa_chevron_left"
                    android:textColor="@color/whit_background"
                    android:textSize="@dimen/sp22" />

            </com.iGap.libs.rippleeffect.RippleView>

            <com.iGap.libs.rippleeffect.RippleView
                android:id="@+id/stcbf_ripple_set"
                rv_centered="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rv_alpha="200"
                app:rv_centered="true"
                app:rv_rippleDuration="150"
                android:layout_alignParentRight="true"
                app:rv_ripplePadding="5dp">

                <com.iGap.module.MaterialDesignTextView
                    android:id="@+id/stcbf_txt_set"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:text="@string/md_check_symbol"
                    android:textColor="@color/whit_background"
                    android:textSize="@dimen/sp22" />

            </com.iGap.libs.rippleeffect.RippleView>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <ImageView
        android:id="@+id/stchf_fullImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@mipmap/c" />

</LinearLayout>
