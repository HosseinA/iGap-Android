<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/aaa"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/chl_recycler_view_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:orientation="vertical"
                app:elevation="8dp"
                app:layout_scrollFlags="scroll|enterAlways">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/chl_btn_back"
                        android:layout_width="@dimen/dp60"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:text="@string/fa_chevron_left"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp22" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:paddingRight="@dimen/dp4">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp8"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/chl_txt_mute"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dp4"
                                android:textColor="@color/gray"
                                android:paddingRight="@dimen/dp4"
                                android:text="@string/fa_bell_slash_o"
                                android:textSize="@dimen/sp14"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/chl_txt_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="@dimen/dp240"
                                android:singleLine="true"
                                android:text="New Text"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/sp16" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/chl_txt_last_seen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="New Text"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp12" />

                    </LinearLayout>

                    <com.iGap.module.CircleImageView
                        android:id="@+id/chl_imv_user_picture"
                        android:layout_width="@dimen/dp60"
                        android:layout_height="@dimen/dp60"
                        android:padding="@dimen/dp4"
                        android:src="@mipmap/b" />

                    <Button
                        android:id="@+id/chl_btn_menu"
                        android:layout_width="@dimen/dp60"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:text="@string/fa_ellipsis_v"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp26" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#34a49f"></View>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>
    </android.support.design.widget.CoordinatorLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <Button
                android:id="@+id/chl_btn_smile"
                android:layout_width="@dimen/dp40"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center"
                android:text="@string/fa_smile_o"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp26" />

            <EditText
                android:id="@+id/chl_edt_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="      Type Message"

                android:paddingRight="@dimen/dp4"

                android:textColorHint="@color/gray" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp4"
                android:layout_marginTop="@dimen/dp4"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/chl_btn_send"
                    android:layout_width="@dimen/dp80"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/fa_send"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp26"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/chl_btn_attach"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/fa_paperclip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp26" />

                <Button
                    android:id="@+id/chl_btn_mic"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/fa_microphone"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp26" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
