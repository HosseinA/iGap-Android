<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <import type="android.graphics.Color" />

    <import type="net.iGap.G" />

    <variable
      name="activityManageSpaceViewModel"
      type="net.iGap.viewmodel.ActivityManageSpaceViewModel" />
  </data>
<FrameLayout
    android:id="@+id/dataUsageContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    style="?backgroundColorSettingTheme"
    tools:context="net.iGap.activities.ActivityManageSpace"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:id="@+id/ams_layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:orientation="horizontal"/>

    <android.support.design.widget.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone">

      <android.support.v7.widget.Toolbar
        android:id="@+id/asn_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="@{Color.parseColor(G.appBarColor),default=@color/toolbar_background}"
        android:layoutDirection="ltr"
        android:padding="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"

        >

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

          <net.iGap.libs.rippleeffect.RippleView
            android:id="@+id/stns_ripple_back"
            rv_centered="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rv_alpha="200"
            app:rv_centered="true"
            app:rv_rippleDuration="0"
            app:rv_ripplePadding="5dp">

            <net.iGap.module.MaterialDesignTextView
              android:id="@+id/stns_txt_back"
              android:layout_width="@dimen/dp52"
              android:layout_height="match_parent"
              android:gravity="center"
              android:text="@string/md_back_arrow"
              android:textAppearance="@style/TextIconAppearance_toolbar"
              android:textColor="@color/whit_background" />
          </net.iGap.libs.rippleeffect.RippleView>

          <TextView
            fontPath="fonts/IRANSansMobile_Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/stns_ripple_back"
            android:layout_toRightOf="@+id/stns_ripple_back"
            android:gravity="center"
            android:text="@string/manage_spacing"
            android:textColor="@color/whit_background"
            android:textSize="@dimen/dp18"
            android:textStyle="normal"
            android:visibility="visible" />

        </RelativeLayout>
      </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="?backgroundColorSettingTheme_2">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:paddingTop="@dimen/dp4"
            android:layout_marginTop="@dimen/dp16"
            android:paddingBottom="@dimen/dp12"
            android:singleLine="true"
            android:text="@string/disk_and_network_usage"
            style="?textTitleColorSettingTheme"
            android:textSize="@dimen/largeTextSize"
            android:textStyle="normal"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/vgMobileDataUsage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp52"
            style="?backgroundColorSettingTheme"
            android:orientation="horizontal">


          <TextView
              fontPath="fonts/IRANSansMobile.ttf"
              android:layout_width="0dp"
              android:layout_height="@dimen/dp48"
              android:layout_weight="1"
              android:gravity="center_vertical"
              android:paddingLeft="@dimen/dp16"
              android:paddingRight="@dimen/dp16"
              android:paddingTop="@dimen/dp4"
              android:singleLine="true"
              android:text="@string/wifi_data_usage"
              style="?textTitleColorSettingTheme"
              android:textSize="@dimen/standardTextSize"
              android:textStyle="normal"
              android:visibility="visible" />


        </LinearLayout>

        <LinearLayout android:id="@+id/vgWifiDataUsage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp52"
            style="?backgroundColorSettingTheme"
            android:orientation="horizontal">


          <TextView
              fontPath="fonts/IRANSansMobile.ttf"
              android:layout_width="0dp"
              android:layout_height="@dimen/dp48"
              android:layout_weight="1"
              android:gravity="center_vertical"
              android:paddingLeft="@dimen/dp16"
              android:paddingRight="@dimen/dp16"
              android:paddingTop="@dimen/dp4"
              android:singleLine="true"
              android:text="@string/mobile_data_usage"
              style="?textTitleColorSettingTheme"
              android:textSize="@dimen/standardTextSize"
              android:textStyle="normal"
              android:visibility="visible" />


        </LinearLayout>


        <LinearLayout
          android:id="@+id/st_layout_keepMedia"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp52"
          style="?backgroundColorSettingTheme"
          android:onClick="@{activityManageSpaceViewModel::onClickKeepMedia}"
          android:orientation="horizontal">


          <TextView
            android:id="@+id/st_txt_keepMedia"
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp48"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:paddingTop="@dimen/dp4"
            android:singleLine="true"
            android:text="@string/st_keepMedia"
            style="?textTitleColorSettingTheme"
              android:textSize="@dimen/standardTextSize"
            android:textStyle="normal"
            android:visibility="visible" />

          <TextView
            android:id="@+id/st_txt_sub_keepMedia"
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:text="@{activityManageSpaceViewModel.callbackKeepMedia}"
            android:textColor="@color/setting_items_value_color"
            android:textSize="@dimen/smallTextSize"
            android:textStyle="normal" />
        </LinearLayout>


        <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="?backgroundColorSettingTheme"
            android:visibility="gone">

          <com.uncopt.android.widget.text.justify.JustifiedTextView
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp14"
            android:text="@string/st_dialog_content_keepMedia"
            style="?textTitleColorSettingTheme"
            android:textSize="@dimen/dp12" />
        </RelativeLayout>

        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          style="?lineColorSettingTheme"
          android:layout_margin="@dimen/dp10"/>


      <LinearLayout
          style="?backgroundColorSettingTheme"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingTop="@dimen/dp4"
          android:visibility="visible">

        <TextView
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp12"
            android:paddingTop="@dimen/dp12"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:text="@string/auto_download_media"
            style="?textTitleColorSettingTheme"
            android:textSize="@dimen/largeTextSize"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/st_txt_autoDownloadData"
            style="?textTitleColorSettingTheme"
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:gravity="center_vertical"
            android:onClick="@{activityManageSpaceViewModel::onClickAutoDownloadData}"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:paddingTop="@dimen/dp4"
            android:text="@string/st_auto_download_data"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/st_txt_autoDownloadWifi"
            style="?textTitleColorSettingTheme"
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:gravity="center_vertical"
            android:onClick="@{activityManageSpaceViewModel::onClickAutoDownloadWifi}"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:text="@string/st_auto_download_wifi"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/st_txt_autoDownloadRoaming"
            style="?textTitleColorSettingTheme"
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:gravity="center_vertical"
            android:onClick="@{activityManageSpaceViewModel::onClickAutoDownloadRoaming}"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:text="@string/st_auto_download_roaming"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="normal" />



        <!--this part is Gone-->
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/dp16"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:paddingStart="@dimen/dp16"
            android:visibility="gone">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignParentRight="true"
              android:layout_centerInParent="true">

            <net.iGap.module.CustomToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/st_toggle_enableAnimation"
                />
          </LinearLayout>

          <TextView
              android:id="@+id/st_txt_enableAnimation"
              style="?textTitleColorSettingTheme"
              fontPath="fonts/IRANSansMobile.ttf"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_centerInParent="true"
              android:gravity="center_vertical"
              android:paddingTop="@dimen/dp4"
              android:text="@string/st_Enable_Animation"
              android:textSize="@dimen/dp15"
              android:textStyle="normal" />


        </RelativeLayout>

      </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="?lineColorSettingTheme"
            android:layout_margin="@dimen/dp10"/>

        <LinearLayout
            style="?backgroundColorSettingTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp4"
            android:visibility="visible">

          <TextView
              fontPath="fonts/IRANSansMobile.ttf"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="@dimen/dp12"
              android:paddingTop="@dimen/dp12"
              android:paddingLeft="@dimen/dp12"
              android:paddingRight="@dimen/dp12"
              android:text="@string/auto_play_media"
              style="?textTitleColorSettingTheme"
              android:textSize="@dimen/largeTextSize"
              android:textStyle="normal" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:onClick="@{activityManageSpaceViewModel::onClickAutoGif}"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/dp16"
            android:paddingLeft="@dimen/dp16"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp16"
            android:paddingStart="@dimen/dp16">

          <TextView
              android:id="@+id/st_txt_autoGif"
              style="?textTitleColorSettingTheme"
              fontPath="fonts/IRANSansMobile.ttf"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center_vertical"
              android:paddingTop="@dimen/dp4"
              android:text="@string/st_auto_gif"
              android:textSize="@dimen/standardTextSize"
              android:textStyle="normal" />

          <net.iGap.module.CustomToggleButton
              android:id="@+id/st_toggle_autoGif"
              android:layout_width="@dimen/toggles_width"
              android:layout_height="@dimen/toggles_height"
              android:checked="@{safeUnbox(activityManageSpaceViewModel.isAutoGif)}"
              android:onCheckedChanged="@{(switch, checked) -> activityManageSpaceViewModel.onCheckedChangeAutoGif(checked)}" />

        </LinearLayout>

      </LinearLayout>

        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          style="?lineColorSettingTheme"
          android:layout_margin="@dimen/dp10"/>


        <TextView
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:paddingTop="@dimen/dp4"
            android:paddingBottom="@dimen/dp12"
            android:singleLine="true"
            android:text="@string/cache"
            style="?textTitleColorSettingTheme"
            android:textSize="@dimen/largeTextSize"
            android:textStyle="normal"
            android:visibility="visible" />


        <LinearLayout
          android:id="@+id/st_layout_clearCache"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp48"
          style="?backgroundColorSettingTheme"
          android:onClick="@{activityManageSpaceViewModel::onClickClearCache}"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/textView10"
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:paddingTop="@dimen/dp8"
            android:text="@string/st_title_Clear_Cache"
            style="?textTitleColorSettingTheme"
              android:textSize="@dimen/standardTextSize"
            android:textStyle="normal" />


          <TextView
            android:id="@+id/st_txt_clearCache"
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:text="@{activityManageSpaceViewModel.callbackClearCache}"
            android:textColor="@color/setting_items_value_color"
            android:textSize="@dimen/smallTextSize"
            android:textStyle="normal"

            />


        </LinearLayout>

        <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="?backgroundColorSettingTheme_2"
            android:visibility="gone">

          <com.uncopt.android.widget.text.justify.JustifiedTextView
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp14"
            android:text="@string/clear_cache_desc"
            style="?textTitleColorSettingTheme"
            android:textSize="@dimen/dp12" />
        </RelativeLayout>

        <LinearLayout
          android:id="@+id/st_layout_cleanUp"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp48"
          style="?backgroundColorSettingTheme"
          android:onClick="@{activityManageSpaceViewModel::onClickCleanUp}"
          android:orientation="horizontal">

          <TextView
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:paddingTop="@dimen/dp8"
            android:text="@string/clean_up_chat_rooms"
            style="?textTitleColorSettingTheme"
              android:textSize="@dimen/standardTextSize"
            android:textStyle="normal" />


          <TextView
            android:id="@+id/st_txt_cleanUp"
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:text="@{activityManageSpaceViewModel.callbackCleanUp}"
            android:textColor="@color/setting_items_value_color"
            android:textSize="@dimen/smallTextSize"
            android:textStyle="normal" />


        </LinearLayout>

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="gone"
          style="?backgroundColorSettingTheme_2">

          <com.uncopt.android.widget.text.justify.JustifiedTextView
            fontPath="fonts/IRANSansMobile.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp14"
            android:text="@string/clean_up_description"
            style="?textTitleColorSettingTheme"
            android:textSize="@dimen/dp12" />
        </RelativeLayout>


        <LinearLayout
          style="?backgroundColorSettingTheme_2"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp48"
          android:onClick="@{activityManageSpaceViewModel::onClickSdkEnable}"
          android:orientation="horizontal"
          android:paddingEnd="@dimen/dp16"
          android:paddingLeft="@dimen/dp16"
          android:paddingRight="@dimen/dp16"
          android:paddingStart="@dimen/dp16"
          android:paddingBottom="@dimen/dp16"
          android:visibility="@{safeUnbox(activityManageSpaceViewModel.showLayoutSdk)}">

          <TextView
            android:id="@+id/stsp_txt_use_sdk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp4"
            android:text="@string/save_data_in_sd_card"
            style="?textTitleColorSettingTheme"
              android:textSize="@dimen/standardTextSize"
            android:textStyle="normal"
            fontPath="fonts/IRANSansMobile.ttf" />

          <net.iGap.module.CustomToggleButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
            android:id="@+id/stsp_toggle_use_sdk"
              android:textSize="@dimen/smallTextSize"
            android:checked="@{safeUnbox(activityManageSpaceViewModel.isSdkEnable)}"
            android:onCheckedChanged="@{(switch, checked) -> activityManageSpaceViewModel.onCheckedSdkEnable(checked)}"
            android:clickable="false" />
        </LinearLayout>


      </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
  </LinearLayout>
</FrameLayout>
</layout>
