<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="net.iGap.kuknos.viewmodel.KuknosLoginVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Container"
        style="@style/IGapRootViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO clean min height-->

        <LinearLayout
            android:id="@+id/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sky_blue"
            android:minHeight="48dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dp20">

                <net.iGap.module.CircleImageView
                    android:id="@+id/billImage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/bill_elc_pec"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.25"
                    app:layout_constraintVertical_bias="0.05"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/cardHolder"
                    app:layout_constraintEnd_toEndOf="@+id/cardHolder"/>

                <view
                    android:id="@+id/baseLine"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:visibility="invisible"
                    app:layout_constraintTop_toTopOf="@+id/billImage"
                    app:layout_constraintBottom_toBottomOf="@+id/billImage"
                    app:layout_constraintStart_toStartOf="@+id/billImage"
                    app:layout_constraintEnd_toEndOf="@+id/billImage"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp16"
                    android:layout_marginEnd="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginLeft="@dimen/dp16"
                    app:layout_constraintVertical_bias="0.5"
                    app:layout_constraintTop_toTopOf="@+id/baseLine"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    app:cardCornerRadius="?attr/cardCornerRadius">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <view
                            android:id="@+id/baseLine2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="invisible"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintDimensionRatio="2:1"
                            app:layout_constraintWidth_percent="0.25"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/billTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp8"
                            android:layout_marginStart="@dimen/dp8"
                            android:layout_marginEnd="@dimen/dp8"
                            android:justificationMode="inter_word"
                            android:text="Inquiry Electricity Bill and quick pay"
                            android:textColor="?iGapTitleTextColor"
                            android:textSize="@dimen/dp18"
                            android:gravity="center"
                            android:ellipsize="end"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/baseLine2"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/billIdHolder"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp16"
                            android:layout_marginStart="@dimen/dp8"
                            android:layout_marginEnd="@dimen/dp8"
                            android:minHeight="48dp"
                            android:hint="Electricity Bill Number"
                            android:textColorHint="?iGapHintTextColor"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/billQRscan"
                            app:layout_constraintTop_toBottomOf="@+id/billTitle">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/billIdET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="numberDecimal"
                                android:minHeight="48dp"
                                android:text="@={viewmodel.userNum}"
                                android:textColor="?iGapTitleTextColor"
                                android:textSize="@dimen/dp18" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/myIconTextViewStyleGray"
                            android:id="@+id/billQRscan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp8"
                            android:layout_marginLeft="@dimen/dp8"
                            android:gravity="center"
                            android:text="@string/scan_qr_code_icon"
                            android:textSize="@dimen/dp48"
                            app:layout_constraintEnd_toStartOf="@+id/billIdHolder"
                            app:layout_constraintTop_toTopOf="@+id/billIdHolder"
                            app:layout_constraintBottom_toBottomOf="@+id/billIdHolder"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/payBill"
                            style="@style/iGapButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp16"
                            android:layout_marginStart="@dimen/dp16"
                            android:layout_marginEnd="@dimen/dp16"
                            android:layout_marginBottom="@dimen/dp16"
                            android:minHeight="58dp"
                            android:onClick="@{()->viewmodel.onSubmit()}"
                            android:text="Inquiry My Bill"
                            android:textSize="@dimen/dp16"
                            android:visibility="visible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/billIdHolder" />

                        <ProgressBar
                            android:id="@+id/ProgressV"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:elevation="2dp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/payBill"
                            app:layout_constraintEnd_toEndOf="@+id/payBill"
                            app:layout_constraintStart_toStartOf="@+id/payBill"
                            app:layout_constraintTop_toTopOf="@+id/payBill"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintWidth_percent="0.1"
                            app:layout_constraintHorizontal_bias="0.05" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/MyElecBillList"
                    style="@style/iGapButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:minHeight="58dp"
                    android:onClick="@{()->viewmodel.onSubmit()}"
                    android:text="My Electricity Bills"
                    android:textSize="@dimen/dp16"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginStart="@dimen/dp16"
                    android:layout_marginEnd="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginLeft="@dimen/dp16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardHolder"
                    app:layout_constraintBottom_toTopOf="@+id/searchBill"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>