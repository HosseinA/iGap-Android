<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    android:padding="@dimen/dp4">

    <View
        android:id="@+id/cslr_view_distance"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/cslr_ll_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp4"
        android:background="@drawable/rectangle_round_white"
        android:padding="@dimen/dp4">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/cslr_ll_content_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/cslr_ll_forward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forward message"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/cslr_txt_forward_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp8"
                        android:text=""
                        android:textSize="@dimen/sp14" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/cslr_txt_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:maxWidth="@dimen/dp300"
                android:paddingRight="@dimen/dp4"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp16"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cslr_ll_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:gravity="bottom|left"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/cslr_txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:21"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/cslr_txt_tic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp4"
                android:layout_marginRight="@dimen/dp4"
                android:gravity="bottom"
                android:text="@string/fa_check"
                android:textColor="@color/green"
                android:textSize="@dimen/sp16" />


        </LinearLayout>

    </FrameLayout>

</LinearLayout>