<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="net.iGap.kuknos.viewmodel.KuknosViewRecoveryEPVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="?backgroundColorSettingTheme">

    <!-- TODO clean min height-->

    <LinearLayout
        android:id="@+id/fragKuknosVRToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="48dp"
        android:background="@color/sky_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragKuknosVRToolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:paddingBottom="@dimen/dp20">

            <androidx.appcompat.widget.AppCompatTextView
                style="?textTitleColorSettingTheme"
                android:id="@+id/fragKuknosVRTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/kuknos_viewRecoveryEP_title"
                android:textStyle="bold"
                android:textSize="@dimen/dp18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.7" />

            <androidx.appcompat.widget.AppCompatTextView
                style="?textTitleColorSettingTheme"
                android:id="@+id/fragKuknosVRMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/kuknos_viewRecoveryEP_message"
                android:textSize="@dimen/dp16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragKuknosVRTitle"
                app:layout_constraintWidth_percent="0.7" />

            <com.google.android.material.textfield.TextInputLayout
                style="?textTitleColorSettingTheme"
                android:id="@+id/fragKuknosVRPassHolder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragKuknosVRMessage"
                app:layout_constraintWidth_percent="0.7">
                <androidx.appcompat.widget.AppCompatEditText
                    style="?textTitleColorSettingTheme"
                    android:id="@+id/fragKuknosVRPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:minHeight="48dp"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="@string/kuknos_viewRecoveryEP_pin"
                    android:text="@={viewmodel.PIN}"
                    android:textSize="@dimen/dp18"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:imeOptions="actionDone"
                    android:digits="0123456789"
                    android:maxLength="4"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                style="?iGapButton"
                android:id="@+id/fragKuknosVRSubmit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:minHeight="58dp"
                android:text="@string/kuknos_viewRecoveryEP_btn"
                android:textSize="@dimen/dp16"
                android:onClick="@{()->viewmodel.onSubmitBtn()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragKuknosVRPassHolder"
                app:layout_constraintWidth_percent="0.6"/>

            <ProgressBar
                android:id="@+id/fragKuknosVRProgressV"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:elevation="2dp"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="@+id/fragKuknosVRSubmit"
                app:layout_constraintStart_toStartOf="@+id/fragKuknosVRSubmit"
                app:layout_constraintEnd_toEndOf="@+id/fragKuknosVRSubmit"
                app:layout_constraintBottom_toBottomOf="@+id/fragKuknosVRSubmit"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintHeight_percent="0.08"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>