                    android:id="@+id/stns_layout_background_connection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp16">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/st_background_connection"
                            android:textColor="@color/black_register"
                            android:textSize="@dimen/sp18"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/dp8"
                            android:paddingRight="@dimen/dp8"
                            android:paddingTop="@dimen/dp4"
                            android:text="@string/st_text_background_connection"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="@dimen/sp16"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <ToggleButton
                        android:id="@+id/stns_toggle_background_connection"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:background="@drawable/st_switch_button"
                        android:paddingRight="@dimen/dp4"
                        android:textOff=""
                        android:textOn="" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_editText" />

                <LinearLayout
                    android:id="@+id/stns_layout_badge_countent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp16">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:text="@string/st_badge_counter"
                        android:textColor="@color/black_register"
                        android:textSize="@dimen/sp18"
                        android:textStyle="normal" />

                    <ToggleButton
                        android:id="@+id/stns_badge_counter"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:background="@drawable/st_switch_button"
                        android:paddingRight="@dimen/dp4"
                        android:textOff=""
                        android:textOn="" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_editText" />

                <LinearLayout
                    android:id="@+id/st_layout_Repeat_Notifications"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp16">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"
                        android:gravity="center_vertical"
                        android:text="@string/st_Repeat_Notifications"
                        android:textColor="@color/black_register"
                        android:textSize="@dimen/sp18"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/st_txt_Repeat_Notifications"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".4"
                        android:gravity="center_vertical|top"
                        android:text="@string/st_sound"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="@dimen/sp14"
                        android:textStyle="normal" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/st_background2"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp16"
                android:paddingTop="@dimen/dp8"
                android:visibility="visible">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp20"
                    android:text="@string/st_title_reset"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp22"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/st_layout_reset_all_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp16">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/st_reset_all_notification"
                        android:textColor="@color/black_register"
                        android:textSize="@dimen/sp18"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/st_txt_reset_all_notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|top"
                        android:text="@string/st_text_reset_all_notification"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="@dimen/sp14"
                        android:textStyle="normal" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
