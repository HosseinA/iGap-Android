    <android.support.v7.widget.Toolbar
        android:id="@+id/st_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="@color/toolbar_background"
        android:layoutDirection="ltr"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.iGap.libs.rippleeffect.RippleView
                android:id="@+id/stns_ripple_back"
                rv_centered="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rv_alpha="200"
                app:rv_centered="true"
                app:rv_rippleDuration="150"
                app:rv_ripplePadding="5dp">

                <TextView
                    android:id="@+id/stns_txt_back"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/fa_chevron_left"
                    android:textColor="@color/whit_background"
                    android:textSize="@dimen/sp22" />
            </com.iGap.libs.rippleeffect.RippleView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/st_titleToolbar_page_Notification_and_sounds"
                android:textColor="@color/whit_background"
                android:textSize="@dimen/sp22"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

