<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EEEEEE"
    android:elevation="999dp"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    >

  <android.support.design.widget.AppBarLayout
      android:id="@+id/backgroundToolbarMap"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/iGapColorDarker"
      >
    <android.support.v7.widget.Toolbar

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layoutDirection="ltr"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_collapseMode="pin"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >

        <net.iGap.libs.rippleeffect.RippleView
            android:id="@+id/ripple_back_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rv_alpha="200"
            app:rv_centered="true"
            app:rv_rippleDuration="0"
            app:rv_ripplePadding="5dp"
            rv_centered="true"
            >

          <net.iGap.module.MaterialDesignTextView
              android:id="@+id/txt_back_map"
              android:layout_width="@dimen/dp52"
              android:layout_height="match_parent"
              android:gravity="center"
              android:text="@string/md_back_arrow"
              android:textAppearance="@style/TextIconAppearance_toolbar"
              android:textColor="@color/whit_background"
              />
        </net.iGap.libs.rippleeffect.RippleView>

        <TextView
            android:id="@+id/txt_titleToolbar_map"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            fontPath="fonts/IRANSansMobile_Bold.ttf"
            android:gravity="center"
            android:text="@string/igap"
            android:textColor="@color/whit_background"
            android:textSize="@dimen/dp18"
            android:visibility="visible"
            />


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            />
        <net.iGap.libs.rippleeffect.RippleView
            android:id="@+id/ripple_more_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rv_alpha="200"
            app:rv_centered="true"
            app:rv_rippleDuration="100"
            app:rv_ripplePadding="5dp"
            rv_centered="true"
            >

          <net.iGap.module.MaterialDesignTextView
              android:layout_width="@dimen/dp52"
              android:layout_height="match_parent"
              android:gravity="center"
              android:text="@string/md_show_more_button"
              android:textAppearance="@style/TextIconAppearance_toolbar"
              android:textColor="@color/whit_background"
              />

        </net.iGap.libs.rippleeffect.RippleView>
      </LinearLayout>
    </android.support.v7.widget.Toolbar>

  </android.support.design.widget.AppBarLayout>

  <org.osmdroid.views.MapView
      android:id="@+id/map"
      android:layout_width="fill_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      />

  <net.iGap.libs.floatingAddButton.ArcMenu
      android:id="@+id/arc_map"
      android:layout_width="@dimen/dp52"
      android:layout_height="@dimen/dp52"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_gravity="bottom|end"
      android:layout_marginBottom="@dimen/dp10"
      android:layout_marginEnd="@dimen/dp10"
      android:layout_marginRight="@dimen/dp10"
      app:borderWidth="0dp"
      app:menu_color="@color/green"
      app:menu_scr="@mipmap/plus"
      >
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_map_location"
        android:layout_width="@dimen/dp52"
        android:layout_height="@dimen/dp52"
        android:src="@mipmap/my_location"
        app:backgroundTint="@color/green"
        app:elevation="@dimen/dp6"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_map_others"
        android:layout_width="@dimen/dp52"
        android:layout_height="@dimen/dp52"
        android:src="@mipmap/others"
        app:backgroundTint="@color/green"
        app:elevation="@dimen/dp6"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_map_list"
        android:layout_width="@dimen/dp52"
        android:layout_height="@dimen/dp52"
        android:src="@mipmap/list_map"
        app:backgroundTint="@color/green"
        app:elevation="@dimen/dp6"
        />
  </net.iGap.libs.floatingAddButton.ArcMenu>

</RelativeLayout>