<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="net.iGap.mobileBank.viewmoedel.MobileBankTransferCTCStepOneViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/IGapRootViewStyle">

        <LinearLayout
            android:id="@+id/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/container"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/mobile_bank_top" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp36"
                        android:id="@+id/title"
                        android:text="Transfer Money - Card to Card"
                        android:textSize="@dimen/standardTextSize"
                        android:textColor="?iGapTitleTextColor"
                        android:layout_marginStart="@dimen/dp16"
                        android:layout_marginEnd="@dimen/dp16"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp32"
                        android:id="@+id/fromTitle"
                        android:text="Origin Card"
                        android:textSize="@dimen/standardTextSize"
                        android:textColor="?iGapSubtitleTextColor"
                        android:layout_marginTop="@dimen/dp32"
                        android:layout_marginStart="@dimen/dp32"
                        android:layout_marginLeft="@dimen/dp32"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@+id/title"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/originSpinner"
                        android:layout_marginStart="@dimen/dp32"
                        android:layout_marginEnd="@dimen/dp32"
                        android:visibility="visible"
                        android:text="@{viewModel.originCardNumSpinner}"
                        android:inputType="numberDecimal"
                        app:layout_constraintStart_toStartOf="@+id/originCard"
                        app:layout_constraintEnd_toEndOf="@+id/originCard"
                        app:layout_constraintTop_toTopOf="@+id/originCard"
                        app:layout_constraintBottom_toBottomOf="@+id/originCard" />

                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/originCard"
                        android:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@+id/fromTitle"
                        layout="@layout/mobile_bank_card_entry_holder" />

                    <androidx.constraintlayout.widget.Guideline
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/guideLine1"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="@dimen/dp32" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp32"
                        android:minWidth="@dimen/dp120"
                        android:id="@+id/originName"
                        android:text="@{viewModel.originCardName}"
                        android:textSize="@dimen/standardTextSize"
                        android:textStyle="normal"
                        android:textColor="?iGapSubtitleTextColor"
                        android:gravity="center"
                        android:visibility="@{viewModel.originCardNameVisibility}"
                        app:layout_constraintTop_toBottomOf="@+id/title"
                        app:layout_constraintEnd_toEndOf="@+id/guideLine1"
                        app:layout_constraintBaseline_toBaselineOf="@+id/fromTitle" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/originBankLogo"
                        android:layout_marginEnd="@dimen/dp4"
                        android:layout_marginRight="@dimen/dp4"
                        android:visibility="@{viewModel.originBankVisibility}"
                        app:srcCompat="@drawable/bank_logo_parsian"
                        app:layout_constraintTop_toTopOf="@id/fromTitle"
                        app:layout_constraintBottom_toBottomOf="@+id/fromTitle"
                        app:layout_constraintEnd_toStartOf="@+id/originName"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintHeight_max="@dimen/dp48"
                        app:layout_constraintWidth_max="@dimen/dp48"
                        app:layout_constraintHeight_min="@dimen/dp32"
                        app:layout_constraintWidth_min="@dimen/dp32" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp32"
                        android:id="@+id/toTitle"
                        android:text="Destination Card"
                        android:textSize="@dimen/standardTextSize"
                        android:textColor="?iGapSubtitleTextColor"
                        android:layout_marginTop="@dimen/dp32"
                        android:layout_marginStart="@dimen/dp32"
                        android:layout_marginLeft="@dimen/dp32"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@+id/originCard"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/destSpinner"
                        android:layout_marginStart="@dimen/dp32"
                        android:layout_marginEnd="@dimen/dp32"
                        android:visibility="visible"
                        android:text="@{viewModel.destCardNumSpinner}"
                        android:inputType="numberDecimal"
                        app:layout_constraintStart_toStartOf="@+id/destCard"
                        app:layout_constraintEnd_toEndOf="@+id/destCard"
                        app:layout_constraintTop_toTopOf="@+id/destCard"
                        app:layout_constraintBottom_toBottomOf="@+id/destCard" />

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/suggestionSpinner"
                        android:layout_marginStart="@dimen/dp32"
                        android:layout_marginEnd="@dimen/dp32"
                        android:visibility="visible"
                        android:inputType="numberDecimal"
                        app:layout_constraintStart_toStartOf="@+id/destCard"
                        app:layout_constraintEnd_toEndOf="@+id/destCard"
                        app:layout_constraintTop_toTopOf="@+id/destCard"
                        app:layout_constraintBottom_toBottomOf="@+id/destCard" />

                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/destCard"
                        app:layout_constraintTop_toBottomOf="@+id/toTitle"
                        layout="@layout/mobile_bank_card_entry_holder" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp32"
                        android:minWidth="@dimen/dp120"
                        android:id="@+id/destName"
                        android:text="@{viewModel.destCardName}"
                        android:textSize="@dimen/standardTextSize"
                        android:textStyle="normal"
                        android:textColor="?iGapSubtitleTextColor"
                        android:gravity="center"
                        android:visibility="@{viewModel.destCardNameVisibility}"
                        app:layout_constraintTop_toBottomOf="@+id/originCard"
                        app:layout_constraintEnd_toEndOf="@+id/guideLine1"
                        app:layout_constraintBaseline_toBaselineOf="@+id/toTitle" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/destBankLogo"
                        android:layout_marginEnd="@dimen/dp4"
                        android:layout_marginRight="@dimen/dp4"
                        android:visibility="@{viewModel.destBankVisibility}"
                        app:srcCompat="@drawable/bank_logo_parsian"
                        app:layout_constraintTop_toTopOf="@id/toTitle"
                        app:layout_constraintBottom_toBottomOf="@+id/toTitle"
                        app:layout_constraintEnd_toStartOf="@+id/destName"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintHeight_max="@dimen/dp48"
                        app:layout_constraintWidth_max="@dimen/dp48" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_round_gray"
                        android:minHeight="@dimen/dp24"
                        android:layout_marginStart="@dimen/dp16"
                        android:layout_marginEnd="@dimen/dp16"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="@+id/amountTitle"
                        app:layout_constraintBottom_toBottomOf="@+id/amountTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp32"
                        android:id="@+id/amountTitle"
                        android:text="Amount"
                        android:textSize="@dimen/standardTextSize"
                        android:textColor="?iGapSubtitleTextColor"
                        android:layout_marginTop="@dimen/dp32"
                        android:layout_marginStart="@dimen/dp32"
                        android:layout_marginLeft="@dimen/dp32"
                        android:layout_marginEnd="@dimen/dp4"
                        android:layout_marginRight="@dimen/dp4"
                        android:gravity="end|center_vertical"
                        app:layout_constraintTop_toBottomOf="@+id/destCard"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/currency" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp32"
                        android:id="@+id/currency"
                        android:text="(Rial)"
                        android:textSize="@dimen/standardTextSize"
                        android:textStyle="bold"
                        android:textColor="?iGapSubtitleTextColor"
                        android:layout_marginEnd="@dimen/dp16"
                        android:layout_marginRight="@dimen/dp16"
                        android:gravity="start|center_vertical"
                        app:layout_constraintTop_toTopOf="@+id/amountTitle"
                        app:layout_constraintStart_toEndOf="@+id/amountTitle" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp32"
                        android:id="@+id/priceText"
                        android:text="@{viewModel.amountTranslate}"
                        android:textSize="@dimen/standardTextSize"
                        android:textStyle="normal"
                        android:textColor="?iGapSubtitleTextColor"
                        android:layout_marginEnd="@dimen/dp32"
                        android:layout_marginRight="@dimen/dp32"
                        android:gravity="center"
                        android:visibility="@{viewModel.amountTextVisibility}"
                        app:layout_constraintTop_toBottomOf="@+id/title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/amountTitle" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp32"
                        android:layout_marginEnd="@dimen/dp32"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:lines="1"
                        android:maxLength="13"
                        android:maxLines="1"
                        android:textColor="?iGapTitleTextColor"
                        android:textSize="@dimen/dp20"
                        android:background="@drawable/shape_gray_round_stroke"
                        style="@style/iGapEditTextStyle"
                        android:padding="@dimen/dp4"
                        android:layout_marginTop="@dimen/dp8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/amountTitle" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/iGapButtonSecondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp48"
                        android:id="@+id/cancelBtn"
                        android:text="Cancel"
                        android:layout_marginTop="@dimen/dp32"
                        android:layout_marginStart="@dimen/dp32"
                        android:layout_marginLeft="@dimen/dp32"
                        android:layout_marginEnd="@dimen/dp8"
                        android:layout_marginRight="@dimen/dp8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/nextBtn"
                        app:layout_constraintTop_toBottomOf="@+id/amount" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/iGapButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp48"
                        android:id="@+id/nextBtn"
                        android:text="Next"
                        android:layout_marginEnd="@dimen/dp32"
                        android:layout_marginRight="@dimen/dp32"
                        app:layout_constraintStart_toEndOf="@+id/cancelBtn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/cancelBtn"
                        app:layout_constraintBottom_toBottomOf="@+id/cancelBtn"
                        app:layout_constraintWidth_percent="0.6" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>