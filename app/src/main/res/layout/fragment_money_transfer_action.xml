    <LinearLayout
        android:id="@+id/ll_moneyAction_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="2">


        <LinearLayout
            android:id="@+id/ll_moneyAction_cardToCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp16">


            <TextView
                android:id="@+id/iv_moneyAction_cardToCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="?attr/iGapTitleTextColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_moneyAction_cardToCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_to_card"
                android:textColor="?attr/iGapTitleTextColor"
                android:textSize="@dimen/dp12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_moneyAction_sendMoney"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp16">


            <TextView
                android:id="@+id/iv_moneyAction_wallet"
                style="@style/myIconTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_moneyAction_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/WALLET_TRANSFER_MONEY"
                android:textColor="?attr/iGapTitleTextColor"
                android:textSize="@dimen/dp12" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>