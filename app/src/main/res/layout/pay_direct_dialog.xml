<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:clickable="true"
    style="?backgroundColorSettingTheme"
    android:orientation="vertical">

    <net.iGap.module.CustomTextViewMedium
        android:id="@+id/title"
        style="?textSubColorSettingTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/dp18"
        android:layout_marginBottom="@dimen/dp8"
        tools:text="" />

    <View
        android:layout_width="match_parent"
        android:background="#10000000"
        android:layout_height="1dp"
        />

    <net.iGap.module.CustomTextViewMedium
        android:id="@+id/description"
        style="?textSubColorSettingTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp8"
        android:gravity="center"
        android:textSize="@dimen/dp14"
        android:layout_marginBottom="@dimen/dp8"
        tools:text="" />


    <net.iGap.module.CustomTextViewMedium
        android:id="@+id/priceTitle"
        style="?textSubColorSettingTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/dp18"
        tools:text="@string/price" />

    <net.iGap.module.CustomTextViewMedium
        android:id="@+id/price"
        style="?textSubColorSettingTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp8"
        tools:text="" />

    <Button
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8"
        android:background="@drawable/shape_background_ivand_order_history"
        android:paddingStart="@dimen/dp32"
        android:paddingEnd="@dimen/dp32"
        android:text="@string/pay"
        android:textSize="@dimen/dp18"
        android:textColor="@color/white" />

</LinearLayout>
