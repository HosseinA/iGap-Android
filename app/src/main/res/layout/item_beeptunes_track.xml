<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="right"
        android:orientation="vertical">

        <net.iGap.view.SquareImageView
            android:id="@+id/iv_trackItem"
            android:layout_width="@dimen/dp100"
            android:layout_height="wrap_content"
            android:src="@drawable/parsianlogo_pec" />

        <TextView
            android:id="@+id/tv_trackItem_name"
            style="?textTitleColorSettingTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginTop="4dp"
            android:layout_marginRight="@dimen/dp4"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="رگ خواب"
            android:textColor="@color/black"
            android:textSize="@dimen/standardTextSize" />


        <TextView
            android:id="@+id/tv_trackItem_artistName"
            style="?textTitleColorSettingTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="همایون شجریان"
            android:textColor="@color/gray"
            android:textSize="@dimen/standardTextSize" />
    </LinearLayout>

</android.support.v7.widget.CardView>