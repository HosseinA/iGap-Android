<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.ViewStubCompat
        android:id="@+id/replayLayoutStub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/chl_ll_attach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <com.iGap.module.MaterialDesignTextView
                android:id="@+id/chl_imv_smile_button"
                android:layout_width="@dimen/dp40"
                android:layout_height="wrap_content"
                android:antialias="true"
                android:paddingLeft="@dimen/dp6"
                android:paddingRight="@dimen/dp4"
                android:text="@string/md_emoticon_with_happy_face" />

            <com.iGap.module.EmojiEditText
                android:id="@+id/chl_edt_chat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="      Type Message"
                android:maxLines="4"
                android:paddingRight="@dimen/dp4"
                android:textColorHint="@color/gray" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp4"
                android:layout_marginTop="@dimen/dp4"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.iGap.module.MaterialDesignTextView
                    android:layout_width="@dimen/dp80"
                    android:paddingLeft="@dimen/dp32"
                    android:paddingRight="@dimen/dp20"
                    android:id="@+id/chl_imv_send_button"
                    android:text="@string/md_send_button"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:id="@+id/chl_imv_attach_button"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp6"
                    android:paddingRight="@dimen/dp4"
                    android:rotation="130"
                    android:src="@drawable/attachment_clip" />

                <ImageView
                    android:id="@+id/chl_imv_mic_button"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp6"
                    android:paddingRight="@dimen/dp4"
                    android:src="@drawable/microphone_of_voice" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>