<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp4"
    android:paddingBottom="@dimen/dp4">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/ticketTitle"
        style="?textTitleColorSettingTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp8"
        app:layout_constraintBottom_toBottomOf="@id/itemPrice"
        app:layout_constraintEnd_toStartOf="@id/plusButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/itemPrice"
        app:layout_constraintWidth_percent=".4" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/plusButton"
        style="@style/baseFontIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_igasht_darkgray"
        android:text="@string/add_icon"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/itemPrice"
        app:layout_constraintEnd_toStartOf="@id/ticketCount"
        app:layout_constraintStart_toEndOf="@id/ticketTitle"
        app:layout_constraintTop_toTopOf="@id/itemPrice" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/ticketCount"
        style="?textSubColorSettingTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp8"
        app:layout_constraintBottom_toBottomOf="@id/itemPrice"
        app:layout_constraintEnd_toStartOf="@id/minusButton"
        app:layout_constraintStart_toEndOf="@id/plusButton"
        app:layout_constraintTop_toTopOf="@id/itemPrice" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/minusButton"
        style="@style/baseFontIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_igasht_darkgray"
        android:text="@string/md_delete_acc"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/itemPrice"
        app:layout_constraintEnd_toStartOf="@+id/itemPrice"
        app:layout_constraintStart_toEndOf="@id/ticketCount"
        app:layout_constraintTop_toTopOf="@+id/itemPrice" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/itemPrice"
        style="?textSubColorSettingTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/minusButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".3" />

</android.support.constraint.ConstraintLayout>