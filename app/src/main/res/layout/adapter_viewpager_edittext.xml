<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/rcv_root_bottom_sheet"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:clickable="true"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="@dimen/dp6">

    <ImageView
      android:id="@+id/img_editImage"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      android:src="@mipmap/difaultimage" />

    <com.hanks.library.AnimateCheckBox
      android:id="@+id/checkBox_editImage"
      android:layout_width="@dimen/dp24"
      android:layout_height="@dimen/dp24"
      android:layout_alignParentRight="true"
      android:layout_gravity="top|end|right"
      android:layout_margin="@dimen/dp10"
      android:background="@drawable/background_check"
      android:visibility="visible"
      app:animDuration="100"
      app:checkedColor="@color/green"
      app:lineColor="#fff"
      app:lineWidth="1.2dp"
      app:unCheckColor="@color/background_checkbox_bottomSheet" />
  </RelativeLayout>
</LinearLayout>