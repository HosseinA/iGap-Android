<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_toolbar_root_constraint"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/view_toolbar_player_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_for_below_layouts_of_toolbar"
        android:background="@drawable/shape_toolbar_player">

        <include
            android:id="@+id/view_toolbar_layout_player_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/music_layout_small"
            android:visibility="gone"
            android:layout_marginTop="@dimen/toolbar_search_box_size" />

        <include
            android:id="@+id/view_toolbar_layout_strip_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/chat_sub_layout_strip_call"
            android:visibility="gone"
            android:layout_marginTop="@dimen/toolbar_search_box_size" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_toolbar_main_constraint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/shape_toolbar_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <net.iGap.module.CircleImageView
            android:id="@+id/view_toolbar_user_small_avatar"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:padding="2dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/view_toolbar_btn_right_1"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            style="@style/myIconToolbarStyle"
            app:layout_constraintBottom_toTopOf="@id/groupAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/view_toolbar_btn_right_2"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            style="@style/myIconToolbarStyle"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/view_toolbar_btn_right_1"
            app:layout_constraintEnd_toStartOf="@+id/view_toolbar_btn_right_1"
            app:layout_constraintTop_toTopOf="@id/view_toolbar_btn_right_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/view_toolbar_btn_right_3"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            style="@style/myIconToolbarStyle"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/view_toolbar_btn_right_1"
            app:layout_constraintEnd_toStartOf="@+id/view_toolbar_btn_right_2"
            app:layout_constraintTop_toTopOf="@id/view_toolbar_btn_right_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/view_toolbar_btn_right_4"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="1dp"
            android:visibility="gone"
            style="@style/myIconToolbarStyle"
            app:layout_constraintBottom_toBottomOf="@id/view_toolbar_btn_right_1"
            app:layout_constraintEnd_toStartOf="@+id/view_toolbar_btn_right_3"
            app:layout_constraintTop_toTopOf="@id/view_toolbar_btn_right_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/view_toolbar_btn_left"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            style="@style/myIconToolbarStyle"
            android:gravity="center"
            android:textSize="@dimen/dp22"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/groupAvatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/view_toolbar_txt_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@id/view_toolbar_btn_left"
            android:layout_toRightOf="@id/view_toolbar_btn_left"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/view_toolbar_btn_left"
            app:layout_constraintStart_toEndOf="@+id/view_toolbar_btn_left"
            app:layout_constraintTop_toTopOf="@+id/view_toolbar_btn_left" />

        <TextView
            android:id="@+id/view_toolbar_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:maxLength="28"
            android:singleLine="true"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/view_toolbar_txt_call_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Your calling now"
            android:textColor="#fff"
            android:textSize="@dimen/smallTextSize"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/view_toolbar_logo"
            app:layout_constraintStart_toStartOf="@+id/view_toolbar_logo"
            app:layout_constraintTop_toBottomOf="@+id/view_toolbar_logo" />

        <!--chat views-->
        <RelativeLayout
            android:id="@+id/view_toolbar_user_chat_avatar_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_toolbar_btn_left"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="visible">

            <net.iGap.module.CircleImageView
                android:id="@+id/view_toolbar_user_chat_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <net.iGap.module.CircleImageView
                android:id="@+id/view_toolbar_user_cloud_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <!--<TextView
                android:id="@+id/view_toolbar_user_cloud_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="4dp"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:text="@string/cloud_icon"
                style="@style/myIconTextViewStyle"
                android:textAppearance="@style/TextIconAppearance_toolbar"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:visibility="gone" />-->

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/view_toolbar_chat_layout_userName"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintBottom_toTopOf="@id/view_toolbar_chat_txt_seen_status"
            app:layout_constraintEnd_toStartOf="@+id/view_toolbar_btn_right_3"
            app:layout_constraintStart_toEndOf="@+id/view_toolbar_user_chat_avatar_layout"
            app:layout_constraintTop_toTopOf="@+id/view_toolbar_user_chat_avatar_layout">


            <net.iGap.module.EmojiTextViewE
                android:id="@+id/view_toolbar_chat_txt_userName"
                android:fontFamily="@font/main_font_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier=".8"
                android:maxWidth="150dp"
                android:paddingBottom="2dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/standardTextSize"
                app:emojiSize="@dimen/standardTextSize" />

            <TextView
                android:id="@+id/view_toolbar_chat_txt_verify"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="8dp"
                style="@style/myIconTextViewStyle"
                android:text="@string/verify_icon"
                android:textAppearance="@style/TextIconAppearance.all"
                android:textColor="@color/verify_color"
                android:textSize="@dimen/smallTextSize"
                android:visibility="gone" />

            <TextView
                android:id="@+id/view_toolbar_chat_txt_isMute"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="8dp"
                style="@style/myIconTextViewStyle"
                android:text="@string/mute_icon"
                android:textAppearance="@style/TextIconAppearance.all"
                android:textColor="@android:color/white"
                android:textSize="@dimen/smallTextSize"
                android:visibility="gone" />

            <!--<android.support.v7.widget.AppCompatImageView
                android:id="@+id/view_toolbar_chat_txt_verify"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_verify" />-->

        </LinearLayout>

        <TextView
            android:id="@+id/view_toolbar_chat_txt_seen_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Last seen recently"
            android:textColor="@color/white"
            android:textSize="@dimen/smallTextSize"
            android:visibility="visible"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@id/view_toolbar_chat_layout_userName"
            app:layout_constraintEnd_toStartOf="@+id/view_toolbar_btn_right_3"
            app:layout_constraintStart_toStartOf="@id/view_toolbar_chat_layout_userName"
            app:layout_constraintBottom_toBottomOf="@+id/view_toolbar_user_chat_avatar_layout" />

        <!--Group Detail-->
        <net.iGap.module.CircleImageView
            android:id="@+id/groupAvatar"
            android:layout_width="@dimen/dp68"
            android:layout_height="@dimen/dp68"
            android:layout_margin="16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_toolbar_btn_left" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/groupName"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/largeTextSize"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16"
            android:textColor="@color/white"
            android:visibility="gone"
            android:gravity="left"
            app:layout_constraintBottom_toTopOf="@id/groupMemberCount"
            app:layout_constraintLeft_toRightOf="@id/groupAvatar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/groupAvatar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/groupMemberCount"
            android:textSize="@dimen/smallTextSize"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:visibility="gone"
            android:gravity="left"
            app:layout_constraintBottom_toBottomOf="@id/groupAvatar"
            app:layout_constraintLeft_toLeftOf="@id/groupName"
            app:layout_constraintRight_toRightOf="@id/groupName"
            app:layout_constraintTop_toBottomOf="@id/groupName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/view_toolbar_search_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_search_box_size"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/shape_toolbar_search_box"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/view_toolbar_main_constraint"
        app:layout_constraintEnd_toEndOf="@+id/view_toolbar_main_constraint"
        app:layout_constraintStart_toStartOf="@+id/view_toolbar_main_constraint"
        app:layout_constraintTop_toBottomOf="@+id/view_toolbar_main_constraint">

        <EditText
            android:id="@+id/view_toolbar_search_layout_edt_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingRight="35dp"
            android:paddingLeft="35dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="@string/search"
            android:singleLine="true"
            style="?hintColorSettingTheme"
            android:textSize="@dimen/standardTextSize"
            android:visibility="gone" />

        <TextView
            android:id="@+id/view_toolbar_search_layout_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="@string/search"
            style="?textSubColorSettingTheme"
            android:textSize="@dimen/standardTextSize"
            android:visibility="visible" />

        <TextView
            android:id="@+id/view_toolbar_search_layout_btn_clear"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/close_icon"
            style="@style/myIconTextViewStyle"
            android:textSize="@dimen/largeTextSize"
            android:visibility="gone" />

    </RelativeLayout>

    <net.iGap.module.CircleImageView
        android:id="@+id/view_toolbar_img_big_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/view_toolbar_main_constraint"
        app:layout_constraintEnd_toEndOf="@+id/view_toolbar_main_constraint"
        app:layout_constraintStart_toStartOf="@+id/view_toolbar_main_constraint"
        app:layout_constraintTop_toBottomOf="@+id/view_toolbar_main_constraint" />

    <TextView
        android:id="@+id/view_toolbar_txt_below_big_avatar_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:text="@string/user_name"
        android:textColor="@color/black"
        android:textSize="@dimen/largeTextSize"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/view_toolbar_img_big_avatar"
        app:layout_constraintStart_toStartOf="@+id/view_toolbar_img_big_avatar"
        app:layout_constraintTop_toBottomOf="@+id/view_toolbar_img_big_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>