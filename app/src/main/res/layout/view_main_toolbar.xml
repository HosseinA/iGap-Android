<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_toolbar_root_constraint"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:background="@android:color/transparent"
    android:layout_height="@dimen/toolbar_height_root_with_search">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_toolbar_main_constraint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/shape_toolbar_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <net.iGap.module.CircleImageView
            android:id="@+id/view_toolbar_user_small_avatar"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:padding="5dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/view_toolbar_btn_right_1"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@null"
            android:layout_marginBottom="10dp"
            android:padding="@dimen/toolbar_icon_padding"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/groupAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/view_toolbar_btn_right_2"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:contentDescription="@null"
            android:padding="@dimen/toolbar_icon_padding"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/view_toolbar_btn_right_1"
            app:layout_constraintEnd_toStartOf="@+id/view_toolbar_btn_right_1"
            app:layout_constraintTop_toTopOf="@id/view_toolbar_btn_right_1" />

        <ImageView
            android:id="@+id/view_toolbar_btn_right_3"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:contentDescription="@null"
            android:padding="@dimen/toolbar_icon_padding"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/view_toolbar_btn_right_1"
            app:layout_constraintEnd_toStartOf="@+id/view_toolbar_btn_right_2"
            app:layout_constraintTop_toTopOf="@id/view_toolbar_btn_right_1" />

        <ImageView
            android:id="@+id/view_toolbar_btn_right_4"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="1dp"
            android:contentDescription="@null"
            android:padding="@dimen/toolbar_icon_padding"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/view_toolbar_btn_right_1"
            app:layout_constraintEnd_toStartOf="@+id/view_toolbar_btn_right_3"
            app:layout_constraintTop_toTopOf="@id/view_toolbar_btn_right_1" />

        <ImageView
            android:id="@+id/view_toolbar_btn_left"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            android:padding="@dimen/toolbar_icon_padding"
            android:visibility="visible"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/groupAvatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/view_toolbar_txt_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@id/view_toolbar_btn_left"
            android:layout_toRightOf="@id/view_toolbar_btn_left"
            android:fontFamily="@font/main_font"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/view_toolbar_btn_left"
            app:layout_constraintStart_toEndOf="@+id/view_toolbar_btn_left"
            app:layout_constraintTop_toTopOf="@+id/view_toolbar_btn_left" />

        <TextView
            android:id="@+id/view_toolbar_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/main_font"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            android:visibility="visible"
            android:maxLength="28"
            android:singleLine="true"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/view_toolbar_txt_call_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/main_font"
            android:text="Your calling now"
            android:textColor="#CCCACA"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/view_toolbar_logo"
            app:layout_constraintStart_toStartOf="@+id/view_toolbar_logo"
            app:layout_constraintTop_toBottomOf="@+id/view_toolbar_logo" />

        <!--chat views-->
        <RelativeLayout
            android:id="@+id/view_toolbar_user_chat_avatar_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_toolbar_btn_left"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <net.iGap.module.CircleImageView
                android:id="@+id/view_toolbar_user_chat_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <net.iGap.module.MaterialDesignTextView
                android:id="@+id/view_toolbar_user_cloud_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="4dp"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:text="@string/md_cloud"
                android:textAppearance="@style/TextIconAppearance_toolbar"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/view_toolbar_chat_layout_userName"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toStartOf="@+id/view_toolbar_btn_right_3"
            app:layout_constraintStart_toEndOf="@+id/view_toolbar_user_chat_avatar_layout"
            app:layout_constraintTop_toTopOf="@+id/view_toolbar_user_chat_avatar_layout">


            <net.iGap.module.EmojiTextViewE
                android:id="@+id/view_toolbar_chat_txt_userName"
                fontPath="fonts/IRANSansMobile_Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier=".8"
                android:maxWidth="150dp"
                android:paddingBottom="2dp"
                android:fontFamily="@font/main_font"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:emojiSize="14dp" />

            <net.iGap.module.MaterialDesignTextView
                android:id="@+id/view_toolbar_chat_txt_isMute"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/md_flaticon_volume_off_indicator"
                android:textAppearance="@style/TextIconAppearance.all"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:visibility="gone" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/view_toolbar_chat_txt_verify"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_verify" />

        </LinearLayout>

       <!-- <net.iGap.module.EmojiTextViewE
            android:id="@+id/view_toolbar_chat_txt_userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/main_font"
            android:singleLine="true"
            android:text="User Name"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:emojiSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/view_toolbar_btn_right_3"
            app:layout_constraintStart_toEndOf="@+id/view_toolbar_user_chat_avatar"
            app:layout_constraintTop_toTopOf="@+id/view_toolbar_user_chat_avatar" />-->

        <TextView
            android:id="@+id/view_toolbar_chat_txt_seen_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/main_font"
            android:text="Last seen recently"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/view_toolbar_btn_right_3"
            app:layout_constraintStart_toStartOf="@id/view_toolbar_chat_layout_userName"
            app:layout_constraintTop_toBottomOf="@+id/view_toolbar_chat_layout_userName" />

        <!--Group Detail-->
        <net.iGap.module.CircleImageView
            android:id="@+id/groupAvatar"
            android:layout_width="@dimen/dp68"
            android:layout_height="@dimen/dp68"
            android:layout_margin="16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_toolbar_btn_left" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/groupName"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/groupMemberCount"
            app:layout_constraintLeft_toRightOf="@id/groupAvatar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/groupAvatar" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/groupMemberCount"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/groupAvatar"
            app:layout_constraintLeft_toLeftOf="@id/groupName"
            app:layout_constraintRight_toRightOf="@id/groupName"
            app:layout_constraintTop_toBottomOf="@id/groupName" />

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/view_toolbar_search_layout"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/shape_toolbar_search_box"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/view_toolbar_main_constraint"
        app:layout_constraintEnd_toEndOf="@+id/view_toolbar_main_constraint"
        app:layout_constraintStart_toStartOf="@+id/view_toolbar_main_constraint"
        app:layout_constraintTop_toBottomOf="@+id/view_toolbar_main_constraint">

        <EditText
            android:id="@+id/view_toolbar_search_layout_edt_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/toolbar_search_box_bg"
            android:fontFamily="@font/main_font"
            android:gravity="center"
            android:hint="@string/search"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/toolbar_search_box_txt_color"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/view_toolbar_search_layout_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/main_font"
            android:gravity="center"
            android:text="@string/search"
            android:textColor="@color/toolbar_search_box_txt_color"
            android:textSize="14sp"
            android:visibility="visible" />

        <net.iGap.module.MaterialDesignTextView
            android:id="@+id/view_toolbar_search_layout_btn_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/md_close_button"
            android:textColor="@color/black"
            android:textSize="@dimen/dp18"
            android:visibility="gone" />

    </RelativeLayout>

    <net.iGap.module.CircleImageView
        android:id="@+id/view_toolbar_img_big_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/view_toolbar_main_constraint"
        app:layout_constraintEnd_toEndOf="@+id/view_toolbar_main_constraint"
        app:layout_constraintStart_toStartOf="@+id/view_toolbar_main_constraint"
        app:layout_constraintTop_toBottomOf="@+id/view_toolbar_main_constraint" />

    <TextView
        android:id="@+id/view_toolbar_txt_below_big_avatar_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/main_font"
        android:lines="1"
        android:text="@string/user_name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/view_toolbar_img_big_avatar"
        app:layout_constraintStart_toStartOf="@+id/view_toolbar_img_big_avatar"
        app:layout_constraintTop_toBottomOf="@+id/view_toolbar_img_big_avatar" />


</android.support.constraint.ConstraintLayout>