<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="net.iGap.viewmodel.FragmentPaymentInquiryViewModel" />
    </data>

    <LinearLayout
        style="?backgroundColorSettingTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:layoutDirection="locale"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fpi_layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/toolbar_height"
            android:orientation="vertical" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="vertical"
                android:padding="@dimen/dp8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="@{fragmentPaymentInquiryViewModel.observeInquiry ?   View.GONE: View.VISIBLE }">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            fontPath="fonts/IRANSansMobile.ttf"
                            android:layout_width="@dimen/dp100"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/bill_type"
                            android:textColor="@color/green"
                            android:textSize="@dimen/dp16" />

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:entries="@array/bill_type"
                            android:minHeight="@dimen/dp44"
                            android:onItemSelected="@{(parent,view,position,id)->viewModel.onItemSelectBillType(position)}" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp68"
                        android:orientation="horizontal"
                        android:visibility="@{fragmentPaymentInquiryViewModel.observeMci}">

                        <net.iGap.module.MaterialDesignTextView
                            style="@style/myIconTextViewStyle"
                            android:layout_width="@dimen/dp44"
                            android:layout_height="@dimen/dp44"
                            android:gravity="center"
                            android:text="@string/md_dialpad"
                            android:textAppearance="@style/TextIconAppearance.menu"
                            android:textColor="@{G.isDarkTheme ?Color.WHITE:Color.parseColor(G.appBarColor),default=@color/toolbar_background}"
                            android:textSize="@dimen/dp22"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/fpi_edt_mci"
                                style="?hintColorSettingTheme"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp44"
                                android:background="@drawable/background_cancel_money_action"
                                android:gravity="center"
                                android:hint="@string/phone"
                                android:inputType="phone"
                                android:maxLength="11"
                                android:minHeight="@dimen/dp44"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp10"
                                android:textSize="@dimen/dp16" />

                            <TextView
                                fontPath="fonts/IRANSansMobile.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp10"
                                android:text="@string/ex_mobile_phone"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/dp10" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="@{fragmentPaymentInquiryViewModel.observeTelecom}">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp68"
                            android:orientation="horizontal">

                            <net.iGap.module.MaterialDesignTextView
                                style="@style/myIconTextViewStyle"
                                android:layout_width="@dimen/dp44"
                                android:layout_height="@dimen/dp44"
                                android:gravity="center"
                                android:text="@string/flag_icon"
                                android:textAppearance="@style/TextIconAppearance.menu"
                                android:textColor="@{G.isDarkTheme ?Color.WHITE:Color.parseColor(G.appBarColor),default=@color/toolbar_background}"
                                android:textSize="@dimen/dp22"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/fpi_edt_telecom_area"
                                    style="?hintColorSettingTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp44"
                                    android:background="@drawable/background_cancel_money_action"
                                    android:gravity="center"
                                    android:hint="@string/area_code"
                                    android:inputType="phone"
                                    android:maxLength="4"
                                    android:minHeight="@dimen/dp44"
                                    android:paddingLeft="@dimen/dp10"
                                    android:paddingRight="@dimen/dp10"
                                    android:textSize="@dimen/dp16" />

                                <TextView
                                    fontPath="fonts/IRANSansMobile.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:paddingLeft="@dimen/dp10"
                                    android:paddingRight="@dimen/dp10"
                                    android:text="@string/ex_area"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/dp10" />


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp68"
                            android:orientation="horizontal">

                            <net.iGap.module.MaterialDesignTextView
                                style="@style/myIconTextViewStyle"
                                android:layout_width="@dimen/dp44"
                                android:layout_height="@dimen/dp44"
                                android:gravity="center"
                                android:text="@string/md_dialpad"
                                android:textAppearance="@style/TextIconAppearance.menu"
                                android:textColor="@{G.isDarkTheme ?Color.WHITE:Color.parseColor(G.appBarColor),default=@color/toolbar_background}"
                                android:textSize="@dimen/dp22"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/fpi_edt_telecom"
                                    style="?hintColorSettingTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp44"
                                    android:background="@drawable/background_cancel_money_action"
                                    android:gravity="center"
                                    android:hint="@string/phone"
                                    android:inputType="phone"
                                    android:maxLength="8"
                                    android:minHeight="@dimen/dp44"
                                    android:paddingLeft="@dimen/dp10"
                                    android:paddingRight="@dimen/dp10"
                                    android:textSize="@dimen/dp16" />

                                <TextView
                                    fontPath="fonts/IRANSansMobile.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:paddingLeft="@dimen/dp10"
                                    android:paddingRight="@dimen/dp10"
                                    android:text="@string/ex_phone"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/dp10" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <android.support.design.button.MaterialButton
                        style="?iGapButton"
                        android:layout_width="@dimen/dp180"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp12"
                        android:layout_marginBottom="@dimen/dp12"
                        android:onClick="@{()->viewModel.onInquiryClick(fpi_edt_mci.getEditableText().toString())}"
                        android:text="@string/inquiry"
                        android:textAllCaps="false" />

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:indeterminate="true"
                        android:visibility="@{fragmentPaymentInquiryViewModel.observeProgress}" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp6"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.observeInquiry}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp20"
                        android:background="@drawable/background_cancel_money_action"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatTextView
                            style="?textSubColorSettingTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/last_term"
                            android:textSize="@dimen/dp16" />

                        <android.support.v7.widget.AppCompatTextView
                            style="?textTitleColorSettingTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp6"
                            android:layout_marginBottom="@dimen/dp6"
                            android:gravity="center"
                            android:text="@{viewModel.lastTermMessage}"
                            android:textSize="@dimen/dp16"
                            android:visibility="@{viewModel.observableLastTermMessage ?   View.VISIBLE  : View.GONE }" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp8"
                            android:layout_marginEnd="@dimen/dp8"
                            android:orientation="vertical"
                            android:visibility="@{viewModel.observableLastTermMessage ?  View.GONE : View.VISIBLE }">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp8"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatTextView
                                    style="?textSubColorSettingTheme"
                                    android:layout_width="@dimen/dp110"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="@string/billing_id"
                                    android:textSize="@dimen/dp16" />

                                <android.support.v7.widget.AppCompatTextView
                                    style="?textTitleColorSettingTheme"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="@{viewModel.lastTermBillId}"
                                    android:textSize="@dimen/dp16" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp8"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatTextView
                                    style="?textSubColorSettingTheme"
                                    android:layout_width="@dimen/dp110"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="@string/payment_code"
                                    android:textSize="@dimen/dp16" />

                                <android.support.v7.widget.AppCompatTextView
                                    style="?textTitleColorSettingTheme"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="@{viewModel.lastTermPayId}"
                                    android:textSize="@dimen/dp16" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp8"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatTextView
                                    style="?textSubColorSettingTheme"
                                    android:layout_width="@dimen/dp110"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="@string/amount"
                                    android:textSize="@dimen/dp16" />

                                <android.support.v7.widget.AppCompatTextView
                                    style="?textTitleColorSettingTheme"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="@{viewModel.lastTermAmount}"
                                    android:textSize="@dimen/dp16" />
                            </LinearLayout>

                            <android.support.design.button.MaterialButton
                                style="?iGapButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp20"
                                android:onClick="@{()->viewModel.onLastTermPayment()}"
                                android:text="@string/last_term_payment"
                                android:textAllCaps="false" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp10"
                        android:background="@drawable/background_cancel_money_action"
                        android:orientation="vertical"
                        android:visibility="@{viewModel.observeMidTerm}">

                        <android.support.v7.widget.AppCompatTextView
                            style="?textSubColorSettingTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/mid_term"
                            android:textSize="@dimen/dp16" />

                        <android.support.v7.widget.AppCompatTextView
                            style="?textTitleColorSettingTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp6"
                            android:layout_marginBottom="@dimen/dp6"
                            android:gravity="center"
                            android:text="@{viewModel.midTermMessage}"
                            android:textSize="@dimen/dp16"
                            android:visibility="@{viewModel.observableMidTermMessage ? View.VISIBLE : View.GONE }" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp8"
                            android:layout_marginEnd="@dimen/dp8"
                            android:orientation="vertical"
                            android:visibility="@{viewModel.observableMidTermMessage ?  View.GONE : View.VISIBLE }">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp8"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatTextView
                                    style="?textSubColorSettingTheme"
                                    android:layout_width="@dimen/dp110"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="@string/billing_id"
                                    android:textSize="@dimen/dp16" />

                                <android.support.v7.widget.AppCompatTextView
                                    style="?textTitleColorSettingTheme"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="@{viewModel.midTermBillId}"
                                    android:textSize="@dimen/dp16" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp8"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatTextView
                                    style="?textSubColorSettingTheme"
                                    android:layout_width="@dimen/dp110"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="@string/payment_code"
                                    android:textSize="@dimen/dp16" />

                                <android.support.v7.widget.AppCompatTextView
                                    style="?textTitleColorSettingTheme"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="@{viewModel.midTermPayId}"
                                    android:textSize="@dimen/dp16" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp8"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatTextView
                                    style="?textSubColorSettingTheme"
                                    android:layout_width="@dimen/dp110"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="@string/amount"
                                    android:textSize="@dimen/dp16" />

                                <android.support.v7.widget.AppCompatTextView
                                    style="?textTitleColorSettingTheme"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="@{viewModel.midTermAmount}"
                                    android:textSize="@dimen/dp16" />
                            </LinearLayout>


                            <android.support.design.button.MaterialButton
                                style="?iGapButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp20"
                                android:onClick="@{()->viewModel.onMidTermPayment()}"
                                android:text="@string/intermediate_payment"
                                android:textAllCaps="false" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>