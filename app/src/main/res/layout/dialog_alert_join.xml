<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true"
    android:gravity="center_horizontal">

    <View
        android:id="@+id/lineViewTop"
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp4"
        android:layout_marginTop="@dimen/dp8"
        android:layout_gravity="center"
        android:background="?attr/iGapBottomSheetHeaderLine" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginBottom="@dimen/dp6"
        android:singleLine="true"
        android:textColor="?iGapTitleTextColor"
        android:textSize="@dimen/standardTextSize" />

    <net.iGap.module.CircleImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        android:layout_margin="@dimen/dp12"
        android:src="@mipmap/difaultimage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="?iGapTitleTextColor"
        android:textSize="@dimen/largeTextSize" />

    <TextView
        android:id="@+id/tvMemberCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="@dimen/smallTextSize"
        android:textColor="?iGapSubtitleTextColor" />

    <RelativeLayout
        android:id="@+id/lytJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/toolbar_height"
        android:background="?iGapBottomSheetBackground"
        android:padding="@dimen/dp10">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/cancel"
            android:textSize="@dimen/standardTextSize"
            android:padding="@dimen/dp10"
            android:textColor="?iGapSubtitleTextColor" />

        <TextView
            android:id="@+id/btnJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/join"
            android:textSize="@dimen/standardTextSize"
            android:padding="@dimen/dp10"
            android:textColor="?iGapPrimaryIconTextColor" />

    </RelativeLayout>

</LinearLayout>