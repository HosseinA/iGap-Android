<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="net.iGap.G" />
        <variable
            name="viewModel"
            type="net.iGap.dialog.payment.bankaccount.BankAccountInventoryViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/lineViewTop"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@{G.isDarkTheme ? @drawable/bottom_sheet_dialog_line_dark : @drawable/bottom_sheet_dialog_line , default = @drawable/bottom_sheet_dialog_line}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".34" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/pageTitle"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            android:text="@string/bank_account_charge"
            android:textColor="@color/green"
            app:layout_constraintLeft_toRightOf="@id/actionInfo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lineViewTop" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/actionInfo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="@{()->viewModel.onActionInfoClick()}"
            android:text="@string/md_round_info_button"
            app:layout_constraintBottom_toBottomOf="@id/pageTitle"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/pageTitle" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lastTransaction"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp24"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="@{()->viewModel.onLastTransactionClick()}"
            android:padding="8dp"
            android:text="@string/last_ten_transaction"
            android:textColor="@color/send_money_type"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/inventoryMode"
            app:layout_constraintTop_toBottomOf="@id/pageTitle"
            app:setSelected="@{!viewModel.inventoryModeIsSelected}" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/send_money_type"
            app:layout_constraintLeft_toLeftOf="@id/lastTransaction"
            app:layout_constraintRight_toRightOf="@id/lastTransaction"
            app:layout_constraintTop_toBottomOf="@id/lastTransaction"
            app:setSelected="@{!viewModel.inventoryModeIsSelected}" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/inventoryMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="@{()->viewModel.onInventoryClick()}"
            android:padding="8dp"
            android:text="@string/Inventory"
            android:textColor="@color/send_money_type"
            app:layout_constraintBottom_toBottomOf="@id/lastTransaction"
            app:layout_constraintLeft_toRightOf="@id/lastTransaction"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/lastTransaction"
            app:setSelected="@{viewModel.inventoryModeIsSelected}" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/send_money_type"
            app:layout_constraintLeft_toLeftOf="@id/inventoryMode"
            app:layout_constraintRight_toRightOf="@id/inventoryMode"
            app:layout_constraintTop_toBottomOf="@id/inventoryMode"
            app:setSelected="@{viewModel.inventoryModeIsSelected}" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/cardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="8dp"
            android:hint="@string/card_number"
            app:errorEnabled="@{viewModel.cardNumberEnableError}"
            app:errorText="@{viewModel.cardNumberErrorMessage}"
            app:layout_constraintTop_toBottomOf="@id/lastTransaction">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/cardNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:paddingStart="50dp"
                android:paddingLeft="50dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/cardIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="@{()->viewModel.onCardIconClick()}"
            android:text="@string/md_igap_credit_card"
            app:layout_constraintBottom_toBottomOf="@id/cardNumber"
            app:layout_constraintLeft_toLeftOf="@id/cardNumber" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/pin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="@string/internet_pin_2"
            app:errorEnabled="@{viewModel.secondsPasswordMessageEnable}"
            app:errorText="@{viewModel.secondsPasswordErrorMessage}"
            app:layout_constraintLeft_toLeftOf="@id/cardNumber"
            app:layout_constraintRight_toRightOf="@id/cardNumber"
            app:layout_constraintTop_toBottomOf="@id/cardNumber">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/pinEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.button.MaterialButton
            style="@style/IGapButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:onClick="@{()->viewModel.onContinueButtonClick(cardNumberEditText.getEditableText().toString(),pinEditText.getEditableText().toString())}"
            android:text="@string/payment_continue_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pin"
            app:layout_constraintWidth_percent=".5" />

    </android.support.constraint.ConstraintLayout>
</layout>