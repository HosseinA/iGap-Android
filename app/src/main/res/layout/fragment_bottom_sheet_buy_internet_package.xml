<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="net.iGap.dialog.payment.buyinternetpackage.BuyInternetPackageViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/lineViewTop"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@color/bottomSheetHeaderLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".34" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/pageTitle"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            android:text="@string/buy_internet_package_title"
            android:textColor="@color/green"
            app:layout_constraintLeft_toRightOf="@id/actionInfo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lineViewTop" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/actionInfo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="@{()->viewModel.onActionInfoClick()}"
            android:text="@string/md_round_info_button"
            app:layout_constraintBottom_toBottomOf="@id/pageTitle"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/pageTitle" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="8dp"
            android:hint="@string/mobile_number"
            app:errorEnabled="@{viewModel.getPhoneEnableError()}"
            app:errorText="@{viewModel.phoneErrorMessage()}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pageTitle">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/phoneNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:paddingStart="50dp"
                android:paddingLeft="50dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/cardIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="@{()->viewModel.onPersonIconClick()}"
            android:text="@string/md_igap_credit_card"
            app:layout_constraintBottom_toBottomOf="@id/phoneNumber"
            app:layout_constraintLeft_toLeftOf="@id/phoneNumber" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/operator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="@string/operator"
            app:errorEnabled="@{viewModel.operatorMessageEnable()}"
            app:errorText="@{viewModel.operatorErrorMessage()}"
            app:layout_constraintLeft_toLeftOf="@id/phoneNumber"
            app:layout_constraintRight_toRightOf="@id/phoneNumber"
            app:layout_constraintTop_toBottomOf="@id/phoneNumber">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/operatorEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.button.MaterialButton
            style="@style/IGapButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:onClick="@{()->viewModel.onContinueButtonClick(phoneNumberEditText.getEditableText().toString(),operatorEditText.getEditableText().toString())}"
            android:text="@string/payment_continue_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/operator"
            app:layout_constraintWidth_percent=".5" />

    </android.support.constraint.ConstraintLayout>
</layout>