<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fcg_layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="?backgroundColorSettingTheme"
    android:clickable="true"
    android:layoutDirection="ltr"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/fcg_layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--added at runtime-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fcg_layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?backgroundColorSettingTheme"
        app:layout_constraintTop_toBottomOf="@id/fcg_layout_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingLeft="@dimen/dp16"
        android:paddingRight="@dimen/dp16"
        android:orientation="vertical">

        <com.pchmn.materialchips.ChipsInput
            android:id="@+id/chips_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp15"
            style="?backgroundColorSettingTheme_2"
            app:chip_backgroundColor="@color/white"
            app:chip_deletable="true"
            app:chip_deleteIconColor="@color/gray_5c"
            app:deleteIconColor="@android:color/white"
            app:hint="Enter a name"
            app:hintColor="#7e7e7e"
            app:showChipDetailed="false" />

    </LinearLayout>

    <TextView
        android:id="@+id/fcg_lbl_add_member"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/add_new_member"
        style="?textTitleColorSettingTheme"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fcg_layout_search" />

    <View
        android:id="@+id/fcg_splitter_add_member"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        style="?lineColorSettingTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fcg_lbl_add_member" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fcg_recycler_view_add_item_to_group"
        style="?backgroundColorSettingTheme"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fcg_splitter_add_member"
        android:paddingBottom="@dimen/dp8"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical" />


    <ProgressBar
        android:id="@+id/fcg_prgWaiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--not use-->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">



        <android.support.design.widget.AppBarLayout
            android:id="@+id/fcg_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:orientation="vertical"
                app:elevation="8dp">

                <LinearLayout
                    android:id="@+id/fcg_ll_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:orientation="horizontal">

                    <net.iGap.libs.rippleeffect.RippleView
                        android:id="@+id/fcg_ripple_back"
                        rv_centered="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rv_alpha="200"
                        app:rv_centered="true"
                        app:rv_rippleDuration="0"
                        app:rv_ripplePadding="5dp">

                        <net.iGap.module.MaterialDesignTextView
                            android:id="@+id/fcg_btn_back"
                            android:layout_width="@dimen/dp52"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:text="@string/md_back_arrow"
                            android:textAppearance="@style/TextIconAppearance_toolbar"
                            android:textColor="@android:color/white" />
                    </net.iGap.libs.rippleeffect.RippleView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp4">

                        <TextView
                            android:id="@+id/fcg_txt_status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:singleLine="true"
                            android:text="w"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/dp18"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/fcg_txt_number_of_member"
                            fontPath="fonts/IRANSansMobile_Bold.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:singleLine="true"
                            android:text="0/5000 member"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/dp18" />

                    </LinearLayout>

                    <net.iGap.libs.rippleeffect.RippleView
                        android:id="@+id/fcg_ripple_done"
                        rv_centered="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        app:rv_alpha="200"
                        app:rv_centered="true"
                        app:rv_rippleDuration="100"
                        app:rv_ripplePadding="5dp">

                        <net.iGap.module.MaterialDesignTextView
                            android:id="@+id/fcg_btn_done"
                            android:layout_width="@dimen/dp52"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:text="@string/md_check_symbol"
                            android:textAppearance="@style/TextIconAppearance.all"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/dp26" />
                    </net.iGap.libs.rippleeffect.RippleView>

                </LinearLayout>

            </LinearLayout>


        </android.support.design.widget.AppBarLayout>



    </RelativeLayout>

</android.support.constraint.ConstraintLayout>



