<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRootEnterPassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical"
    tools:context="net.iGap.fragments.FragmentEnterPassCode"
    tools:ignore="MissingPrefix"
    android:elevation="1999dp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:orientation="vertical"
      android:visibility="visible"
      >

    <ImageView
        android:layout_width="@dimen/dp70"
        android:layout_height="@dimen/dp70"
        android:layout_gravity="center"
        android:src="@mipmap/logo"
        />


    <TextView
        android:id="@+id/setPassword_txtSetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:gravity="center"
        android:text="@string/enter_a_password"
        android:textColor="@color/white"
        android:textSize="@dimen/dp18"

        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
      <net.iGap.libs.rippleeffect.RippleView
          android:id="@+id/enterPassword_rippleOk"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:visibility="visible"
          app:rv_alpha="200"
          app:rv_centered="true"
          app:rv_rippleDuration="0"
          app:rv_ripplePadding="5dp"
          rv_centered="true"
          >
        <net.iGap.module.MaterialDesignTextView
            android:layout_width="@dimen/dp52"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/md_check_symbol"
            android:textAppearance="@style/TextIconAppearance_toolbar"
            android:textColor="@color/whit_background"
            />
      </net.iGap.libs.rippleeffect.RippleView>

      <EditText
          android:id="@+id/enterPassword_edtSetPassword"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dp24"
          android:layout_marginRight="@dimen/dp24"
          android:layout_marginTop="@dimen/dp24"
          android:background="@android:color/transparent"
          android:gravity="center"
          android:inputType="textPassword"
          android:maxLines="1"
          android:singleLine="true"
          android:text=""
          android:textColor="@color/white"
          android:textSize="@dimen/dp13"
          android:maxLength="20"
          android:focusable="true"
          android:padding="@dimen/dp10"

          />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_marginRight="@dimen/dp24"
        android:background="@color/white"
        />

  </LinearLayout>


</RelativeLayout>
