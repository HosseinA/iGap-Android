<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom|right"
              android:layout_marginTop="1dp"
              android:gravity="left|center_vertical"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/messageContainerPaddingLeftRight"
              android:paddingLeft="@dimen/messageContainerPaddingLeftRight"
              android:paddingRight="@dimen/messageContainerPaddingLeftRight"
              android:paddingTop="@dimen/messageContainerPadding"
              android:id="@+id/lyt_vote">

    <LinearLayout
        android:id="@+id/lyt_see"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_views_label"
            style="@style/ChatMessages.Time"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:textColor="@color/room_message_gray"
            android:gravity="center"
            android:text="0"/>

        <ImageView
            android:id="@+id/img_eye"
            style="@style/ChatMessages.MaterialDesignTextView.Tick"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_weight="1"
            android:src="@drawable/ic_eye"
            android:tint="@color/room_message_gray"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_vote_down"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_vote_down"
            style="@style/ChatMessages.Time"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/room_message_gray"
            android:text="0"
            />

        <ImageView
            android:id="@+id/img_vote_down"
            style="@style/ChatMessages.MaterialDesignTextView.Tick"
            android:layout_height="16dp"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_weight="1"
            android:src="@drawable/ic_thumb_down"
            android:tint="@color/room_message_gray"
            android:layout_width="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_vote_up"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_vote_up"
            style="@style/ChatMessages.Time"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:textColor="@color/room_message_gray"
            android:gravity="center"
            android:text="0"/>

        <ImageView
            android:id="@+id/img_vote_up"
            style="@style/ChatMessages.MaterialDesignTextView.Tick"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_weight="1"
            android:src="@drawable/ic_thumb_up"
            android:tint="@color/room_message_gray"/>

    </LinearLayout>

</LinearLayout>