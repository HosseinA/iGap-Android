<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:layoutDirection="ltr"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/menu_toolbarMenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="@color/toolbar_background"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <TextView
            android:id="@+id/menu_txtBack"
            android:layout_width="@dimen/dp60"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="@string/fa_chevron_left"
            android:textColor="@color/whit_background"
            android:textSize="@dimen/sp22" />


        <RelativeLayout
            android:id="@+id/menu_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.SearchView
                android:id="@+id/menu_edtSearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:theme="@style/SearchViewToolbar"
                android:visibility="visible"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/menu_txt_titleToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/dp4"
                android:paddingRight="@dimen/dp40"
                android:singleLine="true"
                android:text="@string/igap"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp20" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/menu_toolbarMenu" />
</LinearLayout>


