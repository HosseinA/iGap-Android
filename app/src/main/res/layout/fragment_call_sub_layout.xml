<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <FrameLayout
      android:layout_width="@dimen/dp68"
      android:layout_height="match_parent"
      >

    <net.iGap.module.CircleImageView
        android:id="@+id/fcsl_imv_picture"
        android:layout_width="@dimen/dp48"
        android:layout_height="@dimen/dp48"
        android:layout_gravity="center"
        />
  </FrameLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp68"
      android:orientation="vertical"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp12"
        >

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginLeft="@dimen/dp6"
          android:layout_weight="1"
          android:orientation="vertical"
          >

        <TextView
            android:id="@+id/fcsl_txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="1dp"
            android:singleLine="true"
            android:text="Name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp15"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

          <net.iGap.module.MaterialDesignTextView
              android:id="@+id/fcsl_txt_icon"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/dp4"
              android:layout_marginLeft="@dimen/dp4"
              android:layout_marginRight="@dimen/dp4"
              android:layout_marginStart="@dimen/dp4"
              android:text="@string/md_call_made"
              android:textAppearance="@style/TextIconAppearance_toolbar"
              android:textColor="@color/green"
              android:textSize="@dimen/dp18"
              />


          <TextView
              android:id="@+id/fcsl_txt_dureation_time"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:text="2.43"
              android:layout_marginRight="@dimen/dp12"
              android:textColor="@color/btn_start_page5"
              android:textSize="@dimen/dp15"
              android:textStyle="bold"
              />

          <TextView
              android:id="@+id/fcsl_txt_time_info"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:text="(4) 9:24 am"
              android:textColor="@color/gray_5c"
              android:textSize="@dimen/dp15"
              android:textStyle="bold"
              />


        </LinearLayout>

      </LinearLayout>

      <net.iGap.libs.rippleeffect.RippleView
          android:id="@+id/fcsl_ripple_call"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:rv_alpha="200"
          app:rv_centered="true"
          app:rv_rippleDuration="150"
          app:rv_ripplePadding="5dp"
          rv_centered="true"
          >

        <net.iGap.module.MaterialDesignTextView
            android:id="@+id/fcsl_call_type_icon"
            android:layout_width="@dimen/dp52"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/md_phone"
            android:textAppearance="@style/TextIconAppearance_toolbar"
            android:textColor="@color/gray_5c"
            />

      </net.iGap.libs.rippleeffect.RippleView>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_3c"

        />

  </LinearLayout>

</LinearLayout>
