<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp4"
    android:paddingBottom="@dimen/dp4">

    <net.iGap.module.CustomTextViewMedium
        android:id="@+id/txt_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginLeft="@dimen/dp16"
        android:gravity="center"
        android:textColor="@color/black90"
        android:textSize="@dimen/dp14"
        android:text="TextView"
        style="?textTitleColorSettingTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_date"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <net.iGap.module.CustomTextViewMedium
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black90"
        android:textSize="@dimen/dp14"
        android:text="TextView"
        style="?textTitleColorSettingTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txt_subject"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txt_date"
        app:layout_constraintTop_toTopOf="parent">

        <net.iGap.module.CustomTextViewMedium
            android:id="@+id/txt_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="TextView"
            style="?textTitleColorSettingTheme"
            android:textColor="@color/black90"
            android:textSize="@dimen/dp14" />

        <View
            android:layout_width="@dimen/dp2"
            android:layout_height="match_parent" />

        <net.iGap.module.MaterialDesignTextView
            android:id="@+id/image"
            android:layout_width="@dimen/dp48"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/md_show_more_button"
            android:textAppearance="@style/TextIconAppearance.all"
            android:textColor="@color/border_editText"
            android:textSize="@dimen/dp18" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>