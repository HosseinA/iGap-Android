<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="net.iGap.G" />

        <import type="net.iGap.igasht.locationlist.IGashtLocationItem" />

        <variable
            name="viewModel"
            type="net.iGap.igasht.locationdetail.IGashtLocationDetailViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/root"
        style="?backgroundColorSettingTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <net.iGap.module.RadiusImageView
            android:id="@+id/itemImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dp8"
            app:imageUrl="@{viewModel.locationItem.locationName}"
            app:layout_constraintDimensionRatio="116:83"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintWidth_percent=".3" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/itemLikeIcon"
            style="@style/myIconTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heart_icon"
            android:textColor="@color/red"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="16dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/itemLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="126"
            android:textColor="@color/red"
            android:textSize="@dimen/largeTextSize"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="56dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/itemTitle"
            style="?textTitleColorSettingTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp4"
            android:paddingEnd="@dimen/dp4"
            android:text="@{viewModel.locationItem.nameWithLanguage}"
            android:textSize="@dimen/largeTextSize"
            app:layout_constraintBottom_toTopOf="@id/itemAddress"
            app:layout_constraintEnd_toStartOf="@id/itemLikeCount"
            app:layout_constraintStart_toEndOf="@id/itemImage"
            app:layout_constraintTop_toTopOf="@id/itemImage"
            app:layout_constraintVertical_chainStyle="packed" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/itemAddress"
            style="?textTitleColorSettingTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp4"
            android:text="@{viewModel.locationItem.addressWithLanguage}"
            android:textSize="@dimen/standardTextSize"
            app:layout_constraintBottom_toBottomOf="@id/itemImage"
            app:layout_constraintEnd_toEndOf="@id/itemTitle"
            app:layout_constraintStart_toStartOf="@id/itemTitle"
            app:layout_constraintTop_toBottomOf="@id/itemTitle" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/itemLocation"
            style="?textTitleColorSettingTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp8"
            android:padding="8dp"
            android:text="@{viewModel.locationItem.location}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemImage" />

        <LinearLayout
            android:id="@+id/v"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@{G.isDarkTheme ? @drawable/igasht_tabbar_background_dark : @drawable/igasht_tabbar_background_light}"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemLocation"
            app:layout_constraintWidth_percent=".9">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/buyTicket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp4"
                android:layout_weight="1"
                android:background="@{G.isDarkTheme ? @drawable/igasht_tab_item_background_dark : @drawable/igasht_tab_item_background_light}"
                android:gravity="center"
                android:onClick="@{()->viewModel.onTabItemClick(true)}"
                android:padding="@dimen/dp8"
                android:setSelected="@{viewModel.showBuyTicketView}"
                android:text="@string/igasht_buy_ticket_title"
                android:textColor="@color/igasht_tab_text_color"
                android:textSize="@dimen/standardTextSize" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp4"
                android:layout_weight="1"
                android:background="@{G.isDarkTheme ? @drawable/igasht_tab_item_background_dark : @drawable/igasht_tab_item_background_light}"
                android:gravity="center"
                android:onClick="@{()->viewModel.onTabItemClick(false)}"
                android:padding="@dimen/dp8"
                android:setSelected="@{!viewModel.showBuyTicketView}"
                android:text="@string/detail_title"
                android:textColor="@color/igasht_tab_text_color"
                app:layout_constraintBottom_toBottomOf="@id/buyTicket"
                app:layout_constraintEnd_toEndOf="@id/v"
                app:layout_constraintStart_toEndOf="@id/buyTicket"
                app:layout_constraintTop_toTopOf="@id/buyTicket" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/detailFrame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v" />

        <ProgressBar
            android:id="@+id/loadingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.showLoadingView}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</layout>