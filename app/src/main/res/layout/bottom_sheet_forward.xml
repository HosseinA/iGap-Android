<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/v"
        android:layout_width="@dimen/dp160"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp8"
        android:background="@drawable/bottom_sheet_dialog_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8">

        <net.iGap.module.MaterialDesignTextView
            android:id="@+id/searchIcon"
            style="@style/myIconTextViewStyle"
            android:layout_width="@dimen/dp28"
            android:layout_height="@dimen/dp28"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dp8"
            android:text="@string/search_icon" />

        <net.iGap.module.MEditText
            android:id="@+id/edtSearch"
            style="?hintColorSettingTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp8"
            android:background="@drawable/bottom_sheet_button"
            android:hint="@string/search"
            android:padding="4dp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvBottomSheetForward"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="@dimen/dp8"
        app:layout_constraintBottom_toTopOf="@id/divider1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtSearch" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/copyLink"
        style="?textTitleColorSettingTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:text="@string/copy_link_title"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/txtSend"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent=".9" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtSend"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="@string/send"
        android:textColor="@color/white"
        android:textSize="@dimen/standardTextSize"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</LinearLayout>