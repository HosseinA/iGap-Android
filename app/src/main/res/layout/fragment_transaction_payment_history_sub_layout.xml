<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp68"
              android:background="@color/white"
    android:clickable="true"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/dp40"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ftphs_txt_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"/>

        <TextView
            android:id="@+id/ftphs_txt_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jun"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp40"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ftphs_imv_circle"
            android:layout_width="@dimen/dp12"
            android:layout_height="@dimen/dp12"
            app:srcCompat="@drawable/circle_color_notificatin_setting"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp60"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ftphs_txt_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21,000 Rials"/>

        <TextView
            android:id="@+id/ftphs_txt_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="alpha Resturant"/>
    </LinearLayout>

    <TextView
        android:id="@+id/ftphs_txt_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pending"/>

  <net.iGap.module.MaterialDesignTextView
        android:id="@+id/ftphs_txt_icon_right_arrow"
        android:textAppearance="@style/TextIconAppearance.all"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginRight="@dimen/dp12"
        android:layout_marginTop="@dimen/dp4"
        android:text="@string/md_right_arrow_button1"
      android:textSize="@dimen/dp18"
      />
</LinearLayout>