<?xml version="1.0" encoding="utf-8"?>
<net.iGap.module.NotTouchableCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?backgroundColorSettingTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:ignore="MissingPrefix">


    <RelativeLayout
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cl_recycler_view_contact"
            style="?backgroundColorSettingTheme"
            android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_for_below_layouts_of_toolbar_with_search"/>

        <LinearLayout
            android:id="@+id/amr_layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height_root_with_search"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"/>

        <LinearLayout
            android:id="@+id/amr_layout_selected_actions"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="?backgroundColorSettingTheme"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_below="@id/amr_layout_toolbar">

            <TextView
                android:fontFamily="@font/main_font"
                android:id="@+id/amr_btn_read_all_selected"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:background="@color/gray_300"
                android:paddingLeft="@dimen/main_rooms_selected_action_padding"
                android:paddingRight="@dimen/main_rooms_selected_action_padding"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="@string/read_all"/>


            <TextView
                android:fontFamily="@font/main_font"
                android:id="@+id/amr_btn_make_as_read_selected"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:background="@color/gray_300"
                android:paddingLeft="@dimen/main_rooms_selected_action_padding"
                android:paddingRight="@dimen/main_rooms_selected_action_padding"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:text="@string/make_as_read"/>


            <TextView
                android:fontFamily="@font/main_font"
                android:id="@+id/amr_btn_delete_selected"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:background="@color/gray_300"
                android:paddingLeft="@dimen/main_rooms_selected_action_padding"
                android:paddingRight="@dimen/main_rooms_selected_action_padding"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:text="@string/delete"/>


            <TextView
                android:fontFamily="@font/main_font"
                android:id="@+id/amr_btn_clear_cache_selected"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:background="@color/gray_300"
                android:paddingLeft="@dimen/main_rooms_selected_action_padding"
                android:paddingRight="@dimen/main_rooms_selected_action_padding"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:text="@string/clear_history"/>



        </LinearLayout>

    </RelativeLayout>


    <ProgressBar
        android:id="@+id/ac_progress_bar_waiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:indeterminate="true"
        android:padding="@dimen/dp4"
        android:visibility="gone" />

    <include
        android:id="@+id/empty_icon"
        layout="@layout/empty_layout"
        android:visibility="gone" />


    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:padding="@dimen/dp4"
        android:visibility="gone" />


</net.iGap.module.NotTouchableCoordinatorLayout>
