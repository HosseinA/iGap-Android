<?xml version="1.0" encoding="utf-8"?>
<com.iGap.module.NotTouchableCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <com.iGap.module.MyAppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/ThemeOverlay.AppCompat">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:gravity="bottom"
            android:orientation="vertical"
            app:layout_scrollFlags="scroll|enterAlways">


            <RelativeLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green"
                android:orientation="horizontal">

                <com.iGap.libs.rippleeffect.RippleView
                    android:id="@+id/cl_ripple_menu"
                    rv_centered="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    app:rv_alpha="200"
                    app:rv_centered="true"
                    app:rv_rippleDuration="150">

                    <Button
                        android:id="@+id/cl_btn_menu"
                        android:layout_width="@dimen/dp60"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:text="@string/md_menu_button"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp20" />
                </com.iGap.libs.rippleeffect.RippleView>


                <TextView
                    android:id="@+id/cl_txt_igap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/igap"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp20" />


                <Button
                    android:id="@+id/amr_btn_search"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="@string/md_searching_magnifying_glass"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp20" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#34a49f" />
        </LinearLayout>

    </com.iGap.module.MyAppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cl_recycler_view_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

    </android.support.v7.widget.RecyclerView>

    <com.iGap.libs.floatingAddButton.ArcMenu
        android:id="@+id/ac_arc_button_add"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        android:layout_gravity="bottom|right"
        app:borderWidth="0dp"
        app:menu_color="@color/green"
        app:menu_open="arc_left"
        app:menu_scr="@mipmap/plus">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/ac_fab_start_new_chat"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:src="@mipmap/single_chat"
            app:backgroundTint="@color/green" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/ac_fab_crate_new_group"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:src="@mipmap/group_chat"
            app:backgroundTint="@color/green" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/ac_fab_crate_new_channel"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:src="@mipmap/channel_white"
            app:backgroundTint="@color/green" />

    </com.iGap.libs.floatingAddButton.ArcMenu>
</com.iGap.module.NotTouchableCoordinatorLayout>
