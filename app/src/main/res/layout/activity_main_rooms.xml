<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?backgroundColorSettingTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:id="@+id/amr_layout_root">

    <include
        android:id="@+id/empty_icon"
        layout="@layout/empty_layout"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/amr_layout_selected_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_for_below_layouts_of_toolbar_with_search"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/amr_layout_selected_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp32"
            android:paddingBottom="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/amr_btn_read_all_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_button_disabled_bg"
                android:fontFamily="@font/main_font"
                android:gravity="center"
                android:paddingLeft="@dimen/round_buttons_large_padding"
                android:paddingRight="@dimen/round_buttons_large_padding"
                android:singleLine="true"
                android:text="@string/read_all"
                android:textColor="@color/gray_4c"
                android:textSize="@dimen/smallTextSize" />


            <TextView
                android:id="@+id/amr_btn_make_as_read_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round_button_disabled_bg"
                android:fontFamily="@font/main_font"
                android:gravity="center"
                android:paddingLeft="@dimen/round_buttons_large_padding"
                android:paddingRight="@dimen/round_buttons_large_padding"
                android:singleLine="true"
                android:text="@string/make_as_read"
                android:textColor="@color/gray_4c"
                android:textSize="@dimen/smallTextSize" />


            <TextView
                android:id="@+id/amr_btn_delete_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round_button_disabled_bg"
                android:fontFamily="@font/main_font"
                android:gravity="center"
                android:paddingLeft="@dimen/round_buttons_large_padding"
                android:paddingRight="@dimen/round_buttons_large_padding"
                android:singleLine="true"
                android:text="@string/delete"
                android:textColor="@color/gray_4c"
                android:textSize="@dimen/smallTextSize" />


            <TextView
                android:id="@+id/amr_btn_clear_cache_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/round_button_disabled_bg"
                android:fontFamily="@font/main_font"
                android:gravity="center"
                android:paddingLeft="@dimen/round_buttons_large_padding"
                android:paddingRight="@dimen/round_buttons_large_padding"
                android:singleLine="true"
                android:text="@string/clear_history"
                android:textColor="@color/gray_4c"
                android:textSize="@dimen/smallTextSize" />


        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cl_recycler_view_contact"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="@dimen/dp24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amr_layout_selected_root" />

    <LinearLayout
        android:id="@+id/amr_layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/toolbar_height_root_with_search"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/ac_progress_bar_waiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:padding="@dimen/dp4"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/cl_recycler_view_contact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/switchAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>