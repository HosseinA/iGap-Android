<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:gravity="left|center">

    <ImageView
        android:id="@+id/mln_img_picture_music"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        android:layout_margin="@dimen/dp4"
        android:src="@mipmap/music_icon_green" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mln_txt_music_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="music name"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />

            <ImageView
                android:id="@+id/mln_btn_close"
                android:layout_width="@dimen/dp32"
                android:layout_height="@dimen/dp20"
                android:gravity="top|center"
                android:src="@mipmap/cross" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/mln_btn_Previous_music"
                android:layout_width="@dimen/dp32"
                android:layout_height="@dimen/dp32"
                android:padding="@dimen/dp6"
                android:layout_marginLeft="@dimen/dp8"
                android:gravity="center"
                android:src="@mipmap/previous_track" />

            <ImageView
                android:id="@+id/mln_btn_play_music"
                android:layout_width="@dimen/dp32"
                android:layout_height="@dimen/dp32"
                android:padding="@dimen/dp6"
                android:layout_marginLeft="@dimen/dp40"
                android:layout_marginRight="@dimen/dp40"
                android:gravity="center"
                android:src="@mipmap/play_button" />

            <ImageView
                android:id="@+id/mln_btn_forward_music"
                android:layout_width="@dimen/dp32"
                android:layout_height="@dimen/dp32"
                android:padding="@dimen/dp6"
                android:gravity="center"
                android:src="@mipmap/play_next_button" />

            <TextView
                android:id="@+id/mln_txt_music_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp14"
                android:layout_weight="1"
                android:paddingRight="@dimen/dp8"
                android:gravity="right"
                android:singleLine="true"
                android:paddingTop="@dimen/dp8"
                android:text="10:52"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
