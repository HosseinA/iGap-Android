<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/stfaq_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="@color/toolbar_background"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.SearchView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/MySearch"
                android:id="@+id/stfaq_searchView"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/stfaq_allLayout_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <com.iGap.module.MaterialDesignTextView
                    android:id="@+id/stfaq_txt_back"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/md_close_button"
                    android:textColor="@color/whit_background"
                    android:textSize="@dimen/sp22" />

                <TextView
                    android:id="@+id/stfaq_txt_titleToolbar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="www.iGap.com"
                    android:textColor="@color/whit_background"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <com.iGap.module.MaterialDesignTextView
                    android:id="@+id/stfaq_txt_share"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="@string/md_share_button"
                    android:textColor="@color/whit_background"
                    android:textSize="@dimen/sp22" />

                <com.iGap.module.MaterialDesignTextView
                    android:id="@+id/stfaq_txt_menuPopup"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="@string/md_show_more_button"
                    android:textColor="@color/whit_background"
                    android:textSize="@dimen/sp22" />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ProgressBar
        android:id="@+id/stfaq_progressBar"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp4"
        android:layout_below="@+id/stfaq_toolbar"

        android:background="@color/toolbar_background" />

    <WebView
        android:id="@+id/stfaq_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/stfaq_progressBar" />
</RelativeLayout>
