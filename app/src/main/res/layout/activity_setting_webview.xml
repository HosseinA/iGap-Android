<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layoutDirection="ltr"
        android:id="@+id/stfaq_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="@color/toolbar_background"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.SearchView
                android:id="@+id/stfaq_searchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/SearchViewToolbar"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/stfaq_allLayout_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.iGap.libs.rippleeffect.RippleView
                    android:id="@+id/stfaq_riple_back"
                    rv_centered="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rv_alpha="200"
                    app:rv_centered="true"
                    app:rv_rippleDuration="150"
                    app:rv_ripplePadding="5dp">

                    <com.iGap.module.MaterialDesignTextView
                        android:id="@+id/stfaq_txt_back"
                        fontPath="fonts/Flaticon.ttf"
                        android:layout_width="@dimen/dp52"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/md_close_button"
                        android:textColor="@color/whit_background"
                        android:textSize="@dimen/sp18" />
                </com.iGap.libs.rippleeffect.RippleView>

                <TextView
                    android:id="@+id/stfaq_txt_titleToolbar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="www.iGap.com"
                    android:textColor="@color/whit_background"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <com.iGap.libs.rippleeffect.RippleView
                    android:id="@+id/stfaq_ripple_share"
                    rv_centered="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rv_alpha="200"
                    app:rv_centered="true"
                    app:rv_rippleDuration="150"
                    app:rv_ripplePadding="5dp">

                    <com.iGap.module.MaterialDesignTextView
                        android:id="@+id/stfaq_txt_share"
                        fontPath="fonts/Flaticon.ttf"
                        android:layout_width="@dimen/dp52"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:text="@string/md_share_button"
                        android:textColor="@color/whit_background"
                        android:textSize="@dimen/sp18" />

                </com.iGap.libs.rippleeffect.RippleView>

                <com.iGap.libs.rippleeffect.RippleView
                    android:id="@+id/stfaq_ripple_menuPopup"
                    rv_centered="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rv_alpha="200"
                    app:rv_centered="true"
                    app:rv_rippleDuration="150"
                    app:rv_ripplePadding="5dp">

                    <com.iGap.module.MaterialDesignTextView
                        android:id="@+id/stfaq_txt_menuPopup"
                        fontPath="fonts/Flaticon.ttf"
                        android:layout_width="@dimen/dp52"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:text="@string/md_show_more_button"
                        android:textColor="@color/whit_background"
                        android:textSize="@dimen/sp18"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>
                </com.iGap.libs.rippleeffect.RippleView>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ProgressBar
        android:id="@+id/stfaq_progressBar"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp4"
        android:layout_below="@+id/stfaq_toolbar"
        android:background="@color/toolbar_background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#34a49f"
        android:layout_alignTop="@+id/stfaq_webView"
        />

    <WebView
        android:id="@+id/stfaq_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/stfaq_progressBar" />
</RelativeLayout>
