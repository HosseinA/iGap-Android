<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/replayLayoutAboveEditText"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp48"
              android:background="?android:attr/windowBackground"
              android:clickable="true"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/replyIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/dp4"
        android:contentDescription="@null"
        android:src="@drawable/ic_reply"/>

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/dp4"
        android:contentDescription="@null"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="@dimen/dp6"
        android:orientation="vertical">

        <io.github.meness.emoji.EmojiTextView
            android:id="@+id/replyFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAMPLE TEXT"
            android:textColor="@color/green"
            android:textStyle="bold"/>

        <io.github.meness.emoji.EmojiTextView
            android:id="@+id/replayTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAMPLE TEXT"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/cancelIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_gray_cancel"/>

</LinearLayout>