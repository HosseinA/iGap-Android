<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/chatSubLayoutVideo"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="@dimen/dp4"
             android:maxWidth="@dimen/chatBoxMaxWidth"
             android:textDirection="firstStrong">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <com.iGap.module.CircleImageView
            android:id="@+id/messageSenderAvatar"
            android:layout_width="@dimen/dp52"
            android:layout_height="@dimen/dp52"
            android:layout_marginRight="@dimen/dp8"
            android:src="@mipmap/empty"/>

        <android.support.v7.widget.CardView
            android:id="@+id/contentContainer"
            style="@style/ChatMessages.CardView">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/replayLayout"
                    layout="@layout/chat_sub_layout_reply"/>

                <include
                    android:id="@+id/cslr_ll_forward"
                    layout="@layout/chat_sub_layout_forward"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.iGap.module.ReserveSpaceRoundedImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:layout_marginBottom="-2dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/bg_message_image_time"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp4"
                        android:paddingRight="@dimen/dp4"
                        android:paddingTop="1dp"
                        android:text="3:48 (4.5 MB)"
                        android:textAllCaps="true"
                        android:textColor="@color/gray10"
                        android:textSize="@dimen/sp10"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="4dp"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/bg_message_image_time"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="1dp"
                        >

                        <TextView
                            android:id="@+id/cslr_txt_time"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_marginBottom="-1dp"
                            android:gravity="center"
                            android:text="10:21"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp10"/>

                        <ImageView
                            android:id="@+id/cslr_txt_tic"
                            style="@style/ChatMessages.MaterialDesignTextView.Tick"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="@dimen/dp4"
                            android:src="@drawable/ic_clock"
                            android:tint="@color/green"/>
                    </LinearLayout>

                    <include
                        android:id="@+id/progress"
                        layout="@layout/msg_progress_item"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"/>
                </FrameLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>