<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatSubLayoutVideo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    android:padding="@dimen/dp4">

    <FrameLayout
        android:id="@+id/cslr_ll_frame"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_round_white"
        android:padding="@dimen/dp4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/cslr_ll_content_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/cslr_ll_forward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forward message"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/cslr_txt_forward_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp8"
                        android:text=""
                        android:textSize="@dimen/sp14" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/cslv_imv_vido_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="@dimen/dp360"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/sd" />

                    <ImageButton
                        android:id="@+id/cslv_btn_play_video"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/play" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp20">

                    <TextView
                        android:id="@+id/cslr_txt_message"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:maxWidth="@dimen/dp300"
                        android:paddingRight="@dimen/dp4"
                        android:paddingTop="@dimen/dp4"
                        android:text="TEST TEXT"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp16" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cslv_txt_video_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="@dimen/dp200"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp16" />

                        <TextView
                            android:id="@+id/cslv_txt_video_mime_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="@dimen/dp88"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp16" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/cslv_txt_vido_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp12" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cslr_ll_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:gravity="bottom|left"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/cslr_txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:21"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/cslr_txt_tic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp4"
                android:layout_marginRight="@dimen/dp4"
                android:gravity="bottom"
                android:text="@string/fa_clock_o"
                android:textColor="@color/green"
                android:textSize="@dimen/sp16" />


        </LinearLayout>

    </FrameLayout>

</FrameLayout>