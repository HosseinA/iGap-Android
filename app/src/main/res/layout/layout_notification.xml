<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notification_gradiant"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ln_imv_avatar_notification_big"
        android:layout_width="@dimen/dp48"
        android:layout_height="@dimen/dp48"
        android:layout_gravity="left|top"
        android:layout_marginLeft="@dimen/dp4"
        android:layout_marginTop="@dimen/dp12"
        android:src="@mipmap/logo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp4"
        android:layout_marginTop="@dimen/dp24"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ln_ll_message_a"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ln_txt_a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hasan : "
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/ln_txt_a2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="how are you"

                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/ln_txt_a3"
                android:gravity="right"
                android:layout_width="@dimen/dp48"
                android:paddingLeft="@dimen/dp8"
                android:layout_height="wrap_content"
                android:text="10:52"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_ll_message_b"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ln_txt_b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hasan : "
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/ln_txt_b2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="how are you"

                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/ln_txt_b3"
                android:layout_width="@dimen/dp48"
                android:gravity="right"
                android:paddingLeft="@dimen/dp8"
                android:layout_height="wrap_content"
                android:text="10:52"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_ll_message_c"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ln_txt_c1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hasan : "
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/ln_txt_c2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="how are you"

                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/ln_txt_c3"
                android:layout_width="@dimen/dp48"
                android:gravity="right"
                android:paddingLeft="@dimen/dp8"
                android:layout_height="wrap_content"
                android:text="10:52"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_ll_message_d"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ln_txt_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hasan : "
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/ln_txt_d2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="how are you"

                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/ln_txt_d3"
                android:layout_width="@dimen/dp48"
                android:gravity="right"
                android:paddingLeft="@dimen/dp8"
                android:layout_height="wrap_content"
                android:text="10:52"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />

        </LinearLayout>

        <TextView
            android:id="@+id/ln_txt_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textColor="@color/white"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/dp8"
            android:textSize="@dimen/sp12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_height="1px"
            android:background="@color/white"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp8"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mln_btn_replay"
                android:layout_width="@dimen/dp32"
                android:padding="@dimen/dp4"
                android:layout_height="@dimen/dp28"
                android:gravity="top|center"
                android:src="@mipmap/reply_icon" />

            <TextView
                android:id="@+id/ln_txt_replay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REPLAY"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/ln_txt_unread_message"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingLeft="@dimen/dp8"
                android:layout_height="wrap_content"
                android:text="you have 10 new message"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/mln_btn_close"
        android:padding="@dimen/dp8"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"


        android:src="@mipmap/cross" />

</LinearLayout>