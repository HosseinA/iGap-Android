<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatSubLayoutFile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp4"
    android:maxWidth="@dimen/dp300"
    android:textDirection="firstStrong"
    >

  <LinearLayout
      android:id="@+id/mainContainer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      tools:ignore="UselessParent"
      >

    <com.iGap.module.CircleImageView
        android:id="@+id/messageSenderAvatar"
        android:layout_width="@dimen/dp52"
        android:layout_height="@dimen/dp52"
        android:layout_marginRight="@dimen/dp8"
        android:src="@mipmap/b"
        />

    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_round_white"
        android:orientation="vertical"
        android:padding="@dimen/messageContainerPadding"
        >

      <include
          layout="@layout/chat_sub_layout_replay"
          android:id="@+id/replayLayout"
          />

      <include
          layout="@layout/chat_sub_layout_forward"
          android:id="@+id/cslr_ll_forward"
          />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:layoutDirection="ltr"
          android:minWidth="@dimen/dp140"
          android:orientation="horizontal"
          >

        <FrameLayout
            android:layout_width="@dimen/dp88"
            android:layout_height="@dimen/dp88"
            >

          <ImageView
              android:id="@+id/thumbnail"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/gray_bg_rounded_corner"
              android:scaleType="fitXY"
              />

          <include
              layout="@layout/msg_progress_item"
              android:id="@+id/progress"
              android:layout_width="56dp"
              android:layout_height="56dp"
              android:layout_gravity="center"
              />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp8"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/songArtist"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:text="file_name.ext"
              android:textAllCaps="true"
              android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
              android:textColor="@android:color/black"
              android:textStyle="bold"
              />

          <TextView
              android:id="@+id/fileSize"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:text="3.2 mb"
              android:textAllCaps="true"
              android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
              android:textColor="@color/gray"
              />

        </LinearLayout>

      </LinearLayout>

      <com.iGap.module.EmojiTextView
          android:id="@+id/messageText"
          android:layout_marginTop="@dimen/dp20"
          android:text="SAMPLE TEXT"
          android:textColor="@android:color/black"
          style="@style/ChatMessages.EmojiTextView"
          />

      <include
          layout="@layout/chat_sub_layout_messages_time"
          android:id="@+id/cslr_ll_time"
          />
    </LinearLayout>
  </LinearLayout>
</FrameLayout>