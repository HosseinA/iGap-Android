<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/kuknos_wHistoryCell_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/kuknos_wh_list_item_style"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <android.support.v7.widget.AppCompatTextView
            style="?textTitleColorSettingTheme"
            android:id="@+id/kuknos_wHistoryCell_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="38dp"
            android:layout_weight="5"
            android:text="To Amir"
            android:textSize="@dimen/dp12"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>

        <android.support.v7.widget.AppCompatTextView
            style="@style/myIconTextViewStyleGray"
            android:id="@+id/kuknos_wHistoryCell_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/download_ic"
            android:textSize="@dimen/dp28"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>

        <android.support.v7.widget.AppCompatTextView
            style="?textTitleColorSettingTheme"
            android:id="@+id/kuknos_wHistoryCell_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="38dp"
            android:layout_weight="4"
            android:text="2018/06/15"
            android:textSize="@dimen/dp12"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>

        <android.support.v7.widget.AppCompatTextView
            style="?textTitleColorSettingTheme"
            android:id="@+id/kuknos_wHistoryCell_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="38dp"
            android:layout_weight="2"
            android:text="2120"
            android:textSize="@dimen/dp12"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>

        <android.support.v7.widget.AppCompatTextView
            style="?textTitleColorSettingTheme"
            android:id="@+id/kuknos_wHistoryCell_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="38dp"
            android:layout_weight="4"
            android:text="20.012"
            android:textSize="@dimen/dp12"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    
</android.support.constraint.ConstraintLayout>