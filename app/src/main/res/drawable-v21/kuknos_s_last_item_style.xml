<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:exitFadeDuration="@android:integer/config_mediumAnimTime">
    <item android:state_pressed="true">
        <layer-list>
            <item android:right="@dimen/dp40" android:left="@dimen/dp40" android:top="5dp" android:bottom="5dp">
                <shape android:shape="rectangle">
                    <solid android:color="?colorAccentDark" />
                    <corners android:radius="50dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <color android:color="?iGapCardViewColor" />
            </item>
            <item android:right="@dimen/dp40" android:left="@dimen/dp40" android:top="5dp" android:bottom="5dp">
                <shape android:shape="rectangle">
                    <solid android:color="?iGapButtonColor" />
                    <corners android:radius="50dp" />
                    <!--<padding android:top="5dp"
                        android:bottom="5dp"/>-->
                </shape>
            </item>
            <item android:right="@dimen/dp40" android:left="@dimen/dp40" android:top="5dp" android:bottom="5dp">
                <ripple android:color="?colorAccentDark" tools:targetApi="lollipop">
                    <item android:id="@android:id/mask">
                        <shape android:shape="rectangle">
                            <solid android:color="?iGapButtonColor" />
                            <corners android:radius="50dp" />
                        </shape>
                    </item>
                </ripple>
            </item>

        </layer-list>
    </item>
</selector>